<?xml version="1.0" encoding="UTF-8"?>
<odoo>

 	<record id="hr_applicant_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.applicant.view.form.inherit</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[4]" position="after">
                <group string="Address">
                    <field name="address"/>
                    <field name="city"/>
                    <field name="code_postal"/>
                    <field name="actual_post"/>
                    <field name="country_id"/>                    
                </group>
                <group string="Candidate">
                    <field name="agglomeration_id"/>  
                    <field name="job_type_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="hr_job_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.job.view.form.inherit</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="job_type_id"/>
                <field name="job_tag_ids" widget="many2many"/>
            </xpath>
        </field>
    </record>
    
    
    <record id="hr_employee_view_form_inherit_argos" model="ir.ui.view">
      <field name="name">hr.employee.view.form.inherit.argos</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <field name="company_id" position="after">
          <field name="note"/>
          </field>
          </field>
    </record>
    
    
    
</odoo>