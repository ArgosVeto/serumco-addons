							                <input type="text" class="form-control o_website_form_input" name="code_postal" required=""/>
							            </div>

							            <div class="col-md-4">
							                <label class="col-form-label" for="city">Ville</label>
							                <input type="text" class="form-control o_website_form_input" name="city" required=""/>
							            </div>	
							            <div class="col-md-4">
							                <label class="col-form-label" for="country_id">Pays</label>
							                <div class="selection-div sel-pays">
								               <select id="country_id" name="country_id" t-attf-class="form-control">
							                        <option value="">sélectionner...</option>
							                        <t t-foreach="country_ids" t-as="c">
