      <div class="oe_structure"/>
      <section class="home-animals">
        <div class="container">
          <div class="animals-content">
            <div class="blue-round-small"/>
            <div class="red-round-big"/>
            <div class="row">
              <div class="col-md-6 px16">
                <div class="image-box mb32">
                  <div class="image">
                    <img src="/website_argos/static/src/img/home_chat.jpg" class="img img-fluid"/>
                  </div>
                  <div class="text">
                    <p class="animal-name text-white">CHAT</p>
                    <h6 class="text-white w-283">Retrouvez les produits favoris de votre félin</h6>
                  </div>
