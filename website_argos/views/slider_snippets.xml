<odoo>
		<!-- Slider snippets  -->

    <template id="product_slider_snippet_load" inherit_id="website.snippets">
       <xpath expr="//div[@id='snippet_mega_menu']" position="before">
       		<div id="slider_snippet_menu" class="o_panel">
				<div class="o_panel_header">
					<i class="fa fa-puzzle-piece" />
					Product Sliders Snippets
				</div>
				<div class="o_panel_body">
		           <t t-snippet="website_argos.s_website_argos_product_slider" t-thumbnail="/website_argos/static/description/icon.png" />
		           <t t-snippet="website_argos.s_bizople_theme_multi_product_tab_snippet" t-thumbnail="/website_argos/static/description/icon.png" />
		           <t t-snippet="website_argos.s_bizople_theme_blog_slider_snippet" t-thumbnail="/website_argos/static/description/icon.png" />
		           <t t-snippet="website_argos.s_bizople_theme_category_slider" t-thumbnail="/website_argos/static/description/icon.png" />
		       </div>
	       </div>
        </xpath>
    </template>

    <!-- Product Slider  -->
    
	<template id="s_website_argos_product_slider"
		name="Products Slider">
		<section id="website_argos_custom_product_slider"
			class="biz_dynamic_product_slider s_website_argos_product_slider"
			contentEditable="false" data-prod-slider-id="">
			<div class="container">
				<div class="block-title">
					<h3 class="filter">Product Slider</h3>
				</div>
			</div>
		</section>
	</template>

	<template id="website_argos_product_slider_option"
		inherit_id="website.snippet_options" name="Filter Options">
		<xpath expr="//div" position="after">
			<div data-js="website_argos_product_slider"
				data-selector=".biz_dynamic_product_slider">
				<li data-prod_slider="">
					<a class="biz_dynamic_product_slider">Filter</a>
				</li>
			</div>
		</xpath>
	</template>
	<template id="website_argos_product_slider_view"
		name="Products Slider">
		<div class="container">
			<div class="block-title">
				<h3 class="filter" t-if="not slider_header">Products Slider</h3>
				<h3 class="filter" t-if="slider_header">
					<t t-esc="slider_header.name" />
				</h3>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="owl-carousel"
					t-att-id="'%s-%s' % (slider_header.name.lower().replace (' ', '-'), slider_header.id)"
					t-if="slider_details">
					<t t-as="product" t-foreach="slider_details">
						<div class="carousel-item">
							<t t-set="combination_info"
								t-value="product._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)" />
							<div class="product-item"
								t-att-data-publish="product.website_published and 'on' or 'off'">
								<t t-if="combination_info['has_discounted_price']">
	                               <t t-set="diff_amount"
	                                  t-value="round(combination_info['list_price'] - combination_info['price'],2)"/>
	                               <t t-set="dis_per"
	                                  t-value="round(diff_amount*100/combination_info['list_price'])"/>
	                                   <div class="argos-product-discount-label">
	                                       <span class="argos-pro-label-disc"> 
	                                       	<t t-esc="'-'+'%s'%(dis_per)+'&#x25;'"/></span>
	                                   </div>
                             	</t>
                             	<div class="slider-icons">
									<div class="wislist_biz d-inline-block">
										<t
											t-if="product.env.ref('website_sale_wishlist.add_to_wishlist').active and product.product_variant_ids">
											<t t-set="in_wish"
											t-value="product.product_variant_ids &amp; request.env['product.wishlist'].current().mapped('product_id')" />
											<button class="btn btn-link o_add_wishlist"
											t-att-disabled='in_wish or None' title="Add to Wishlist"
											t-att-data-product-product-id="product.product_variant_ids[0].id"
											data-action="o_wishlist">
											<img src="/website_argos/static/src/img/heart.png" class="img img-fluid"/>
										</button>
										</t>
									</div>
									<t t-if="product.tag_ids">
										<div class="argos_tags">
											<p>
												<t t-foreach="product.tag_ids" t-as="tags">
								            		<div class="tag-name">
								            			<a t-att-href="'/shop?tag_id=%s' % tags.id" class="btn btn-outline-secondary rounded-circle btn-sm">
						                                    <t t-esc="tags.name"/>
						                                </a>
								            		</div>
								            	</t>
								            </p>
										</div>
							        </t>
								</div>
            <div class="card-body p-1 oe_product_image">
 								<div class="p-item-image"> 
									<a t-att-href="'/shop/product/%s' % slug(product)">
										<img class="front" t-att-alt="product.name"
											t-att-title="product.name"
											t-att-src="website.image_url(product, 'image_1920','314x385')" />
									</a>
								</div> 
            </div>
            <div class="card-body p-0 text-center o_wsale_product_information">
								<div class="product-info"> 
									<t t-if="product.public_categ_ids">
		                                <div class="argos_categ">
		                                    <p>
		                                        <t t-foreach="product.public_categ_ids" t-as="categs">
		                                            <a t-att-href="'/shop/category/%s' % slug(categs)">
		                                                <span class="categ-name">
		                                                    <t t-esc="categs.name"/>
		                                                </span>
		                                            </a>
		                                        </t>
		                                    </p>
		                                </div>
		                            </t>
									<div class="title-price" style="min-height: 100px;">
										<div class="product-title">
											<a t-attf-href="/shop/product/#{ slug(product) }">
												<span t-esc='product and product.description_sale' />
											</a>
										</div>
										<div class="slider-product-rating">
											<t t-call="website_argos.product_item_stars"/>
										</div>
									</div>
									<div class="o_wsale_product_btn" style='vertical-align: bottom;'>
										<form action="/shop/cart/update" method="post">
											<input type="hidden" name="csrf_token"
												t-att-value="request.csrf_token()" />
											<input name="product_id"
												t-att-value="product.product_variant_id.id" type="hidden" />
											<div class="cart_div_biz d-inline-block">
												<input type="hidden" name="csrf_token"
													t-att-value="request.csrf_token()" />
												<input name="product_id"
													t-att-value="product.product_variant_id.id" type="hidden" />
												<button class="btn btn-link a-submit d-inline-block"><img src="/website_argos/static/src/img/cart.png" class="img img-fluid"/>Ajouter
												<span class="text-primary ml-1 mr-1 text-bold"> - </span>
												<t t-call="website_sale.product_price" t-if="product"/>
											</button>
											</div>
										</form>
									</div> 
            </div>
								</div>
							</div>
						</div>
					</t>
				</div>
			</div>
		</div>
		<div class="bottom-text text-center justify-content-center">
			<a href="/shop">
				<span class="mr-2">Tous les produits</span>
				<span><img src="/website_argos/static/src/img/right.png"/></span>
			</a>
		</div>
