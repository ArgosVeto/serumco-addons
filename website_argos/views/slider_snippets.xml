				<div class="wislist_biz d-inline-block">
					<t
						t-if="product.env.ref('website_sale_wishlist.add_to_wishlist').active and product.product_variant_ids">
						<t t-set="in_wish"
						t-value="product.product_variant_ids &amp; request.env['product.wishlist'].current().mapped('product_id')" />
						<button class="btn btn-link o_add_wishlist"
						t-att-disabled='in_wish or None' title="Add to Wishlist"
						t-att-data-product-product-id="product.product_variant_ids[0].id"
						data-action="o_wishlist">
						<img src="/website_argos/static/src/img/heart.png" class="img img-fluid"/>
					</button>
					</t>
				</div>
				<t t-if="product.tag_ids">
					<div class="argos_tags">
						<p>
							<t t-foreach="product.tag_ids" t-as="tags">
			            		<div class="tag-name">
			            			<a t-att-href="'/shop?tag_id=%s' % tags.id" class="">
                                    <t t-esc="tags.name"/>
                                </a>
			            		</div>
			            	</t>
			            </p>
					</div>
		        </t>
			</div>
			<div class="p-item-image">
				<a t-att-href="'/shop/product/%s' % slug(product)">
					<img class="front" t-att-alt="product.name"
						t-att-title="product.name"
						t-att-src="website.image_url(product, 'image_1920','314x385')" />
				</a>
			</div>
			<div class="pwp-info">
				<t t-if="product.public_categ_ids">
                    <div class="argos_categ">
                        <p>
                            <t t-foreach="product.public_categ_ids" t-as="categs">
                                <a t-att-href="'/shop/category/%s' % slug(categs)">
                                    <span class="categ-name">
                                        <t t-esc="categs.name"/>
                                    </span>
                                </a>
                            </t>
                        </p>
                    </div>
                </t>
				<div class="title-price">
					<h3 class="pwpi-title">
						<a t-attf-href="/shop/product/#{ slug(product) }">
							<span t-field='product.name' />
						</a>
					</h3>
					<div class="slider-product-rating">
						<t t-call="website_argos.product_item_stars"/>
					</div>
				</div>
				<div class="o_wsale_product_btn">
					<form action="/shop/cart/update" method="post">
						<input type="hidden" name="csrf_token"
							t-att-value="request.csrf_token()" />
						<input name="product_id"
							t-att-value="product.product_variant_id.id" type="hidden" />
						<div class="cart_div_biz d-inline-block">
							<input type="hidden" name="csrf_token"
								t-att-value="request.csrf_token()" />
							<input name="product_id"
								t-att-value="product.product_variant_id.id" type="hidden" />
							<button class="btn btn-link a-submit d-inline-block"><img src="/website_argos/static/src/img/cart.png" class="img img-fluid"/> Ajouter
							<span class="text-primary ml-1 mr-1 text-bold"> - </span>
							<t t-call="website_sale.product_price" t-if="product" />
						</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</template>
	
	<!-- Category Slider  -->
	
	<template id="s_bizople_theme_category_slider" name="Category Slider">
        <section id="website_argos_custom_category_slider_3" class="cat_slider_3 categ_slider bizcommon_category_slider_3" contentEditable="false" data-cat-slider-id=""  data-disp='category_snippet'>
            <div class="container">
                <div class="block-title">
                    <h3 class="filter">Category Slider</h3>
                </div>
            </div>
        </section>
    </template>
    <template id="s_bizople_theme_category_slider_option" inherit_id="website.snippet_options" name="Filter Options">
        <xpath expr="//div" position="after">
            <div data-js="cat_slider_3" data-selector=".cat_slider_3">
                <li data-cat_slider="">
                    <we-button class="dropdown-item cat_slider_3" tabindex="-1" href="#" data-cat_slider="">Filter</we-button>
                </li>
            </div>
        </xpath>
    </template>
    <template id="s_bizople_theme_category_slider_view" name="Category">
        <div class="container">
            <div class="row top-row title-block">
                <h2 class="col-md-12 section-title" t-if="not slider_header">
                    Category Slider
                </h2>
                <h2 class="col-md-12 section-title" t-if="slider_header">
                    <t t-esc="slider_header.name"/>
                </h2>
            </div>
            <div class="row bottom-row categories">
                <div id="carousel_category" class="col-md-12 category-slider owl-carousel">
                    <t t-as="slide" t-foreach="slider_details">
                        <div class="item sli-cat">
                            <a t-att-href=" '/shop/category/%s' % slug(slide)">
                                <div class="sli-cat-img">
                                    <img t-att-alt="slide.name" t-att-src="website.image_url(slide, 'image_1920')" t-att-title="slide.name"/>
                                </div>
                                <div class='comm_cat_title'>
                                    <p class="sli-cat-title">
                                        <t t-esc="slide.name"/>
                                    </p>
                                </div>
                            </a>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </template>
    
    <!-- blog Slider  -->
	
	<template id="s_bizople_theme_blog_slider_snippet" name="Blog Slider">
        <section id="biz_blog_slider_snippet" class="blog blog_slider_owl oe_img_bg" data-blog-slider-id="" data-blog-slider-type="" data-disp="blog">
            <div class="container">
                <div class="block-title">
                    <h2 class="filter">Blog post</h2>
                </div>
            </div>
        </section>
    </template>
    <template id="s_bizople_theme_blog_slider_snippet_option" inherit_id="website.snippet_options" name="Filter Options">
        <xpath expr="//div" position="after">
            <div data-js="s_bizople_theme_blog_slider_snippet" data-selector=".blog_slider_owl" data-snippet-option-id="s_bizople_theme_blog_slider_snippet">
                <li data-website_argos_blog_slider="">
                    <we-button class="dropdown-item blog_slider_owl" tabindex="-1" href="#" data-website_argos_blog_slider="">Filter</we-button>
                </li>
            </div>
        </xpath>
    </template>
    <template id="bizcommon_blog_slider_view" name="Blog Slider View">
        <div class="container">
            <div class="block-title">
                <h2 class="filter" t-if="not slider_header">Blog post</h2>
                <h2 class="" t-if="slider_header">
                    <t t-esc="slider_header.name"/>
                </h2>
            </div>
            <div id='blog_2_owl_carosel' class="owl-carousel" t-if="blog_slider_details">
                <t t-as="slide" t-foreach="blog_slider_details">
                    <div class="comm_blog_box">
                    	<a t-attf-href="/blog/#{slug(slide.blog_id)}/post/#{slug(slide)}" class='slider-blog-image' t-if="slide.cover_properties">
                            <t t-set="cover_property" t-value="json.loads(slide.cover_properties)"/>
                            <div class="section-post-media" t-attf-style="background-image: #{cover_property.get('background-image', 'none')}" t-if="slide.cover_properties">
                            </div>
                            <div class="tag d-flex align-items-center">
								<t t-foreach="slide.tag_ids" t-as="ptag">
									<p class="mr-1"><t t-esc="ptag.name" /></p>
								</t>
							</div>
                            <div class='comm_base_class'>
	                            <div class="date-post text-primary d-flex text-center mt-1">
	                            	<div class="date_span mr-1 pos" t-field="slide.post_date"
									t-options='{"format": "dd"}'/>
									<div class="month_span mr-1 pos" t-field="slide.post_date"
									t-options='{"format": "MMMM"}' />
									<div class="month_span mr-1 pos" t-field="slide.post_date"
									t-options='{"format": "yyy"}' />
									
								</div>
                                <h3 t-field="slide.name" class=""/>
                                <div class="comm_hover_blog_content">
                                    <t t-esc="slide.teaser" class=""/>
                                </div>
                            </div>
                        </a>
                    </div>
                </t>
            </div>
        </div>
        <div class="bottom-text text-center justify-content-center mt-4">
			<a href="/blog">
				<span class="mr-2">Tous les articles</span>
				<span><img src="/website_argos/static/src/img/right.png"/></span>
			</a>
		</div>
    </template>

