                                <span>De Criteres</span>
                            </a>
                            <div class="dropdown-menu" role="menu">
                                <a role="menuitem" t-attf-href="/nos-cliniques-veterinaires-2?clinic-parking=1" class="dropdown-item">
                                    <span class="switcher_pricelist">Parking</span>
                                </a>
                                <a role="menuitem" t-attf-href="/nos-cliniques-veterinaires-2?clinic-mobility=1" class="dropdown-item">
                                    <span class="switcher_pricelist">Accessibilité pour les personnes à mobilité réduite</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!--div class="see_map d-none d-md-block"><div class="custom-control custom-switch"><input type="checkbox" class="custom-control-input" id="customSwitch1"/><label class="custom-control-label" for="customSwitch1">Voir La Carte</label></div></div-->
                    <div class="clear-search mt8 ml8 clinic-type-b">
                        <a t-attf-href="/nos-cliniques-veterinaires-2?clear_search=1" class=" badge badge-pill badge-light">
                            <span>Réinitialiser</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>
        <t t-call="website_argos.clinic_grid"/>
        <div class="clearfix"/>
