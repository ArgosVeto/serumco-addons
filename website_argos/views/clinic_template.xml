<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="clinic_search_box" name="Clinic Searchbox">
		<div role="search">
			<form t-attf-class="o_clinic_searchbar_form input-group" t-att-action="action if action else '/nos-cliniques-veterinaires-2'" method="get">
				<input type="text" name="search" class="search-query form-control oe_search_box " placeholder="Département/code postal/ville..." t-att-value="search"/>
				<div class="se-btn">
					<button type="submit" class="btn btn-primary oe_search_button" aria-label="Search" title="Search">Rechercher</button>
				</div>
				<div id="planning_find_my_position">
                   <a role="button" target="" href="#" class="btn btn-outline-primary  ml-4">
                       <img src="/website_argos/static/src/img/location.svg" class="img img-fluid mr-2"/><span class="">Autour de moi</span>
                   </a>
                </div>
			</form>
		</div>
	</template>

	<template id="clinic_type_search_box" name="clinic Website Searchbox">
		<form class="o_clinic_type_searchbar_form" t-att-action="action if action else '/nos-cliniques-veterinaires-2'" method="get">
			<div class="col-md-12 search_by_clinic_type">
				<select id="clinic_type" name="clinic_type" class="form-control o_website_form_input">
					<t t-foreach="type_ids" t-as="t">
						<option>select....</option>
						<option t-att-value="t.name" t-att-id="t.id" t-att-class="t.name">
							<t t-esc="t.name" />
						</option>
					</t>
				</select>
			</div>
		</form>
	</template>

	<template id="service_type_search_tmp" name="Clinic Service Search">
		<t t-set="service" t-value="service_ids" />
		<div t-attf-class="dropdown">
			<t t-if="service_ids">
				<t t-set="service" t-value="service_ids"/>
				<t t-set="ss" t-value="service_ids[0]"/>
				<a role="button" href="#" class="dropdown-toggle btn ge btn-link" data-toggle="dropdown">
					<span>Services</span>
				</a>
				<div class="dropdown-menu service-list-group-item" role="menu" style="height: 250px; overflow-y: scroll">
					<t t-if="service">
						<t t-foreach="service" t-as="s">
							<a role="menuitem" t-attf-href="/nos-cliniques-veterinaires-2?service-type=#{s.sudo().id}" class="dropdown-item">
								<span t-att-name="s.name" t-att-data-pl_id="s.id" t-esc="s.name" />
							</a>
						</t>
					</t>
				</div>
			</t>
		</div>

	</template>

	<template id="agglomeration_search_tmp" name="Clinic aglomeration Search">
		<div t-attf-class="dropdown">
			<t t-if="agglomeration_ids">
				<t t-set="agglomeration" t-value="agglomeration_ids"/>
				<a role="button" href="#" class="dropdown-toggle btn ge btn-link" data-toggle="dropdown">
					<span>Agglomération</span>
				</a>
				<div class="dropdown-menu service-list-group-item" role="menu" style="height: 250px; overflow-y: scroll">
					<t t-if="agglomeration">
						<t t-foreach="agglomeration" t-as="s">
							<a role="menuitem" t-attf-href="/nos-cliniques-veterinaires-2?agglomeration=#{s.id}" class="dropdown-item">
								<span t-esc="s.name" />
							</a>
						</t>
					</t>
				</div>
			</t>
		</div>
	</template>

	<template id="clinic_type_search_tmp" name="Clinic Type Search">
		<t t-set="type_val" t-value="clinic_type_ids" />
		<t t-if="type_val">
			<div class="clinic-type-b">
				<a t-attf-href="/nos-cliniques-veterinaires-2?clinic-collect=1" class="mr-2 badge badge-pill badge-light">
					<span>Click &amp; Collect</span>
				</a>
				<a t-attf-href="/nos-cliniques-veterinaires-2?clinic-appoint=1" class="mr-2 badge badge-pill badge-light">
					<span>Prise de RDV en ligne</span>
				</a>
			</div>
		</t>
	</template>

	<template id="clinic_grid" name="clinic Grid with Data">
		<div class="s_text_block pt48 pb16 note-editable">
			<div class="container">
				<div class="row d-flex align-items-stretch">
					<t t-if="not operating_unit_ids">
						<div class="col-md-12 text-center text-secondary">
							<h3 class="text-secondary">No record found.</h3>
						</div>
					</t>
					<t t-if="operating_unit_ids">
						<t t-set="clinic_shortlisted" t-value="request.env.user.shortlisted_clinic_partner()"/>
						<t t-foreach="operating_unit_ids" t-as="operating_unit">
							<div class="col-lg-4 s_col_no_bgcolor pt16 pb16 clinic-grid card-deck">
								<div class="card bg-white">
									<t t-ignore="true" t-if="not user_id._is_public()">
										<img class="card-img-top" t-att-src="website.image_url(operating_unit, 'clinic_banner')"/>
										<t t-if="any(operating_unit.id == cs for cs in clinic_shortlisted)">
											<a role="button" class="btn-primary fav-btn disabled" t-attf-href="/add-clinic/#{operating_unit.sudo().id}">
												<img src="/website_argos/static/src/img/heart.svg"></img>
											</a>
										</t>
										<t t-else="">
											<a role="button" class="btn btn-primary fav-btn" t-attf-href="/add-clinic/#{operating_unit.sudo().id}">
												<img src="/website_argos/static/src/img/heart.svg"></img>
											</a>
										</t>
									</t>
									<t t-else="">
										<a role="button" class="btn btn-primary fav-btn" t-attf-href="/web/login">
											<img src="/website_argos/static/src/img/heart.svg"></img>
										</a>
									</t>

									<div class="card-body">
										<h3 class="card-title o_default_snippet_text">
											<a itemprop="display_name" t-att-content="operating_unit.name" t-field="operating_unit.name" t-attf-href="/nos-cliniques-veterinaires-2/clinique/#{slug(operating_unit.sudo())}"/>
										</h3>

										<t t-set="not_working_time" t-value="operating_unit.clinic_working_status()"/>

										<t t-if="not_working_time">
											<i class="fa fa-circle" style="color:#1ade8d;"></i>
											<span>Etablissement actuellement ouvert</span>
										</t>
										<t t-else="">
											<i class="fa fa-circle" style="color:red;"></i>
											<span>Etablissement actuellement fermé</span>
										</t>

										<div class="clinic-link d-flex">
											<div class="image-l">
												<img src="/website_argos/static/src/img/location.svg"/>
											</div>
											<div class="link">
												<span class="Avenue-Pasteur">
													<span class="street" t-field="operating_unit.street"/>
													<span>, </span>
													<span class="zip" t-field="operating_unit.zip"/>
													<span>, </span>
													<span class="city" t-field="operating_unit.city"/>
												</span>
											</div>
										</div>
									</div>
									<!--div class="card-footer">
				                                 <a role="button" target="" t-attf-href="tel:{{operating_unit.phone}}" class="btn btn-outline-primary d-xl-inline-block mr-2">
				                                    <img src="/website_argos/static/src/img/phone.svg" class="img img-fluid mr-2"/><span class="">Appeler</span>
				                                </a>
				                                 <a role="button" target="_blank" t-attf-href="/appointment-two?clinic_id=#{operating_unit.sudo().id}" class="btn btn-primary d-xl-inline-block mb16 mt16">
				                                    <span class="">Prendre RDV</span>
				                                </a>
				                         </div-->
								</div>
							</div>
						</t>
					</t>
				</div>
			</div>
		</div>
	</template>

