<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="add_address">
        <t t-set="no_footer">1</t>
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container oe_portal_address py-2">
                    <div class="row">
                        <div class="col-12">
                            <t t-call="website_sale.wizard_checkout">
                                <t t-set="step" t-value="20"/>
                            </t>
                        </div>
                        <div class="row o_portal_details">
                            <div class="col-lg-8 offset-lg-2 mt16 mb32">
                                <form action="/add-address" method="post" class="checkout_autoformat">
                                    <div class="form-row">
                                        <div class="col-md-12">
                                            <div t-if="error_message" class="alert alert-danger" role="alert">
                                                <t t-esc="error_message"/>
                                                <br/>
                                            </div>
                                        </div>
                                        <div t-attf-class="form-group col-md-4 div_name">
                                            <label class="col-form-label" for="name">Prénom *</label>
                                            <input type="text" name="firstname" t-attf-class="form-control o_website_form_input #{'firstname' in required_fields and 'is-invalid' or ''}" t-att-value="predefine_data and 'firstname' in predefine_data and predefine_data['firstname'] or partner_id and 'firstname' in partner_id and partner_id['firstname']"/>
                                        </div>
                                        <div class="col-md-1"/>
                                        <div t-attf-class="form-group col-md-4 div_name">
                                            <label class="col-form-label" for="name">Nom *</label>
                                            <input type="text" name="lastname" t-attf-class="form-control o_website_form_input #{'lastname' in required_fields and 'is-invalid' or ''}" t-att-value="predefine_data and 'lastname' in predefine_data and predefine_data['lastname'] or partner_id and 'lastname' in partner_id and partner_id['lastname']"/>
                                        </div>
                                        <div t-attf-class="form-group col-md-4 email">
                                            <label class="col-form-label" for="email">Adresse Email *</label>
                                            <input type="text" name="email" t-attf-class="form-control" t-att-value="predefine_data and 'email' in predefine_data and predefine_data['email'] or partner_id and 'email' in partner_id and partner_id['email']"/>
                                        </div>
                                        <div class="col-md-1"/>
                                        <div t-attf-class="form-group col-md-4 phone">
                                            <label class="col-form-label" for="phone">N° de téléphone *</label>
                                            <input type="text" name="phone" t-attf-class="form-control o_website_form_input #{'phone' in required_fields and 'is-invalid' or ''}" t-att-value="predefine_data and 'phone' in predefine_data and predefine_data['phone'] or partner_id and 'phone' in partner_id and partner_id['phone']"/>
                                        </div>
                                        <div t-attf-class="form-group col-md-12 street">
                                            <label class="col-form-label" for="street">Adresse *</label>
                                            <input type="text" name="street" t-attf-class="form-control o_website_form_input #{'street' in required_fields and 'is-invalid' or ''}" t-att-value="predefine_data and 'street' in predefine_data and predefine_data['street'] or partner_id and 'street' in partner_id and partner_id['street']"/>
                                        </div>
                                        <div t-attf-class="form-group col-md-12 street2">
                                            <label class="col-form-label" for="street2">Complément d'adresse</label>
                                            <input type="text" name="street2" t-attf-class="form-control o_website_form_input #{'street2' in required_fields and 'is-invalid' or ''}" t-att-value="predefine_data and 'street2' in predefine_data and predefine_data['street2'] or partner_id and 'street2' in partner_id and partner_id['street2']"/>
                                        </div>
                                        <div t-attf-class="form-group col-md-2 div_zip">
                                            <label class="col-form-label" for="zip">Code postal *</label>
                                            <input type="text" name="zip" t-attf-class="form-control" t-att-value="predefine_data and 'zip' in predefine_data and predefine_data['zip'] or partner_id and 'zip' in partner_id and partner_id['zip']"/>
                                        </div>
                                        <div t-attf-class="form-group col-md-6 div_city">
                                            <label class="col-form-label" for="city">Ville *</label>
                                            <input type="text" name="city" t-attf-class="form-control o_website_form_input #{'city' in required_fields and 'is-invalid' or ''}" t-att-value="predefine_data and 'city' in predefine_data and predefine_data['city'] or partner_id and 'city' in partner_id and partner_id['city']"/>
                                        </div>
                                        <div t-attf-class="form-group col-md-4 div_country">
                                            <label class="col-form-label" for="country_id">Pays *</label>
                                            <div class="selection-div sel-add">
                                                <select id="country_id" name="country_id" t-attf-class="form-control">
                                                    <option value="">Pays...</option>
                                                    <t t-foreach="countries" t-as="c">
                                                        <option t-att-value="c.id" t-att-selected="predefine_data and 'country_id' in predefine_data and predefine_data['country_id'] and int(predefine_data['country_id']) == c.id or partner_id and 'country_id' in partner_id and int(partner_id['country_id']) == c.id">
                                                            <t t-esc="c.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                        <!--div t-attf-class="form-group col-lg-6" id="div_state"><label class="col-form-label" for="state_id">State / Province</label><div class="selection-div sel-add"><select name="state_id" id="state_id" t-attf-class="form-control #{'state_id' in required_fields and 'is-invalid' or ''}"><option value="">État / Province</option></select></div></div-->
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="hidden" name="submitted" value="1"/>
                                        <input type="hidden" name="partner_id" t-att-value="partner_id or predefine_data and 'partner_id' in predefine_data and predefine_data['partner_id']"/>
                                        <input type="hidden" name="mode" t-att-value="mode or predefine_data and 'mode' in predefine_data and predefine_data['mode']"/>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <a role="button" href="/shop/checkout" class="continue-btn btn btn-secondary mb32 float-left">
                                            <span class="fa fa-chevron-left"/>
 RETOUR
                                
                                
                                
                                
                                
                                
                                
                                
                                        </a>
                                        <button type="submit" id="form_submit" class="btn btn-primary float-right mb32 o_job_post_submit">
                                        Enregistrer mes modifications
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>


    <template id="payment_inherit" inherit_id="website_sale.payment">
        <xpath expr="//div[@id='shipping_and_billing']" position="replace">
            <div class="card-body" id="delivery_and_billing">
                <div class="col-md-12">
                    <t t-if="website_sale_order.operating_unit_id">
                        <div class="link">
                            <span class="">
                                <span>
                                    <b>Livraison : </b>
                                </span>
                                <span class="street" t-field="website_sale_order.operating_unit_id.street"/>
                                <span>, </span>
                                <span class="zip" t-field="website_sale_order.operating_unit_id.zip"/>
                                <span>, </span>
                                <span class="city" t-field="website_sale_order.operating_unit_id.city"/>
                            </span>
                        </div>
                    </t>
                </div>
                <div class="col-md-12">
                    <t t-if="website_sale_order.partner_invoice_id">
                        <b>Adresse de facturation: </b>
                        <span t-esc='website_sale_order.partner_invoice_id' t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')" class="address-inline"/>
                    </t>
                </div>
            </div>
        </xpath>
    </template>

