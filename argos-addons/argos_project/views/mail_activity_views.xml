<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="mail_activity_view_form_popup_inherit" model="ir.ui.view">
      <field name="name">mail.activity.view.form.popup.inherit</field>
      <field name="model">mail.activity</field>
      <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
      <field name="arch" type="xml">
        <field name="activity_type_id" position="before">
          <field name="product_id" />
        </field>
        <field name="date_deadline" position="before">
          <label for="product_quantity" string="Product" />
          <div>
            <field name="product_quantity" attrs="{'required': [('product_id', '!=', False)]}" style="width: 50%"/>
            <field name="product_uom_id" attrs="{'required': [('product_id', '!=', False)]}"
                   style="width: 50%" context="{'filter_by_product_category': product_id}"/>
          </div>
        </field>
      </field>
    </record>

  </data>
</odoo>