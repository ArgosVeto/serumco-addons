<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="validation_mail_template" model="mail.template">
      <field name="name">Validation Request</field>
      <field name="model_id" ref="account.model_res_partner_bank"/>
      <field name="subject">Bank Account Validation Request</field>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="email_to">${object.get_email_to()}</field>
      <field name="auto_delete" eval="False"/>
      <field name="body_html">
        <![CDATA[
          <a href="${ctx['url']}">
            ${ctx['url']}
          </a>
      ]]>
      </field>
    </record>
  </data>
</odoo>