<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="argos_view_partner_bank_tree" model="ir.ui.view">
      <field name="name">argos.res.partner.bank.tree</field>
      <field name="model">res.partner.bank</field>
      <field name="inherit_id" ref="base.view_partner_bank_tree"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="after">
          <field name="state"/>
        </field>
      </field>
    </record>

    <record id="argos_view_partner_bank_form" model="ir.ui.view">
      <field name="name">argos.res.partner.bank.form</field>
      <field name="model">res.partner.bank</field>
      <field name="inherit_id" ref="base.view_partner_bank_form"/>
      <field name="arch" type="xml">
        <sheet position="before">
          <header>
            <button string="Approve" name="action_approve_account" states="to_approve" type="object"
                    class="oe_highlight" groups="base.group_system"/>
            <field name="state" widget="statusbar"/>
          </header>
        </sheet>
      </field>
    </record>

  </data>
</odoo>