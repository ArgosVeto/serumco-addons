<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="argos_view_partner_property_form" model="ir.ui.view">
      <field name="name">argos.res.partner.property.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="account.view_partner_property_form"/>
      <field name="arch" type="xml">
        <page name="accounting" position="attributes">
          <attribute name="attrs">{}</attribute>
        </page>
        <page name="accounting_disabled" position="attributes">
          <attribute name="invisible">1</attribute>
          <attribute name="attrs">{}</attribute>
        </page>
        <field name="property_account_payable_id" position="after">
          <group>
            <field name="payment_mode"/>
          </group>
        </field>
        <xpath expr="//field[@name='bank_ids']/tree/field[@name='acc_number']" position="after">
          <field name="state" readonly="1" force_save="1"/>
        </xpath>
      </field>
    </record>

    <record id="view_partner_inherit_form" model="ir.ui.view">
      <field name="name">account.res.partner.inherit.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="argos_base.res_partner_view_form_inherit"/>
      <field name="arch" type="xml">
        <field name="supplier_rank" position="after">
          <field name="no_payment" attrs="{'invisible': [('supplier_rank', '&lt;', 1)]}"/>
        </field>
      </field>
    </record>

  </data>
</odoo>