<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="res_partner_property_view_form_inherit" model="ir.ui.view">
      <field name="name">res.partner.property.view.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="account.view_partner_property_form"/>
      <field name="arch" type="xml">
        <page name="accounting" position="attributes">
          <attribute name="attrs">{}</attribute>
        </page>
        <page name="accounting_disabled" position="attributes">
          <attribute name="invisible">1</attribute>
          <attribute name="attrs">{}</attribute>
        </page>
        <field name="property_account_payable_id" position="after">
          <group>
            <field name="payment_mode"/>
          </group>
        </field>
        <xpath expr="//field[@name='bank_ids']/tree/field[@name='acc_number']" position="after">
          <field name="state" readonly="1" force_save="1"/>
        </xpath>
      </field>
    </record>

    <record id="res_partner_view_form_inherit" model="ir.ui.view">
      <field name="name">res.partner.view.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="argos_base.res_partner_view_form_inherit"/>
      <field name="arch" type="xml">
        <field name="supplier_rank" position="after">
          <field name="no_payment" attrs="{'invisible': [('supplier_rank', '&lt;', 1)]}"/>
        </field>
      </field>
    </record>

    <record id="res_partner_followup_view_form_inherit" model="ir.ui.view">
      <field name="name">res.partner.followup.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="account_followup.res_partner_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//span[hasclass('o_stat_text')]" position="replace">
          <span class="o_stat_text">Total Due</span>
        </xpath>
        <button name="open_action_followup" position="attributes">
          <attribute name="attrs">{}</attribute>
        </button>
      </field>
    </record>

    <record id="account.res_partner_action_customer" model="ir.actions.act_window">
      <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company':
        True, 'default_customer_rank': 1, 'from_bo': True}
      </field>
    </record>

  </data>
</odoo>