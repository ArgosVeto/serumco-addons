<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="passport_view_form" model="ir.ui.view">
			<field name="name">passport.view.form</field>
			<field name="model">passport.passport</field>
			<field name="arch" type="xml">
				<form string="Passport">
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name" required="1"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="operating_unit_id"/>
								<field name="patient_name"/>
								<field name="address"/>
								<field name="city"/>
								<field name="delivery_date"/>
								<field name="species_id"/>
							</group>

							<group>
								<field name="identification"/>
								<field name="number"/>
								<field name="status"/>
								<field name="zip_code"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="passport_passport_view_tree" model="ir.ui.view">
			<field name="name">passport.view.tree</field>
			<field name="model">passport.passport</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record id="passport_passport_action" model="ir.actions.act_window">
			<field name="name">Passports</field>
			<field name="res_model">passport.passport</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</odoo>