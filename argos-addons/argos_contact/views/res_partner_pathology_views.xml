<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_animal_pathology_tree" model="ir.ui.view">
      <field name="name">res.partner.pathology.tree</field>
      <field name="model">res.partner.pathology</field>
      <field name="arch" type="xml">
        <tree string="Animal Pathology">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_animal_pathology_form" model="ir.ui.view">
      <field name="name">res.partner.pathology.form</field>
      <field name="model">res.partner.pathology</field>
      <field name="arch" type="xml">
        <form string="Animal Pathology">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="open_animal_pathology_list" model="ir.actions.act_window">
      <field name="name">Pathology</field>
      <field name="res_model">res.partner.pathology</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_animal_pathology"
        action="open_animal_pathology_list"
        name="Pathology"
        sequence="7" parent="argos_base.res_partner_menu_config"/>

  </data>
</odoo>