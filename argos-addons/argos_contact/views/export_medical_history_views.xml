<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
    <record id="export_medical_history_view_form" model="ir.ui.view">
      <field name="name">export.medical.history.view.form</field>
      <field name="model">export.medical.history</field>
      <field name="arch" type="xml">
        <form string="Export Medical History">
          <group>
            <group>
              <field name="date_start"/>
            </group>
            <group>
              <field name="date_end"/>
            </group>
          </group>
          <group>
            <field name="is_complete"/>
          </group>
          <group>
            <field name="field_ids" widget="many2many_checkboxes" attrs="{'readonly': [('is_complete', '=', True)]}"/>
          </group>
          <footer>
            <button name="button_print_report" type="object" string="Print" class="oe_highlight"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="export_medical_history_action" model="ir.actions.act_window">
      <field name="name">Export Medical History</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">export.medical.history</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <act_window id="export_medical_history_action_server"
                name="Export Medical History"
                binding_model="res.partner"
                res_model="export.medical.history"
                view_mode="form"
                target="new"/>

  </data>
</odoo>
