<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_partner_weight_view_form" model="ir.ui.view">
			<field name="name">res.patient.weight.view.form</field>
			<field name="model">res.partner.weight</field>
			<field name="arch" type="xml">
				<form string="Weight" create="false" delete="false" edit="false">
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name" required="1"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="date"/>
								<field name="values"/>
								<field name="source"/>
								<field name="note"/>
							</group>
							<group></group>
						</group>
					</sheet>
					<div class="oe_chatter" name="studio_div_2bbdca">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="activity_ids" widget="mail_activity"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>

		<record id="res_partner_weight_view_tree" model="ir.ui.view">
			<field name="name">res.patient.weight.view.tree</field>
			<field name="model">res.partner.weight</field>
			<field name="arch" type="xml">
				<tree create="false" delete="false">
					<field name="date"/>
					<field name="patient_id"/>
					<field name="values"/>
					<field name="source"/>
				</tree>
			</field>
		</record>

		<record id="res_partner_weight_action" model="ir.actions.act_window">
			<field name="name">Weights</field>
			<field name="res_model">res.partner.weight</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</odoo>