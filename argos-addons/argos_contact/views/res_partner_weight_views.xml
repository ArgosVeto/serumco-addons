<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_partner_weight_view_form" model="ir.ui.view">
			<field name="name">res.patient.weight.view.form</field>
			<field name="model">res.partner.weight</field>
			<field name="arch" type="xml">
				<form string="Weight" create="false" delete="false" edit="false">
					<sheet>
						<group>
							<group>
								<field name="values"/>
								<field name="date"/>
								<field name="score" string="Score (NEC)"/>
								<field name="area" string="Area (m²)"/>
								<field name="source"/>
								<field name="note"/>
							</group>
							<group>
								<field name="partner_id"/>
							</group>
						</group>
					</sheet>
					<div class="oe_chatter" name="studio_div_2bbdca">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="activity_ids" widget="mail_activity"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>

		<record id="res_partner_weight_view_tree" model="ir.ui.view">
			<field name="name">res.patient.weight.view.tree</field>
			<field name="model">res.partner.weight</field>
			<field name="arch" type="xml">
				<tree create="false" delete="false">
					<field name="date"/>
					<field name="partner_id"/>
					<field name="values"/>
					<field name="score" string="Score (NEC)"/>
					<field name="area" string="Area (m²)"/>
					<field name="source"/>
				</tree>
			</field>
		</record>

		<record id="res_partner_weight_view_graph" model="ir.ui.view">
			<field name="name">res.patient.weight.view.graph</field>
			<field name="model">res.partner.weight</field>
			<field name="arch" type="xml">
				<graph string="Patient Weight">
					<field name="date" type="col"/>
					<field name="partner_id" type="row"/>
					<field name="values" type="measure"/>
				</graph>
			</field>
		</record>

		<record id="res_partner_weight_view_search" model="ir.ui.view">
      <field name="name">res.partner.weight.view.search</field>
      <field name="model">res.partner.weight</field>
      <field name="arch" type="xml">
        <search string="Weight">
          <group expand="0" string="Group By">
            <filter string="Date" name="group_by_date" domain="[]" context="{'group_by': 'date:day'}"/>
          </group>
        </search>
      </field>
    </record>

		<record id="res_partner_weight_action" model="ir.actions.act_window">
			<field name="name">Weights</field>
			<field name="res_model">res.partner.weight</field>
			<field name="view_mode">tree,form,graph</field>
		</record>

		<record id="action_res_partner_weight_graph" model="ir.actions.act_window">
			<field name="name">Weights</field>
			<field name="res_model">res.partner.weight</field>
			<field name="view_mode">graph</field>
			<field name="domain">[('partner_id', '=', active_id)]</field>
			<field name="search_view_id" ref="res_partner_weight_view_search"/>
      <field name="context">{'search_default_group_by_date': 1}</field>
		</record>

	</data>
</odoo>