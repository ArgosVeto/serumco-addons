    <template id="product_custom" inherit_id="website_sale.product">
        <xpath expr="//div[@id='wrap']" position="inside">
            <div class="modal fade" id="unavailableProductModal" tabindex="-1" role="dialog" aria-labelledby="unavailableProductModal"
