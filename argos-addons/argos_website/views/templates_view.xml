<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <template id="mrdv_home" name="Mrdv Home">
      <t t-call="web.layout">
        <div id="wrap">
          <div class="container">
            <div id="vetowidget"></div>
            <script data-widget-clinic="7335"
                    data-widget-theme="argos"
                    src="https://recette.monrendezvousveto.fr/bundles/app/assets/js/widget-container.entry.js">
            </script>
          </div>
        </div>
      </t>
    </template>

    <template id="error_service">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure oe_empty">
                    <div class="container">
                        <h1 class="mt32">Service Error</h1>
                        <p>Service temporarily unavailable.</p>
                        <p>
                            <a t-attf-href="/shop">return to shop</a>
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="products_custom" inherit_id="website_sale.products">
        <xpath expr="//div[@id='wrap']" position="inside">
            <div class="modal fade" id="unavailableProductModal" tabindex="-1" role="dialog" aria-labelledby="unavailableProductModal"
                 aria-hidden="true">
              <div class="modal-dialog .modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="unavailableProductModalLabel">Unavailable Product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    </button>
                  </div>
                  <div class="modal-body">
                    This product is not in stock at the moment.
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="errorServiceModal" tabindex="-1" role="dialog" aria-labelledby="errorServiceModal"
                   aria-hidden="true">
              <div class="modal-dialog .modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="errorServiceModalLabel">Service Error</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    </button>
                  </div>
                  <div class="modal-body">
                    Service temporarily unavailable.
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
        </xpath>
    </template>

