<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="website_sale.product_template_form_view"/>
      <field name="arch" type="xml">

        <group name="shop" position="inside">
          <group name="enriched" string="Description Web">
            <field name="description_web" nolabel="1"/>
          </group>
        </group>

        <field name="website_style_ids" position="after">
          <field name="is_new"/>
        </field>

        <field name="public_categ_ids" position="attributes">
          <attribute name="readonly">1</attribute>
          <attribute name="force_save">1</attribute>
        </field>

        <xpath expr="//group[@name='product_template_images']" position="after">
          <group>
            <group>
              <field name="image_1024" widget="image" options="{'preview_image': 'image_128', 'size': [32, 32]}" string="Thumbnail"/>
              <field name="aliment_type"/>
              <field name="utilization"/>
              <field name="composition"/>
              <field name="analytic_constitution"/>
            </group>
            <group>
              <field name="additives"/>
              <field name="energetic_value"/>
              <field name="daily_ratio_recommended"/>
              <field name="indications"/>
              <field name="waters_content"/>
            </group>
          </group>
        </xpath>

      </field>
    </record>

    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.only.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='value_ids']" position="after">
          <field name="is_attribute_visible"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>