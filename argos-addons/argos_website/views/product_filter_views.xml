<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_filter_tree_view" model="ir.ui.view">
            <field name="name">product_filter_tree_view</field>
            <field name="model">product.filter</field>
            <field name="arch" type="xml">
                <tree string="Filters">
                    <field name="name"/>
                    <field name="is_filter_visible"/>
                </tree>
            </field>
        </record>

        <record id="product_filter_form_view" model="ir.ui.view">
            <field name="name">product_filter_form_view</field>
            <field name="model">product.filter</field>
            <field name="arch" type="xml">
                    <form string="Filters">
                        <sheet>
                            <group>
                        <field name="name"/>
                        <field name="is_filter_visible"/>
                        <field name="product_filter_line_ids">
                            <tree editable="up">
                                <field name="name"/>
                            </tree>
                        </field>
                            </group>
                        </sheet>
                    </form>
            </field>
        </record>

    <record id="product_filter_action" model="ir.actions.act_window">
        <field name="name">product_filter_action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.filter</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_filter_action"
        action="argos_website.product_filter_action"
        parent="sale.prod_config_main"
        sequence="1"/>

    <record id="product_template_filter_inherit" model="ir.ui.view">
        <field name="name">product_template_filter_inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="filters" string="Filters">
                    <field name="product_filter_ids" widget="one2many">
                        <tree string="Variants" editable="bottom">
                            <field name="filter_id"/>
                            <field name="filter_line_ids"  widget="many2many_tags"/>
        <!--                    <field name="attribute_id" attrs="{'readonly': [('id', '!=', False)]}" options="{'no_create_edit': False}"/>-->
        <!--                    <field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}" context="{'default_attribute_id': attribute_id, 'show_attribute': False}"/>-->
                        </tree>
                    </field>
                </page>
            </xpath>
      </field>
    </record>

    </data>
</odoo>