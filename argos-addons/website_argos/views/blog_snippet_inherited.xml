<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_latest_posts_argos"
		inherit_id="website_blog.s_latest_posts_big_picture">
		<xpath expr="//section[hasclass('s_latest_posts_big_picture')]"
			position="replace" name="Latest Posts - Big Images">
			<section class="s_text_block s_latest_posts_big_picture argos-blog" data-name="Text block">
				<div class="blog-content pt32 pb16">
			        <div class="container">
			            <div class="row ">
			                <div class="col-lg-12 pt16 pb8 d-flex align-items-center">
			                	<h1>L’actualité d'Argos</h1>
			                	<a href="/blog" class="ml-auto top-text">
									<span class="mr-2">Tous les articles</span>
									<span><img src="/website_argos/static/src/img/right.png"/></span>
								</a>
			                </div>
			            </div>
			            <div class="row js_get_posts" data-loading="true"
						data-template="website_blog.s_latest_posts_big_picture_template" />
			        	</div>
			    </div>
	    	</section>
		</xpath>
	</template>

	<template id="blog_inherit_view_aviat" inherit_id="website_blog.s_latest_posts_big_picture_template" name="blog_inherit_view_argos">
	    <xpath expr="//figure[@class='col-12 col-md-6 col-xl-4 my-3 s_latest_posts_post']" position="replace">
		    	<t t-foreach="posts" t-as="p">
		    	<div class="col my-3 loading_container s_latest_posts_post mt32">
					<div class="">
						<div class="argos_latest_post bg-white">
							<a t-attf-href="/blog/#{p.blog_id.id}/post/#{p.id}">
								<t t-call="website.record_cover">
									<t t-set="_record" t-value="p" />
									<t t-set="use_filters" t-value="True" />
									<t t-set="additionnal_classes"
										t-value="'thumb h-100 w-100 bg-600 position-absolute'" />
								</t>
							</a>
							<div class="tag d-flex align-items-center">
								<t t-foreach="p.tag_ids" t-as="ptag">
									<p class="mr-1"><t t-esc="ptag.name" /></p>
								</t>
							</div>
							
							<div class="blog_detail">
								<div class="date-pos text-primary d-flex text-center mt-1">
									<span class="date_span mr-1" t-field="p.post_date"
									t-options='{"format": "dd"}'/>
									<span class="month_span mr-1" t-field="p.post_date"
									t-options='{"format": "MMMM"}' />
									<span class="year_span mr-1" t-field="p.post_date" t-options='{"format": " yyyy"}' />
								</div>

								<a t-attf-href="/blog/#{p.blog_id.id}/post/#{p.id}">
									<h5 class="font-medium link mb-0" t-field="p.name">
									</h5>
									<p class="m-t-20 custom_p mb-2" t-field="p.teaser">
									</p>
								</a>
							</div>
						</div>
					</div>
				</div>
				</t>
		</xpath>
	</template>

</odoo>