<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_animal_insurance_tree" model="ir.ui.view">
      <field name="name">animal.insurance.tree</field>
      <field name="model">animal.insurance</field>
      <field name="arch" type="xml">
        <tree string="Animal Insurance">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_animal_insurance_form" model="ir.ui.view">
      <field name="name">animal.insurance.form</field>
      <field name="model">animal.insurance</field>
      <field name="arch" type="xml">
        <form string="Animal Insurance">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="open_animal_insurance_list" model="ir.actions.act_window">
      <field name="name">Insurance</field>
      <field name="res_model">animal.insurance</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_animal_insurance"
        action="open_animal_insurance_list"
        name="Insurance"
        sequence="4" parent="argos_base.menu_animal_config"/>

  </data>
</odoo>