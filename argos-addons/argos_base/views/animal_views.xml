<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_animal_tree" model="ir.ui.view">
      <field name="name">animal.animal.tree</field>
      <field name="model">animal.animal</field>
      <field name="arch" type="xml">
        <tree string="Animals">
          <field name="name"/>
          <field name="category_id"/>
          <field name="partner_id"/>
          <field name="clinic_id"/>
        </tree>
      </field>
    </record>

    <record id="view_animal_form" model="ir.ui.view">
      <field name="name">animal.animal.form</field>
      <field name="model">animal.animal</field>
      <field name="arch" type="xml">
        <form string="Animal">
          <header>
            <button string="Edit Convention" name="edit_convention" type="object" class="oe_highlight"
                    attrs="{'invisible': [('is_dead', '=', False)]}"/>
            <button string="Reprint Convention" name="reprint_convention" type="object" class="oe_highlight"
                    attrs="{'invisible': [('is_dead', '=', False)]}"/>
            <button string="Delete Convention" name="delete_convention" type="object"
                    attrs="{'invisible': [('is_dead', '=', False)]}"/>
          </header>
          <sheet>
            <field name="image" widget="image" class="oe_avatar"/>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="active" invisible="1"/>
                <field name="category_id"/>
                <field name="race_id"/>
                <field name="sex"/>
                <field name="robe_id"/>
                <field name="birth_date"/>
                <field name="age"/>
                <field name="is_sterilized"/>
                <field name="is_reproductive"/>
                <field name="is_dangerous"/>
                <field name="tattoo_location"/>
                <field name="tattoo_date"/>
                <field name="chip_identification"/>
                <field name="chip_location"/>
                <field name="chip_date"/>
              </group>
              <group>
                <field name="passport"/>
                <field name="issue_date"/>
                <field name="location"/>
                <field name="partner_id" required="True"/>
                <field name="clinic_id" required="True"/>
                <field name="veterinary_id" required="True"/>
                <field name="insurance_id"/>
                <field name="environment_ids" widget="many2many_tags"/>
                <field name="diet_ids" widget="many2many_tags"/>
                <field name="pathology_ids" widget="many2many_tags"/>
                <field name="is_dead"/>
                <field name="death_date" attrs="{'invisible': [('is_dead', '=', False)]}"/>
                <field name="death_reason"
                       attrs="{'invisible': [('is_dead', '=', False)], 'required': [('is_dead', '=', True)]}"/>
                <field name="is_missing"/>
                <field name="missing_date" attrs="{'invisible': [('is_missing', '=', False)]}"/>
              </group>
            </group>
            <notebook>
              <page string="Medical Events"/>
              <page string="Weight"/>
              <page string="Outside Events"/>
              <page string="Surgery"/>
              <page string="Vaccination"/>
              <page string="Hospitalization"/>
              <page string="Internal Notes">
                <group>
                  <group>
                    <field name="note"/>
                  </group>
                </group>
              </page>
              <page string="Owners">
                <field name="owner_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="open_view_animal_list" model="ir.actions.act_window">
      <field name="name">Animals</field>
      <field name="res_model">animal.animal</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="argos_animal_menu_contacts"
              name="Animal"
              action="open_view_animal_list"
              parent="contacts.res_partner_menu_contacts"
              sequence="2"/>

    <menuitem id="menu_animal_config"
              name="Animal"
              sequence="0" parent="contacts.res_partner_menu_config"/>

  </data>
</odoo>