<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_animal_race_tree" model="ir.ui.view">
      <field name="name">animal.race.tree</field>
      <field name="model">animal.race</field>
      <field name="arch" type="xml">
        <tree string="Animal Race">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_animal_race_form" model="ir.ui.view">
      <field name="name">animal.race.form</field>
      <field name="model">animal.race</field>
      <field name="arch" type="xml">
        <form string="Animal Race">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="open_animal_race_list" model="ir.actions.act_window">
      <field name="name">Animal Race</field>
      <field name="res_model">animal.race</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_animal_race"
        action="open_animal_race_list"
        name="Animal Race"
        sequence="2" parent="argos_base.menu_animal_config"/>

  </data>
</odoo>