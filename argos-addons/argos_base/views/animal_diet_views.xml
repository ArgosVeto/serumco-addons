<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_animal_diet_tree" model="ir.ui.view">
      <field name="name">animal.diet.tree</field>
      <field name="model">animal.diet</field>
      <field name="arch" type="xml">
        <tree string="Animal Diet">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_animal_diet_form" model="ir.ui.view">
      <field name="name">animal.diet.form</field>
      <field name="model">animal.diet</field>
      <field name="arch" type="xml">
        <form string="Animal Diet">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="open_animal_diet_list" model="ir.actions.act_window">
      <field name="name">Recommended Diet</field>
      <field name="res_model">animal.diet</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_animal_diet"
        action="open_animal_diet_list"
        name="Recommended Diet"
        sequence="6" parent="argos_base.menu_animal_config"/>

  </data>
</odoo>