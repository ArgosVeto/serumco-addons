<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_clinical_tree" model="ir.ui.view">
      <field name="name">clinical.clinical.tree</field>
      <field name="model">clinical.clinical</field>
      <field name="arch" type="xml">
        <tree string="Clinicals">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_clinical_form" model="ir.ui.view">
      <field name="name">clinical.clinical.form</field>
      <field name="model">clinical.clinical</field>
      <field name="arch" type="xml">
        <form string="Clinical">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" required="1"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="operating_unit_id"/>
                <field name="clinical_code"/>
                <field name="address"/>
                <field name="email"/>
                <field name="principal_phone"/>
                <field name="secondary_phone"/>
                <field name="emergency_phone"/>
              </group>
              <group>
                <field name="clinical_type_id"/>
                <field name="vat"/>
                <field name="opening_time"/>
                <field name="consult_room_number"/>
                <field name="skill_ids" widget="many2many_tags"/>
                <field name="equipment_ids" widget="many2many_tags"/>
              </group>
            </group>
            <notebook>
              <page string="Structure"/>
              <page string="Digital Service">
                <group string="Digital services offered by the clinic">
                  <field name="click_and_collect"/>
                  <field name="ecommerce_relay_point"/>
                  <field name="online_appointment_booking"/>
                </group>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter" name="studio_div_8fe9a2">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <record id="action_open_clinical_tree" model="ir.actions.act_window">
      <field name="name">Clinicals</field>
      <field name="res_model">clinical.clinical</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem
          action="action_open_clinical_tree"
          id="menu_action_clinical_tree"
          parent="base.menu_users"
          sequence="3"
    />

  </data>
</odoo>