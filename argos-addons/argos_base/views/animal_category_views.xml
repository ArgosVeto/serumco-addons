<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_animal_category_tree" model="ir.ui.view">
      <field name="name">animal.category.tree</field>
      <field name="model">animal.category</field>
      <field name="arch" type="xml">
        <tree string="Animal Species">
          <field name="name"/>
          <field name="is_incineris_species"/>
        </tree>
      </field>
    </record>

    <record id="view_animal_category_form" model="ir.ui.view">
      <field name="name">animal.category.form</field>
      <field name="model">animal.category</field>
      <field name="arch" type="xml">
        <form string="Animal Species">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="is_incineris_species"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="open_animal_category_list" model="ir.actions.act_window">
      <field name="name">Animal Species</field>
      <field name="res_model">animal.category</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_animal_category"
              action="open_animal_category_list"
              name="Animal Species"
              sequence="1" parent="argos_base.menu_animal_config"/>

  </data>
</odoo>