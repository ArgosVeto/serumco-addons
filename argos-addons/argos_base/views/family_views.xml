<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_family_tree" model="ir.ui.view">
      <field name="name">family.family.tree</field>
      <field name="model">family.family</field>
      <field name="arch" type="xml">
        <tree string="Family">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_family_form" model="ir.ui.view">
      <field name="name">family.family.form</field>
      <field name="model">family.family</field>
      <field name="arch" type="xml">
        <form string="Family">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="open_view_family_list" model="ir.actions.act_window">
      <field name="name">Family</field>
      <field name="res_model">family.family</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="argos_family_menu_contacts"
              name="Family"
              action="open_view_family_list"
              parent="contacts.res_partner_menu_contacts"
              sequence="3"/>
  </data>
</odoo>