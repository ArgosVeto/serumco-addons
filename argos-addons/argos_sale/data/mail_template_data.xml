<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="sale_notification_mail_template" model="mail.template">
      <field name="name">Transaction Notification Mail</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="subject">Transaction Notification</field>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="email_to">${object.partner_id.tutor_curator_id.email}</field>
      <field name="auto_delete" eval="True"/>
      <field name="body_html">
        <![CDATA[
          <div>
            <span>Hello,</span>
          </div>
          <div>
            <span>We inform you that
            <strong>
              ${object.partner_id.name}
            </strong>
            <span>has made a transaction with us.</span>
          </div>
          <br/>
          <div>
            <span>Cordially</span>
          </div>
      ]]>
      </field>
    </record>
  </data>
</odoo>