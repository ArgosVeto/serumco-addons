<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

  <record id="order_refer_order_form" model="ir.ui.view">
    <field name="name">sale.order.refer.form.view</field>
    <field name="model">sale.order.refer</field>
    <field name="arch" type="xml">
      <form>
        <sheet string="Refer">
          <group col="4">
            <field name="operating_unit_id"/>
            <field name="employee_id"/>
            <field name="consultation_type_id"/>
            <newline/>
            <field nolabel="1" name="comments" colspan="4" placeholder="Comments"/>
            <newline/>
            <separator/>
          </group>
        </sheet>

        <footer>
          <button name="button_validate_refer" string="Validate refer" type="object"
                  context="{'Validate_refer': True}" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record model="ir.actions.act_window" id="action_refer_consultation_to">
    <field name="name">Refer Consultation To</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sale.order.refer</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>