<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="documents_tag_view_tree" model="ir.ui.view">
      <field name="name">documents.tag.view.tree</field>
      <field name="model">documents.tag</field>
      <field name="arch" type="xml">
        <tree editable="bottom">
          <field name="name"/>
          <field name="facet_id"/>
        </tree>
      </field>
    </record>

    <record id="action_open_diagnostics" model="ir.actions.act_window">
      <field name="name">Diagnostics</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">documents.tag</field>
      <field name="view_mode">tree</field>
      <field name="domain">[('type', '=', 'diagnostic')]</field>
      <field name="context">{'default_type': 'diagnostic'}</field>
    </record>

    <record id="action_open_hypotheses" model="ir.actions.act_window">
      <field name="name">Hypotheses</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">documents.tag</field>
      <field name="view_mode">tree</field>
      <field name="domain">[('type', '=', 'hypothese')]</field>
      <field name="context">{'default_type': 'hypothese'}</field>
    </record>

    <menuitem
          id="menu_settings_diagnostics"
          name="Diagnostics"
          parent="sale.menu_sale_config"
          sequence="2"
          action="action_open_diagnostics"/>

    <menuitem
          id="menu_settings_hypotheses"
          name="Hypotheses"
          parent="sale.menu_sale_config"
          sequence="2"
          action="action_open_hypotheses"/>

  </data>
</odoo>