<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="paperformat_certificate" model="report.paperformat">
      <field name="name">European A4</field>
      <field name="default" eval="True"/>
      <field name="format">A4</field>
      <field name="page_height">0</field>
      <field name="page_width">0</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">40</field>
      <field name="margin_bottom">18</field>
      <field name="margin_left">15</field>
      <field name="margin_right">15</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">35</field>
      <field name="dpi">90</field>
    </record>
    <template id="report_template_surveillance">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
          <t t-call="web.external_layout">
            <div class="page">
              <style>
                table, th, td {
                border: 0px;
                text-align: left;
                font-size:15px;
                }
                table {
                width:28%;
                border-collapse: collapse;
                }
                td
                {padding: 2px;}
                small {

                margin: 0;
                padding: 0;
                }
                .code{
                font-size:small;
                font-style: italic;
                margin: 0;
                padding: 0;
                }
                .nota{
                font-size:x-small;
                font-weight: 600;
                margin: 0;
                padding: 0;
                }
                .text{
                font-size:15px;
                }
              </style>
              <h3 style="text-align: center; text-transform: uppercase;">veterinary surveillance certificate</h3>
              <p class="code">
                Rural Code, article 211-25, ministerial decree of 23 September 1999 relating to the duration and methods of veterinary
                surveillance of dogs and cats transferred to the manager of a shelter for their adoption and coming from a structure
                providing the service of pound.
              </p><br/>
              <p class="text">
                I, the undersigned, Dr <t t-esc="doc.employee_id.name"/>, health veterinarian at <t
                  t-esc="doc.employee_id.operating_unit_ids.name"/><br/>
                certify that the <t t-esc="doc.species_id.name"/>
              </p>
              <table style="border:none !important;">
                <tr>
                  <td>Name</td>
                  <td><t t-esc="doc.patient_id.name"/></td>
                </tr>
                <tr>
                  <td>Species</td>
                  <td><t t-esc="doc.species_id.name"/></td>
                </tr>
                <tr>
                  <td>Race</td>
                  <td><t t-esc="doc.race_id.name"/></td>
                </tr>
                <tr>
                  <td>Born (age)</td>
                  <td><span t-field="doc.patient_id.birthdate_date" t-options="{'format': 'dd/MM/yyyy'}"/></td>
                </tr>
                <tr>
                  <td>Gender</td>
                  <td><t t-esc="doc.gender_id.name"/></td>
                </tr>
                <tr>
                  <td>NÂ° tattoo</td>
                  <td><t t-esc="doc.patient_id.tattoo_number"/></td>
                </tr>
                <tr>
                  <td>Id. electronic</td>
                  <td><t t-esc="doc.patient_id.chip_identification"/></td>
                </tr>
              </table><br/>
              <div>
                <div class="row">
                  <div class="col-7">
                    <p style="border-bottom: 2px solid #000;">Deemed to belong to </p>
                    <table>
                      <tr>
                        <td>Last name and</td>
                        <td><t t-esc="doc.partner_id.lastname"/></td>
                      </tr>
                      <tr>
                        <td>first name</td>
                        <td><t t-esc="doc.partner_id.firstname"/></td>
                      </tr>
                      <tr>
                        <td>Address</td>
                        <td><t t-esc="doc.partner_id.street"/></td>
                      </tr>
                      <tr>
                        <td>City</td>
                        <td><t t-esc="doc.partner_id.zip"/> <t t-esc="doc.partner_id.city"/>
                          <t t-esc="doc.partner_id.country_id.name"/></td>
                      </tr>
                      <tr>
                        <td>Phone</td>
                        <td><t t-esc="doc.partner_id.phone"/></td>
                      </tr>
                    </table>
                  </div>
                  <div class="col-5">
                    <p style="border-bottom: 2px solid #000;">Deemed held by</p>
                    <table>
                      <tr>
                        <td>Last name and</td>
                        <td></td>
                      </tr>
                      <tr>
                        <td>first name</td>
                        <td></td>
                      </tr>
                      <tr>
                        <td>Address</td>
                        <td></td>
                      </tr>
                      <tr>
                        <td>City</td>
                        <td></td>
                      </tr>
                      <tr>
                        <td>Phone</td>
                        <td></td>
                      </tr>
                    </table>
                  </div>
                </div>
              </div><br/>
              <p class="text">Adopted on ____________________ at the refuge of ____________________, where he had been staying since ____________________</p>
              <p class="text" style="font-weight: 600; text-align: center;  margin-left: 60px; margin-right: 60px;">was reviewed by me
                this day. He is in good health and has no symptoms of rabies in particular.</p>
              <p class="text">In witness whereof, this certificate has been drawn up to serve and assert legal rights. Made in
                ____________________
                on <span t-field="doc.consultation_date" t-options="{'format': 'dd/MM/yyyy'}"/></p>
              <p class="text">Stamp and signature of veterinary surgeon</p><br/><br/><br/><br/>
              <p class="text">Visa from the police commissioner or the town hall of</p><br/><br/><br/><br/>
              <p class="nota">Note: This certificate is personal and inalienable. The costs relating to its establishment are the
                responsibility of the owner or keeper of the animal (article 1385 of the civil code). It must be stamped, if necessary,
                with the stamp of the authority vested with police powers.</p>
            </div>
          </t>
        </t>
      </t>
    </template>
    <report
        string="Surveillance Certificate"
        id="report_surveillance_certificate"
        model="sale.order"
        report_type="qweb-pdf"
        paperformat="argos_sale.paperformat_certificate"
        name="argos_sale.report_template_surveillance"
        file="argos_sale.report_template_surveillance"
        attachment="'Surveillance Certificate - %s - %s' % (object.partner_id.name or '', object.name)"
        print_report_name="'Surveillance Certificate - %s - %s' % (object.partner_id.name or '', object.name)"
    />
  </data>
</odoo>