<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="paperformat_euthanasia" model="report.paperformat">
      <field name="name">European A4</field>
      <field name="default" eval="True"/>
      <field name="format">A4</field>
      <field name="page_height">0</field>
      <field name="page_width">0</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">40</field>
      <field name="margin_bottom">23</field>
      <field name="margin_left">7</field>
      <field name="margin_right">7</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">35</field>
      <field name="dpi">90</field>
    </record>
    <template id="euthanasia_request_pdf">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
          <t t-call="web.external_layout">
            <div class="page">
              <style>
                .page{
                line-height:100%;
                }
                table {
                border-collapse: collapse;
                }
                td
                {padding: 6px;}
              </style>
              <h1 align="center; color:#de1a46;">EUTHANASIA REQUEST</h1>
              <br/>
              <p>I, the undersigned,</p>
              <p>
                <input type="checkbox"/>
                <![CDATA[&nbsp;]]> owner, (1)
              </p>
              <p>
                <input type="checkbox"/>
                <![CDATA[&nbsp;]]> representing the owner who gave me all power to do the
                request for euthanasia
                in his name,
                (1)
              </p>
              <p>Pray to the veterinary doctor:
                <t t-esc="doc.employee_id.name"/>
              </p>
              <p>to proceed with the euthanasia of the animal whose description follows:</p>
              <table>
                <thead>
                  <tr>
                    <th>Animal</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Name</td>
                    <td>
                      <t t-esc="doc.patient_id.name"/>
                    </td>
                  </tr>
                  <tr>
                    <td>Species</td>
                    <td>
                      <t t-esc="doc.species_id.name"/>
                    </td>
                  </tr>
                  <tr>
                    <td>Race</td>
                    <td>
                      <t t-esc="doc.race_id.name"/>
                    </td>
                  </tr>
                  <tr>
                    <td>Born (age)</td>
                    <td>
                      <span t-field="doc.patient_id.birthdate_date" t-options="{'format': 'dd/MM/yyyy'}"/>
                    </td>
                  </tr>
                  <tr>
                    <td>Gender</td>
                    <td>
                      <t t-esc="doc.gender_id.name"/>
                    </td>
                  </tr>
                  <tr>
                    <td>NÂ° tattoo</td>
                    <td>
                      <t t-esc="doc.patient_id.tattoo_number"/>
                    </td>
                  </tr>
                  <tr>
                    <td>Id. electronic</td>
                    <td>
                      <t t-esc="doc.patient_id.chip_identification"/>
                    </td>
                  </tr>

                </tbody>
              </table>
              <br/>
              <table>
                <thead>
                  <tr>
                    <th>Belonging to</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Last name and first name</td>
                    <td>
                      <t t-esc="doc.partner_id.name"/>
                    </td>
                  </tr>
                  <tr>
                    <td>Address</td>
                    <td>
                      <t t-esc="doc.partner_id.street"/>
                    </td>
                  </tr>
                  <tr>
                    <td>City</td>
                    <td>
                      <t t-esc="doc.partner_id.zip"/>
                      <t t-esc="doc.partner_id.city"/>
                      <t t-esc="doc.partner_id.country_id.name"/>
                    </td>
                  </tr>
                </tbody>
              </table>
              <br/>
              <p>and declares:</p>
              <p>
                <input type="checkbox"/>
                <![CDATA[&nbsp;]]> leave the body for incineration. (1)
              </p>
              <p>
                <input type="checkbox"/>
                <![CDATA[&nbsp;]]> take back the body. (1)
              </p>
              <p>I declare on my honor that this animal has not, to my knowledge, bitten or scratched any person or animal, for 15 days,
                that it has not been in contact with rabid or suspect animals and that it has not been abroad in the past six months.
              </p>
              <br/>
              <p>Made in ................................................ the
                <span t-field="doc.consultation_date"
                      t-options="{'format': 'dd/MM/yyyy'}"/>
                signature
              </p>
              <br/>
              <br/>
              <br/>
              <p>(1) Cross out as appropriate.</p>
            </div>
          </t>
        </t>
      </t>
    </template>
    <report id="report_euhtanasia_request_pdf"
            string="Euthanasia Request"
            model="sale.order"
            report_type="qweb-pdf"
            paperformat="argos_sale.paperformat_euthanasia"
            name="argos_sale.euthanasia_request_pdf"
            file="argos_sale.euthanasia_request_pdf"/>

  </data>
</odoo>
