<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="sale_order_line_view_form" model="ir.ui.view">
      <field name="name">sale.order.line.view.form</field>
      <field name="model">sale.order.line</field>
      <field name="priority">100</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="product_uom_category_id" invisible="1"/>
                <field name="product_id" required="1" options="{'no_open': True}" domain="[('sale_ok', '=', True)]"/>
                <field name="name"/>
              </group>
              <group>
                <field name="product_uom_qty"/>
                <field name="product_uom"/>
                <field name="company_id" invisible="1"/>
                <field name="order_partner_id" invisible="1"/>
                <field name="display_type" invisible="1"/>
                <field name="product_updatable" invisible="1"/>
                <field name="price_unit"/>
                <field name="pack_parent_line_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
              </group>
            </group>
          </sheet>
          <footer>
            <button string="Save" name="save_add_line"
                    type="object" class="btn-primary"/>
            <button name="cancel" string="Cancel" special="cancel" class="oe_link"/>
          </footer>
        </form>
      </field>
    </record>
  </data>
</odoo>