<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="paperformat_euro" model="report.paperformat">
    <field name="name">European A4</field>
    <field name="default" eval="True"/>
    <field name="format">A4</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">40</field>
    <field name="margin_bottom">12</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">35</field>
    <field name="dpi">90</field>
  </record>
  <template id="transit_certificate_report">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
        <t t-call="web.external_layout">
          <div class="page">
            <div class="container"
                 style="line-height:100%;background-image:url('/argos_sale/static/src/img/border.png'); background-size:contain; background-repeat: no-repeat; padding: 10px 30px 30px 30px;">
              <style>
                h4{
                text-align: center;
                margin-top:8px;
                }
                small { margin: 0;
                padding: 0;
                }
                .code
                { font-size:xx-small;
                font-style: italic;
                text-align: center;
                margin-left: 100px;
                margin-right: 100px;
                }
                .nota{
                font-size:x-small;
                }
                .thick {
                font-weight: 600; margin: 0; padding: 0;
                }
                .p-size{
                font-size: 14px;
                }
                .translation{
                font-size:x-small;
                }
              </style>
              <h4>INTERNATIONAL SANITARY CERTIFICATE FOR THE TRANSIT OF PETS</h4>
              <p class="code">GESUNDHEITSZEUGNIS FÜR DEN TRANSIT VON MITFAHRENDEN HAUSTIEREN CERTIFICATO SANITARIO PER IL TRANSITO DI
                ANIMALI DA COMPAGNIA CERTIFICADO SANITARIO PARA IL TRANSITO DE LOS ANIMALES DE COMPANIA HEALTH CERTIFICATE PERMIT
                DOMESTIC ANIMAL TO TRAVEL
              </p>
              <div class="p-size">
                <span class="thick">Le soussigné, Dr Vétérinaire Sanitaire :</span>
                <t t-esc="doc.employee_id.name"/>
                <br/>
                <span class="translation">The undersigned Dr Veterinary surgeon</span>
                <br/>
              </div>
              <p class="p-size">
                <span class="thick">Adresse :</span>
                <t t-esc="doc.operating_unit_id.street"/>
                <t t-esc="doc.operating_unit_id.zip"/>
                <t t-esc="doc.operating_unit_id.city"/>
                <br/>
                <span class="translation">Address</span>
              </p>

              <p style="font-weight: 600; text-align: center; margin-left: 80px; margin-right: 80px;">
                <small>
                  <span class="thick">
                    Practicing animal medicine and surgery
                    <br/>
                    in accordance with the provisions of article 309 or articles 309-2 to 309-8 of the rural code
                    <br/>
                    and holder of the health mandate
                  </span>
                </small>
              </p>
              <p class="p-size">
                <span class="thick">Certifie que</span>
                <t t-esc="doc.species_id.name"/>
                <span class="thick">le Chat dont le signalement suit</span>
                <br/>
                <span class="translation">Certifies that <![CDATA[&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;]]> as
                  described below
                </span>
              </p>
              <div>
                <div class="row">
                  <div class="col-6">
                    <p class="p-size">
                      <span class="thick">Nom:</span>
                      <t t-esc="doc.patient_id.name"/>
                      <br/>
                      <span class="translation">Name</span>
                      <br/>
                      <span class="thick">Sexe:</span>
                      <t t-esc="doc.gender_id.name"/>
                      <br/>
                      <span class="translation">Sex</span>
                      <br/>
                      <span class="thick">Date de naissance:</span>
                      <span t-field="doc.patient_id.birthdate_date" t-options="{'format': 'dd/MM/yyyy'}"/>
                      <br/>
                      <span class="translation">Date of birth</span>
                      <br/>
                      <span class="thick">Race:</span>
                      <t t-esc="doc.gender_id.name"/>
                      <br/>
                      <span class="translation">Breed</span>
                      <br/>
                      <span class="thick">Robe et signes particuliers:</span>
                      <t t-esc="doc.patient_id.robe_id.name"/>
                      <br/>
                      <span class="translation">Coat and distinguishing marks</span>
                      <br/>
                    </p>
                  </div>
                  <div class="col-6" align="left center">
                    <p class="p-size">
                      <span class="thick">N° d'identification :</span>
                      <t t-esc="doc.patient_id.chip_identification"/>
                      <br/>
                      <span class="translation">Identification Number</span>
                    </p>
                    <br/>
                  </div>
                </div>
              </div>
              <p class="p-size">
                <span class="thick">Appartenant à M.:</span>
                <t t-esc="doc.partner_id.name"/>
                <br/>
                <span class="translation">Belonging to Mr.</span>
                <br/>
                <span class="thick">Demeurant à :</span>
                <t t-esc="doc.partner_id.street"/>
                <t t-esc="doc.partner_id.street2"/>,
                <t t-esc="doc.partner_id.zip"/>
                <t t-esc="doc.partner_id.city"/>
                <t t-esc="doc.partner_id.country_id.name"/>
                <br/>
                <span class="translation">Address</span>
              </p>
              <p class="p-size">
                <span class="thick">has been examined today and found to be free from any clinical sign of contagious disease or allowing to
                  suspect a contagious disease (rabies in particular).
                </span>
              </p>
              <p style="font-size:x-small;">
                heute von mir untersucht wurde und keine klinischen Anzeichen einer ansteckenden Krankheit oder stwaige Anzeichen zeigt,
                die eine ansteckende Krankheit befürchten lassen (insbesondere Tollwut).
                <br/>
                e stato esaminato oggi e ricinosciuto indenne da ogni segno clinico di malattia contagiosa e comunque da ogni segno che
                permetta di sospettare una malattia contagiosa (in particolare la rabbia).
                <br/>
                ha sido examinado el dia de hoy y reconocido libre de cualquier signo clinico de enfermedad contagiosa o sintoma que
                permitan sospechar la existencia de una enfermedad contagiosa (rabia en especial).
                <br/>
                has this day undergone medical examination and has been found free of any clinical symptoms of contagious disease or of
                possible contagious disease (in particuliar, rabies).
              </p>
              <p class="p-size">
                <span class="thick">In witness whereof, this certificate is issued to serve and enforce legal rights.</span>
              </p>
              <!--                <p class="p-size">-->
              <!--                  In witness whereof, this certificate has been drawn up to serve and assert legal rights. Made in ____________________ on-->
              <!--                  <span t-field="doc.consultation_date" t-options="{'format': 'dd/MM/yyyy'}"/>-->
              <!--                </p>-->
              <div class="row">
                <div class="col-8">
                  <p class="nota">
                    ZU. Urkund dessen soll diese Bestätigung rechtsgütlig dienen.
                    <br/>
                    In fede di quanto sopra viene rilasciato il presente certificado valido a tutti gli effetti.
                    <br/>
                    En testimonio de lo cual se expide el presente certificado para que conste y surfa los efectos que proceda.
                    <br/>
                    This certficate is established for whom it may concern and for any use provided for by the law.
                  </p>
                </div>
                <div class="col-4"></div>
              </div>
              <br/>
              <div class="row">
                <div class="col-6">
                  <p class="p-size">
                    <span class="thick">Made in</span>
                    <t t-esc="doc.operating_unit_id.name"/>
                    <span class="thick">, on</span>
                    <span t-field="doc.consultation_date" t-options="{'format': 'dd/MM/yyyy'}"/>
                  </p>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                </div>
                <div class="col-6">
                  <p style="float: right;" class="p-size">
                    <span style="float: right;" class="thick">Cachet et signature du Vétérinaire</span>
                    <br/>
                    <span style="float: right;" class="translation">Stamp and signature of veterinary surgeon</span>
                  </p>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                </div>
              </div>
            </div>
          </div>
        </t>
      </t>
    </t>
  </template>
  <report string="Transit Certificate"
          id="report_transit_certificate_id"
          model="sale.order"
          report_type="qweb-pdf"
          paperformat="argos_sale.paperformat_euro"
          name="argos_sale.transit_certificate_report"
          file="argos_sale.transit_certificate_report"
          attachment="'International Transit Certificate of - %s - %s' % (object.consultation_date ,object.patient_id.name or '')"
          print_report_name="'International Transit Certificate of - %s - %s' % (object.consultation_date ,object.patient_id.name or '')"/>
</odoo>