<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_partner_view_form_inherit_crm" model="ir.ui.view">
      <field name="name">res.partner.view.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='schedule_meeting']" position="replace">
        </xpath>
      </field>
    </record>

    <record id="res_partner_view_form_inherit" model="ir.ui.view">
      <field name="name">res.partner.view.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="argos_contact.res_partner_view_form_inherit"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='origin_id']" position="after">
          <field name="slot_ids" invisible="1"/>
          <field name="source"/>
        </xpath>
        <div name="button_box" position="inside">
          <button class="oe_stat_button" type="object" name="action_open_planning" icon="fa-calendar">
            <field string="Planning" name="planning_count" widget="statinfo"/>
          </button>
        </div>
      </field>
    </record>

    <record id="res_partner_view_form_patient" model="ir.ui.view">
      <field name="name">res.partner.view.form.patient</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="argos_contact.res_partner_view_form"/>
      <field name="arch" type="xml">
        <div name="button_box" position="inside">
          <button class="oe_stat_button" type="object" name="action_open_planning" icon="fa-calendar">
            <field string="Planning" name="planning_count" widget="statinfo"/>
          </button>
        </div>
      </field>
    </record>
  </data>
</odoo>