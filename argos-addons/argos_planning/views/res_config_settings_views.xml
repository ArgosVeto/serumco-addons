<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.planning</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="90"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@data-key='planning']/div[@name='planning']" position="inside">
          <div class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane">
              <field name="appointment_constraint"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="appointment_constraint"/>
              <div class="text-muted">
                Activate the constraint that prevents the creation of an appointment without presence
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>

