<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_planning_assignment_tree" model="ir.ui.view">
    <field name="name">planning.assignment.form</field>
    <field name="model">planning.assignment</field>
    <field name="arch" type="xml">
      <tree string="Assignments">
        <field name="employee_id"/>
        <field name="operating_unit_id"/>
        <field name="start_date"/>
        <field name="end_date"/>
      </tree>
    </field>
  </record>

  <record id="view_planning_assignment_form" model="ir.ui.view">
    <field name="name">planning.assignment.form</field>
    <field name="model">planning.assignment</field>
    <field name="arch" type="xml">
      <form string="Assignment">
        <sheet>
          <group>
            <group>
              <field name="employee_id"/>
              <field name="operating_unit_id"/>
            </group>
            <group>
              <field name="start_date"/>
              <field name="end_date"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="planning_action_schedule_assignment" model="ir.actions.act_window">
    <field name="name">Assignments</field>
    <field name="res_model">planning.assignment</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem
        id="menu_planning_assignment"
        name="Assignments"
        sequence="30"
        parent="planning.planning_menu_schedule"
        action="planning_action_schedule_assignment"/>

</odoo>