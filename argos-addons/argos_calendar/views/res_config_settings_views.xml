<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.agenda</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="90"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@data-key='planning']" position="inside">
          <h2>Agenda icon</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_right_pane">
                <div class="content-group">
                  <div class="mt16 row">
                    <label for="hospital_icon" string="Icon for hospitalization plannings" class="col-xs-5 col-md-5 o_light_label"/>
                    <field name="hospital_icon" class="oe_inline col-xs-3 col-md-3" widget="image"/>
                  </div>
                </div>
                <div class="content-group">
                  <div class="mt16 row">
                    <label for="hour_icon" string="Icon for plannings in waiting room" class="col-xs-5 col-md-5 o_light_label"/>
                    <field name="hour_icon" class="oe_inline col-xs-3 col-md-3" widget="image"/>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_right_pane">
                <div class="content-group">
                  <div class="mt16 row">
                    <label for="invoice_icon" string="Icon for plannings in check out phase" class="col-xs-5 col-md-5 o_light_label"/>
                    <field name="invoice_icon" class="oe_inline col-xs-3 col-md-3" widget="image"/>
                  </div>
                </div>
                <div class="content-group">
                  <div class="mt16 row">
                    <label for="medical_icon" string="Icon for plannings in consultation room" class="col-xs-5 col-md-5 o_light_label"/>
                    <field name="medical_icon" class="oe_inline col-xs-3 col-md-3" widget="image"/>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>

