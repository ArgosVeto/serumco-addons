<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="ir_rule_purchase_request_operating_unit" model="ir.rule">
    <field name="model_id" ref="purchase_request.model_purchase_request"/>
    <field name="domain_force">['|',
      ('operating_unit_id','=', False),
      ('operating_unit_id','in',user.operating_unit_ids.ids)]
    </field>
    <field name="name">Purchase requests from allowed operating units</field>
    <field name="global" eval="True"/>
    <field eval="1" name="perm_unlink"/>
    <field eval="1" name="perm_write"/>
    <field eval="1" name="perm_read"/>
    <field eval="1" name="perm_create"/>
  </record>

  <record id="ir_rule_purchase_request_line_operating_unit" model="ir.rule">
    <field name="model_id" ref="purchase_request.model_purchase_request_line"/>
    <field name="domain_force">['|',
      ('operating_unit_id','=', False),
      ('operating_unit_id','in',user.operating_unit_ids.ids)]
    </field>
    <field name="name">Purchase request lines from allowed operating units</field>
    <field name="global" eval="True"/>
    <field eval="1" name="perm_unlink"/>
    <field eval="1" name="perm_write"/>
    <field eval="1" name="perm_read"/>
    <field eval="1" name="perm_create"/>
  </record>
</odoo>

