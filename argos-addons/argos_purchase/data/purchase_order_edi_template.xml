<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="purchase_order_edi_mail_template_data" model="mail.template">
      <field name="name">Purchase order confirmed</field>
      <field name="model_id" ref="purchase.model_purchase_order"/>
      <field name="subject">Pyxis customer order : ${object.get_centravet_subscriber_code()}</field>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="partner_to">${object.partner_id.id}</field>
      <field name="auto_delete" eval="True"/>
      <field name="body_html">
        <![CDATA[
          <span>Find our attached order in this mail.</span>
      ]]>
      </field>
    </record>
  </data>
</odoo>