    <record id="purchase_request_view_form_inherit" model="ir.ui.view">
      <field name="name">purchase.request.view.form.inherit</field>
      <field name="model">purchase.request</field>
      <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
      <field name="arch" type="xml">
        <field name="requested_by" position="after">
          <field name="operating_unit_id"/>
        </field>
        <field name="group_id" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <xpath expr="//header[1]" position="replace">
          <header>
            <field name="request_confirm" invisible="1"/>
            <button name="button_confirm" string="Confirm" type="object"
                    attrs="{'invisible': ['|', ('request_confirm', '=', True), ('state', '!=', 'approved')]}"/>
            <field name="state" widget="statusbar" statusbar_visible="draft, approved"/>
          </header>
        </xpath>
        <xpath expr="//field[@name='line_ids']/tree" position="replace">
          <tree decoration-muted="cancelled == True">
            <field name="is_centravet" invisible="1"/>
            <field name="product_id"/>
            <field name="supplier_id" attrs="{'invisible':[('pooled_stock', '=', True)]}"/>
            <field name="pooled_stock"/>
            <field name="name"/>
            <field name="product_qty"/>
            <field name="product_uom_id" groups="uom.group_uom"/>
            <field name="date_required"/>
            <field name="estimated_cost" widget="monetary" invisible="1"/>
            <field name="currency_id" invisible="1"/>
            <field name="company_id" groups="base.group_multi_company" widget="selection" invisible="1"/>
            <field name="cancelled" invisible="1"/>
            <field name="is_editable" invisible="1"/>
            <field name="purchased_qty"/>
            <field name="purchase_state"/>
            <field name="emergency" attrs="{'invisible': ['|', ('is_centravet', '!=', True), ('pooled_stock', '=', True)]}"/>
          </tree>
        </xpath>
        <xpath expr="//field[@name='line_ids']/form/sheet/group/group/field[@name='product_id']" position="after">
          <field name="supplier_id" attrs="{'invisible':[('pooled_stock', '=', True)]}"/>
          <field name="is_centravet" invisible="1"/>
          <field name="pooled_stock"/>
          <field name="emergency" attrs="{'invisible': [('is_centravet', '!=', True)]}"/>
        </xpath>
        <xpath expr="//field[@name='origin']" position="after">
          <field name="pooled_stock_exists" invisible="1"/>
          <field name="pooled_stock_operating_unit_id"
                 attrs="{'invisible': [('pooled_stock_exists', '!=', True)], 'required': [('pooled_stock_exists', '=', True)]}"/>
        </xpath>
        <xpath expr="//div[@name='button_box']" position="replace">
          <div class="oe_button_box" name="button_box">
            <!--<button type="object" name="action_view_purchase_request_line" class="oe_stat_button"
                    attrs="{'invisible':[('line_count', '=', 0)]}" icon="fa-list">
              <field name="line_count" widget="statinfo" string="Lines"/>
            </button>-->
            <button type="object" name="action_view_purchase_order" class="oe_stat_button"
                    attrs="{'invisible':[('purchase_count', '=', 0)]}" icon="fa-shopping-cart">
              <field name="purchase_count" widget="statinfo" string="Purchase Orders"/>
            </button>
            <button type="object" name="action_view_ou_internal_picking" class="oe_stat_button"
                    attrs="{'invisible':[('operating_unit_picking_count', '=', 0)]}" icon="fa-truck">
              <field name="operating_unit_picking_count" widget="statinfo" string="OU pickings"/>
            </button>
          </div>
        </xpath>
      </field>
    </record>

    <record id="purchase_request_view_tree_inherit" model="ir.ui.view">
      <field name="name">purchase.request.view.tree.inherit</field>
      <field name="model">purchase.request</field>
      <field name="inherit_id" ref="purchase_request.view_purchase_request_tree"/>
      <field name="arch" type="xml">
        <field name="company_id" position="before">
          <field name="operating_unit_id"/>
        </field>
      </field>
    </record>

    <record id="purchase_request_line_view_tree_inherit" model="ir.ui.view">
      <field name="name">purchase.request.line.view.tree.inherit</field>
      <field name="model">purchase.request.line</field>
      <field name="inherit_id" ref="purchase_request.purchase_request_line_tree"/>
      <field name="arch" type="xml">
        <field name="company_id" position="before">
          <field name="operating_unit_id"/>
        </field>
      </field>
    </record>

    <record id="purchase_request_line_view_search_inherit" model="ir.ui.view">
      <field name="name">purchase.request.line.view.search.inherit</field>
      <field name="model">purchase.request.line</field>
      <field name="inherit_id" ref="purchase_request.purchase_request_line_search"/>
      <field name="arch" type="xml">
        <field name="date_required" position="after">
          <field name="pooled_stock" invisible="1"/>
        </field>
        <filter name="cancel" position="after">
          <filter name="pooled_stock" domain="[('pooled_stock','=', True)]" string="Pooled stock"/>
        </filter>
      </field>
    </record>

  </data>
</odoo>