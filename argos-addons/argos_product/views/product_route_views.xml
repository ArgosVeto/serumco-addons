<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="product_route_view_form" model="ir.ui.view">
      <field name="name">product.route.view.form</field>
      <field name="model">product.route</field>
      <field name="arch" type="xml">
        <form>
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name"/>
							</h1>
						</div>
					</sheet>
				</form>
      </field>
    </record>
    <record id="product_route_view_tree" model="ir.ui.view">
      <field name="name">product.route.view.tree</field>
      <field name="model">product.route</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>
    <record id="product_route_action" model="ir.actions.act_window">
			<field name="name">Product Routes</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.route</field>
			<field name="view_mode">tree,form</field>
		</record>
  </data>
</odoo>