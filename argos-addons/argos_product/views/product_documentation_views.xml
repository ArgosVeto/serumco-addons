<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="product_documentation_view_tree" model="ir.ui.view">
      <field name="name">product.documentation.view.tree</field>
      <field name="model">product.documentation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="doc_type"/>
          <field name="doc_url"/>
        </tree>
      </field>
    </record>
    <record id="product_documentation_view_form" model="ir.ui.view">
      <field name="name">product.documentation.view.form</field>
      <field name="model">product.documentation</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="doc_type" required="1"/>
              <field name="doc_url" required="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>