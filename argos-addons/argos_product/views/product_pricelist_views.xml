<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="product_pricelist_view_tree_inherit" model="ir.ui.view">
      <field name="name">product.pricelist.view.tree.inherit</field>
      <field name="model">product.pricelist</field>
      <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='company_id']" position="before">
          <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
      </field>
    </record>

    <record id="product_pricelist_view_form_inherit" model="ir.ui.view">
      <field name="name">product.pricelist.view.form.inherit</field>
      <field name="model">product.pricelist</field>
      <field name="inherit_id" ref="product.product_pricelist_view"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='pricelist_settings']" position="after">
          <group>
            <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"
                   domain="[('company_id','=', company_id), ('user_ids', 'in', uid)]"/>
          </group>
        </xpath>
      </field>
    </record>

  </data>
</odoo>