<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <page name="inventory" position="attributes">
          <attribute name="string">Logistics</attribute>
        </page>
        <group name="group_lots_and_weight" position="inside">
          <field name="net_weight" string="Net Weight (in g)"/>
          <field name="gross_weight" string="Gross Weight (in g)"/>
        </group>
        <notebook position="inside">
          <page string="Medical Informations" name="medical_information">
            <group>
              <group>
                <field name="species_ids" widget="many2many_tags"/>
                <field name="race_ids" widget="many2many_tags" context="{'default_type': 'race'}"/>
                <field name="nature"/>
                <field name="administration_route_ids" widget="many2many_tags"/>
                <field name="approval_id" options="{'no_create_edit': True}"/>
                <field name="renewal"/>
              </group>
              <group>
                <field name="active_substance_id"/>
                <field name="substance_quantity"/>
                <field name="substance_uom_id"/>
                <field name="qsp_quantity"/>
                <field name="qsp_uom_id"/>
              </group>
              <group>
                <field name="act_type" widget="radio"/>
              </group>
              <group>
                <field name="is_antibiotic"/>
                <field name="is_critical_antibiotic"/>
                <field name="is_antirabies"/>
                <field name="is_drug"/>
                <field name="is_refrigerated"/>
              </group>
            </group>
            <group>
              <field name="indication"/>
            </group>
          </page>
          <page name="documentation" string="Documentations">
            <field name="documentation_ids"/>
          </page>
        </notebook>
        <xpath expr="//label[@for='name']" position="attributes">
          <attribute name="string">Internal Label</attribute>
        </xpath>
        <group name="description" position="attributes">
          <attribute name="invisible">1</attribute>
        </group>
        <div name="options" position="before">
          <group>
            <field name="description_sale" string="Customer Label"/>
            <field name="routing_value_ids" widget="many2many_tags"/>
          </group>
        </div>
        <xpath expr="//field[@name='uom_po_id']" position="after">
          <field name="price_sensivity" widget="radio"/>
          <field name="is_top_ten"/>
        </xpath>
        <xpath expr="//label[@for='list_price']" position="attributes">
          <attribute name="string">Sales Price TTC</attribute>
        </xpath>
        <xpath expr="//label[@for='standard_price']" position="attributes">
          <attribute name="string">Cost Price</attribute>
        </xpath>
        <xpath expr="//field[@name='uom_id']" position="attributes">
          <attribute name="string">Sales uom</attribute>
        </xpath>
        <field name="categ_id" position="attributes">
          <attribute name="string">Argos Product Category</attribute>
        </field>
        <group name="packaging" position="attributes">
          <attribute name="invisible">1</attribute>
        </group>
      </field>
    </record>

    <record id="product_template_base_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.base.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="argos_base.product_template_form_inherit"/>
      <field name="arch" type="xml">
        <field name="cip" position="after">
          <field name="amm"/>
        </field>
      </field>
    </record>

    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.only.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <page name="variants" position="attributes">
          <attribute name="string">Features</attribute>
        </page>
        <xpath expr="//page[@name='variants']" position="inside">
          <group>
            <field name="additional_features"/>
          </group>
        </xpath>
      </field>
    </record>

  </data>
</odoo>