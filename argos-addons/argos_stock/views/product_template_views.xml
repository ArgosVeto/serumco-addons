<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="product_template_stock_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.stock.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="stock.view_template_property_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='inventory']/group[3]" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
      </field>
    </record>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
      <field name="name">product.template.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="argos_product.product_template_form_view_inherit"/>
      <field name="arch" type="xml">
        <field name="indication" position="after">
          <field name="description_pickingout" string="Usage Tips"/>
        </field>
      </field>
    </record>
  </data>
</odoo>