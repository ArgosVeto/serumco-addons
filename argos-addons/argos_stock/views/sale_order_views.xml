<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="prescription_consultation_view_form" model="ir.ui.view">
      <field name="name">rescription.consultation.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="argos_sale.consultation_view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/div/button[@name='action_view_invoice']" position="after">
          <field name="prescription_count" invisible="1"/>
          <button type="object"
                  name="button_view_prescription"
                  class="oe_stat_button"
                  icon="fa-truck"
                  attrs="{'invisible': [('prescription_count', '=', 0)]}" groups="base.group_user">
            <field name="prescription_count" widget="statinfo" string="Delivery"/>
          </button>
        </xpath>
        <xpath expr="//header/button[@id='action_confirm']" position="before">
          <field name="state" invisible="1"/>
          <button name="button_print_picking"
                  string="Print prescription"
                  attrs="{'invisible': [('id', '=', False)]}"
                  type="object"/>
          <button name="button_prescription_send"
                  string="Send by Email"
                  attrs="{'invisible': [('id', '=', False)]}"
                  type="object"/>
        </xpath>
      </field>
    </record>

    <record id="sale_order_view_form_inherit" model="ir.ui.view">
      <field name="name">sale.order.view.form.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="argos_sale.consultation_view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
          <field name="description_sale"/>
          <field name="description_pickingout"/>
          <field name="renewal"/>
        </xpath>
        <xpath expr="//field[@name='order_line']/form" position="inside">
          <group>
            <field name="description_sale"/>
            <field name="description_pickingout"/>
            <field name="renewal"/>
          </group>
        </xpath>
      </field>
    </record>

  </data>
</odoo>