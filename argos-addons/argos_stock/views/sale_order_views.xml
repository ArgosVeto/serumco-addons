<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="prescription_consultation_view_form" model="ir.ui.view">
      <field name="name">rescription.consultation.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="argos_sale.consultation_view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/div/button[@name='action_view_invoice']" position="after">
          <field name="prescription_count" invisible="1"/>
          <button type="object"
                  name="button_view_prescription"
                  class="oe_stat_button"
                  icon="fa-truck"
                  attrs="{'invisible': [('prescription_count', '=', 0)]}" groups="base.group_user">
            <field name="prescription_count" widget="statinfo" string="Prescription"/>
          </button>
        </xpath>
        <xpath expr="//header/button[@id='action_confirm']" position="before">
          <field name="is_delivered" invisible="1"/>
          <button name="button_print_picking"
                  string="Print prescription"
                  attrs="{'invisible': ['|', ('prescription_count', '=', 0), ('is_delivered', '=', True)]}"
                  type="object"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>