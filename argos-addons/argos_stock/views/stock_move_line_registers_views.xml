<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="registers_argos_move_line_tree_view" model="ir.ui.view">
      <field name="name">registers.argos.move.line.tree.view</field>
      <field name="model">stock.move.line</field>
      <field name="mode">primary</field>
      <field name="inherit_id" ref="stock.view_move_line_tree"/>
      <field name="priority" eval="100"/>
      <field name="arch" type="xml">
        <xpath expr="/tree" position="attributes">
          <attribute name="create">false</attribute>
        </xpath>
        <field name="date" position="after">
          <field name="prescription"/>
          <field name="employee_id"/>
          <field name="order_number"/>
        </field>
        <field name="product_id" position="before">
          <field name="partner_id"/>
          <field name="chip"/>
          <field name="tattoo"/>
          <field name="passport"/>
        </field>
        <field name="lot_id" position="after">
          <field name="peremption"/>
        </field>
      </field>
    </record>

    <record id="registers_argos_move_line_form_view" model="ir.ui.view">
      <field name="name">registers.argos.move.line.form.view</field>
      <field name="model">stock.move.line</field>
      <field name="mode">primary</field>
      <field name="inherit_id" ref="stock.view_move_line_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='date']" position="after">
          <field name="prescription"/>
          <field name="employee_id"/>
          <field name="order_number"/>
        </xpath>
        <xpath expr="//field[@name='product_id']" position="after">
          <field name="partner_id"/>
          <field name="chip"/>
          <field name="tattoo"/>
          <field name="passport"/>
        </xpath>
        <xpath expr="//field[@name='lot_id']" position="after">
          <field name="peremption"/>
        </xpath>
      </field>
    </record>

    <record id="registers_argos_move_line_action" model="ir.actions.act_window">
      <field name="name">Registers</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">stock.move.line</field>
      <field name="view_mode">tree,kanban,pivot,form</field>
      <field name="context">{'form_view_ref': 'argos_stock.registers_argos_move_line_form_view', 'tree_view_ref':
        'argos_stock.registers_argos_move_line_tree_view'}
      </field>
    </record>

    <menuitem id="stock_move_line_registers"
              name="Registers"
              action="registers_argos_move_line_action"
              parent="stock.menu_warehouse_report"
              sequence="151"/>
  </data>
</odoo>