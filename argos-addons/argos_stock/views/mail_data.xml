<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="mail_template_prescription_send" model="mail.template">
    <field name="name">Prescription: Send Email</field>
    <field name="model_id" ref="stock.model_stock_picking"/>
    <field name="subject">${object.company_id.name} - Prescription (Ref ${object.name or 'n/a' })
    </field>
    <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
    <field name="partner_to">${object.sale_id.partner_id.id}</field>
    <field name="body_html" type="html">
      <div style="margin: 0px; padding: 0px;">
        <p style="margin: 0px; padding: 0px; font-size: 12px;">
          Hello,
          <br/>
          <br/>

          Your prescription <strong>${object.name}</strong> is sent in this email.

          <br/>
          <br/>
          Do not hesitate to contact us if you have any questions.
          <br/>
          <br/>
        </p>
      </div>
    </field>
    <field name="report_template" ref="action_print_precription"/>
    <field name="report_name">${(object.name or '').replace('/','_')}</field>
    <field name="lang">${object.sale_id.partner_id.lang}</field>
    <field name="user_signature" eval="False"/>
    <field name="auto_delete" eval="False"/>
  </record>
</odoo>