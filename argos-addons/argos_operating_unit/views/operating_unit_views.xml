<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="operating_unit_view_form" model="ir.ui.view">
      <field name="name">operating.unit.view.form</field>
      <field name="model">operating.unit</field>
      <field name="inherit_id" ref="operating_unit.view_operating_unit_form"/>
      <field name="arch" type="xml">
        <group name="main_group" position="replace">
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button type="object" name="toggle_active" icon="fa-archive" string="Archive"
                      attrs="{'invisible': [('active', '=', False)]}"/>
              <button type="object" name="toggle_active" string="Restore"
                      attrs="{'invisible': [('active', '=', True)]}"/>
            </div>
            <div class="oe_title">
              <h1>
                <field name="name" required="1"/>
                <field name="active" invisible="1"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="partner_id" required="0" readonly="1" attrs="{'invisible': [('id', '=', False)]}"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="code"/>
                <label for="street" string="Address"/>
                <div class="o_address_format">
                  <field name="street" placeholder="Street..." class="o_address_street"/>
                  <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                  <field name="city" placeholder="City" class="o_address_city"/>
                  <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                  <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                  <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True}'/>
                </div>
                <field name="email"/>
                <field name="phone" string="Principal Phone"/>
                <field name="mobile" string="Secondary Phone"/>
                <field name="emergency_phone"/>
              </group>
              <group>
                <field name="type_id"/>
                <field name="vat"/>
                <field name="calendar_id"/>
                <field name="consult_room_number"/>
                <field name="equipment_ids" widget="many2many_tags"/>
                <field name="certification_ids" widget="many2many_tags"/>
              </group>
            </group>
            <notebook>
              <page string="Structure"/>
              <page name="digital_service" string="Digital Service">
                <group string="Digital services offered by the clinic">
                  <field name="click_and_collect"/>
                  <field name="online_appointment_booking"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </group>
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]" position="inside">
          <group>
            <group>
              <field name="rooms_ids">
                <tree string="Rooms">
                  <field name="name" modifiers="{}"/>
                  <field name="area"/>
                </tree>
              </field>
            </group>
          </group>
          <group>
            <group string="Convenient service">
              <field name="access_reduced_mobility" string="Access for people with reduced mobility"/>
              <field name="parking" string="Parking"/>
            </group>
          </group>
          <group>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>