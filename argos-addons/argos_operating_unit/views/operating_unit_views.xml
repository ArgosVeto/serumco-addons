<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="operating_unit_view_form" model="ir.ui.view">
      <field name="name">operating.unit.view.form</field>
      <field name="model">operating.unit</field>
      <field name="inherit_id" ref="operating_unit.view_operating_unit_form"/>
      <field name="arch" type="xml">
        <group name="main_group" position="replace">
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button type="object" name="toggle_active" string="Archive" attrs="{'invisible': [('active', '=', False)]}"/>
              <button type="object" name="toggle_active" string="Restore" attrs="{'invisible': [('active', '=', True)]}"/>
            </div>
            <div class="oe_title">
              <h1>
                <field name="name" required="1"/>
                <field name="active" invisible="1"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="partner_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="code"/>
                <field name="address"/>
                <field name="email"/>
                <field name="principal_phone"/>
                <field name="secondary_phone"/>
                <field name="emergency_phone"/>
              </group>
              <group>
                <field name="type_id"/>
                <field name="vat"/>
                <field name="opening_time"/>
                <field name="consult_room_number"/>
                <field name="skill_ids" widget="many2many_tags"/>
                <field name="equipment_ids" widget="many2many_tags"/>
              </group>
            </group>
            <notebook>
              <page string="Structure"/>
              <page string="Digital Service">
                <group string="Digital services offered by the clinic">
                  <field name="click_and_collect"/>
                  <field name="ecommerce_relay_point"/>
                  <field name="online_appointment_booking"/>
                </group>
              </page>
            </notebook>
          </sheet>
          <!--div class="oe_chatter" name="studio_div_8fe9a2">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div-->
        </group>
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]" position="inside">
          <group>
            <group>
              <field name="rooms_ids">
                <tree string="Rooms">
                  <field name="name" modifiers="{}"/>
                  <field name="area"/>
                </tree>
              </field>
            </group>
          </group>
          <group>
            <group string="Convenient service">
              <field name="access_reduced_mobility" string="Access for people with reduced mobility"/>
              <field name="parking" string="Parking"/>
            </group>
          </group>
          <group>
            </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>