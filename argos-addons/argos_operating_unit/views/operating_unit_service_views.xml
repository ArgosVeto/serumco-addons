<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="operating_unit_service_view_form">
      <field name="name">operating.unit.service.view.form</field>
      <field name="model">operating.unit.service</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <sheet string="Service">
            <div class="oe_title">
              <h1>
                <field name="name"/>
              </h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="operating_unit_service_view_tree">
      <field name="model">operating.unit.service</field>
      <field name="name">operating.unit.service.view.tree</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="action_open_operating_unit_service_view" model="ir.actions.act_window">
      <field name="name">Services</field>
      <field name="res_model">operating.unit.service</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_operating_unit_service"
              action="action_open_operating_unit_service_view"
              name="Services"
              sequence="61" parent="base.menu_users"/>

  </data>
</odoo>