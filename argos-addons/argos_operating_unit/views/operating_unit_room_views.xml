<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="operating_unit_room_view_form">
			<field name="model">operating.unit.room</field>
			<field name="name">operating.unit.room.view.form</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet string="Rooms">
						<div class="oe_title">
							<h1>
								<field name="name" required="1"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="operating_unit_id" string="Clinical"/>
								<field name="area"/>
							</group>
							<group></group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="operating_unit_room_view_tree">
			<field name="model">operating.unit.room</field>
			<field name="name">operating.unit.room.view.tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="operating_unit_id"/>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record id="action_open_operating_unit_view" model="ir.actions.act_window">
			<field name="name">Rooms</field>
			<field name="res_model">operating.unit.room</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_operating_unit_room"
		          action="action_open_operating_unit_view"
		          name="Rooms"
		          sequence="60" parent="base.menu_users"/>

	</data>
</odoo>