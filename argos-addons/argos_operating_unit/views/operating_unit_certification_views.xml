<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="operating_unit_certification_view_form">
			<field name="model">operating.unit.certification</field>
			<field name="name">operating.unit.certification.view.form</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet string="Certification">
						<div class="oe_title">
							<h1>
								<field name="name" required="1"/>
							</h1>
						</div>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="operating_unit_certification_view_tree">
			<field name="model">operating.unit.certification</field>
			<field name="name">operating.unit.certification.view.tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record id="action_open_operating_unit_certification_view" model="ir.actions.act_window">
			<field name="name">Certifications</field>
			<field name="res_model">operating.unit.certification</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_operating_unit_certification"
		          action="action_open_operating_unit_certification_view"
		          name="Certifications"
		          sequence="61" parent="base.menu_users"/>

	</data>
</odoo>