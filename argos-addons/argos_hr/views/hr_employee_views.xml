<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="hr_employee_view_form_inherit" model="ir.ui.view">
      <field name="name">hr.employee.view.form.inherit</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <field name="department_id" position="before">
          <field name="registration_number"/>
          <field name="order_number" attrs="{'required': [('is_veterinary', '=', True)]}"/>
          <field name="operating_unit_ids" widget="many2many_tags"/>
        </field>
        <field name="departure_reason" position="after">
          <field name="leave_date"/>
        </field>
        <xpath expr="//page[@name='personal_information']/group[1]" position="inside">
          <group string="Drive Permit" name="drive_permit">
            <field name="drive_permit_number"/>
            <field name="issue_location"/>
            <field name="issue_date"/>
          </group>
        </xpath>
        <field name="mobile_phone" position="before">
          <field name="is_veterinary"/>
        </field>
        <field name="work_location" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <field name="department_id" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <field name="km_home_work" position="attributes">
          <attribute name="invisible">1</attribute>
        </field>
        <field name="address_id" position="attributes">
          <attribute name="domain">[('is_company', '=', True)]</attribute>
          <attribute name="context">{'show_address': 1, 'default_is_company': True}</attribute>
        </field>
      </field>
    </record>
  </data>
</odoo>