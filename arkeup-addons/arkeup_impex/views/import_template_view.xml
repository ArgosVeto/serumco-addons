<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="import_template_view_form_inherit" model="ir.ui.view">
      <field name="name">import.template.view.form.inherit</field>
      <field name="model">ir.model.import.template</field>
      <field name="inherit_id" ref="smile_impex.view_import_template_form"/>
      <field name="arch" type="xml">

        <field name="model_id" position="attributes">
          <attribute name="invisible">0</attribute>
        </field>
        <field name="method" position="attributes">
          <attribute name="invisivle">1</attribute>
        </field>
        <field name="method_args" position="attributes">
          <attribute name="invisivle">1</attribute>
        </field>
        <group name="method" position="after">
          <group>
            <group>
              <field name="file_name" invisible="True"/>
              <field name="import_file"
                     filename="file_name"
                     required="True"
                     widget='file_filter'
                     options="{'accept': '.csv'}"/>
            </group>
            <!--<group>-->
              <!--<field name="export_file" readonly="True"/>-->
            <!--</group>-->
          </group>
        </group>

        <!--<group>-->
        <field name="method_args" position="after">
          <field name="export_xls"/>
        </field>
        <!--</group>-->
      </field>
    </record>

    <record id="export_template_view_form_inherit" model="ir.ui.view">
      <field name="name">export.template.view.form.inherit</field>
      <field name="model">ir.model.export.template</field>
      <field name="inherit_id" ref="smile_impex.view_export_template_form"/>
      <field name="arch" type="xml">
        <field name="unique" position="after">
          <button name="download_export" string="Download" type="object" class="oe_highlight"/>
          <field name="path" invisible="1" options="{'reload_on_button': True}"/>
          <field name="filename" invisible="1" options="{'reload_on_button': True}"/>
        </field>
      </field>
    </record>
  </data>
</odoo>