<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Jitsi assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="https://meet.jit.si/external_api.js"/>
            <script type="text/javascript" src="/jitsi_meet_integration/static/src/js/jitsi_room_widget.js"/>
            <script type="text/javascript" src="/jitsi_meet_integration/static/src/js/jitsi_room.js"/>
        </xpath>
    </template>


    <record id="view_calendar_event_form" model="ir.ui.view">
        <field name="name">view.calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <field name="res_model" position="before">
                <button string="Open Jitsi" class="oe_stat_button pull-right" icon="fa-desktop"
                        type="object" name="action_open_jitsi"
                        attrs="{'invisible': [('use_jitsi', '=', False)]}"/>
            </field>
            <notebook position="inside">
                <page string="Jitsi Remote Meeting">
                    <group>
                        <group>
                            <field name="use_jitsi"/>
                            <field name="jitsi_password" attrs="{'invisible': [('use_jitsi', '=', False)]}"/>
                            <field name="jitsi_open" attrs="{'invisible': [('use_jitsi', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>