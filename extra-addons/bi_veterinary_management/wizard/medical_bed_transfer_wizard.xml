<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bed_transfer_wizard_view" model="ir.ui.view">
            <field name="name">bed.transfer.wizard.view</field>
            <field name="model">medical.bed.transfer.wizard</field>
            <field name="arch" type="xml">
                <form string="Bed Transfer">
                     <h2>
                     Plz choose the new bed to allocate 
                     </h2>
                    <group>
                        <field name="newbed_id"/>
                        <field name="reason"/>
                    </group>
                    <footer>
                           <button name="bed_transfer" string="Transfer" class="oe_highlight" type="object"/>
                           or
                           <button name="cancel" string="Cancel" special="cancel" class="oe_highlight"/>
                     </footer>
                </form>
            </field>
        </record>

        <act_window
            id="bi_action_bed_transfer" 
            name="Bed Transfer"
            binding_model="medical.inpatient.registration"
            res_model="medical.bed.transfer.wizard"
            view_mode="form"
            target="new"
            />

</odoo>
