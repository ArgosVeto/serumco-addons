<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="medical_lab_test_invoice_form" model="ir.ui.view">
            <field name="name">medical.lab.test.invoice.form</field>
            <field name="model">medical.lab.test.invoice</field>
            <field name="arch" type="xml">
                <form string="Create Lab Test">
                    <separator colspan="4"
                        string="Do you want to generate the invoice(s)?" />
                    <newline />
                    <separator string="Create Invoice"
                        colspan="6" />
                    <footer>
                    <button name="create_lab_invoice" string="Create Lab Invoice"
                        type="object" class="oe_highlight" />
                        or
                    <button special="cancel" string="Cancel"
                        class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_create_lab_invoice" name="Create Lab Invoice"
            res_model="medical.lab.test.invoice" binding_model="medical.patient.lab.test"
            view_mode="form" target="new" />

</odoo>
