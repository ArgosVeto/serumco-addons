<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="bi_view_prescription_shipment_wizard_view"
            model="ir.ui.view">
            <field name="name">prescription.shipment.wizard.view</field>
            <field name="model">create.prescription.shipment</field>
            <field name="arch" type="xml">
                <form string="Create prescription invoices">
                    <separator colspan="4"
                        string="Do you want to create the prescription Shipment ?" />
                    <newline />
                    <separator string="                  "
                        colspan="6" />
                        <footer>
                    <button name="create_prescription_shipment"
                        class="oe_highlight" string="Create Prescription Shipment"
                        type="object" />
                    or
                    <button special="cancel" class="oe_highlight" string="Cancel" />
                        </footer>
                </form>

            </field>
        </record>

        <act_window id="bi_action_create_prescription_shipment1"
            name="Create Prescription Shipment" res_model="create.prescription.shipment"
            binding_model="medical.prescription.order" view_mode="form"
            target="new" />

</odoo>
