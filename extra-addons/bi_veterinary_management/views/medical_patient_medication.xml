<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bi_medical_patient_medication_form_view" model="ir.ui.view">
            <field name="name">medical.patient.medication.form.view</field>
            <field name="model">medical.patient.medication</field>
            <field name="arch" type="xml">
                <form string="Medication History">
                    <group>
                        <group colspan="4" col="4">
                            <field name="medicament_id" />
                            <field name="doctor_id" />
                            <field name="is_active" />
                            <field name="indication_pathology_id" />
                            <field name="start_treatment" />
                            <field name="end_treatment" />
                            <field name="course_completed" />
                            <field name="discontinued" />
                        </group>
                        <separator colspan="4" string="Admnistration" />
                        <group colspan="4" col="4">
                            <field name="medical_drug_form_id" />
                            <field name="medical_drug_route_id" />
                        </group>
                        <separator colspan="4" string="Dosage" />
                        <group colspan="4" col="4">
                            <field name="dose" />
                            <field name="qty" />
                            <field name="dose_unit_id" />
                        </group>
                        <separator colspan="4"
                            string=" Treatment Duration " />
                        <group colspan="4" col="4">
                            <field name="duration" />
                            <field name="duration_period" />
                        </group>
                        <separator colspan="4" string="  Common Dosage  " />
                        <group colspan="4" col="4">
                            <field name="medication_dosage_id" />
                            <field name="admin_times" />
                        </group>
                        <separator colspan="4"
                            string="  Specific Dosage  " />
                        <group colspan="4" col="4">
                            <field name="frequency" />
                            <field name="frequency_unit" />
                        </group>
                        <separator colspan="4" string=" Notes" />
                        <group colspan="4" col="4">
                            <field name="notes" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

</odoo>
