<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bi_medical_rounding_procedure_code_form_view" model="ir.ui.view">
            <field name="name">medical.procedure.form</field>
            <field name="model">medical.procedure</field>
            <field name="arch" type="xml">
                <form string="Code">
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </form>
            </field>
        </record>

        <record id="bi_medical_procedure_tree_view" model="ir.ui.view">
            <field name="name">medical.procedure.tree.view</field>
            <field name="model">medical.procedure</field>
            <field name="arch" type="xml">
                <tree string="Procedure">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="bi_action_medical_procedure" model="ir.actions.act_window">
            <field name="name">Medical Procedures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.procedure</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_medical_procedure" name="Medical Procedures"
            parent="bi_veterinary_management.main_menu_configartion"
            sequence='3' />

        <menuitem id="menu_sub_medical_procedure" action="bi_action_medical_procedure"
            sequence="0" parent="menu_medical_procedure" />

</odoo>
