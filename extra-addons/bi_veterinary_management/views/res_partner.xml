<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_pet_owners_form" model="ir.ui.view">
            <field name="name">view.pet.owners.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="function" position="after">
                    <field name="relationship" />
                    <field name="relative_id" />
                </field>
                <notebook>
                    <page string="Medical">
                        <group colspan="6" col="6">
                            <field name="is_patient" />
                            <field name="is_owner" />
                            <field name="is_doctor" />
                            <field name="is_institution" />
                            <field name="is_person" />
                            <field name="is_insurance_company" />
                            <field name="is_pharmacy" />
                            <field name="domiciliary_id" />
                            <field name="is_pet" />
                            <field name="owner_id"
                                attrs="{'invisible':[('is_owner','=',True)],'required':[('is_pet','!=',False)] }"
                                string="Owner" />
                        </group>
                        <field name="insurance" colspan="4"
                            widget="one2many_list" />
                    </page>
                </notebook>
            </field>
        </record>


        <record id="bi_action_pet_owners" model="ir.actions.act_window">
            <field name="name">Pet Owners</field>
            <field name="res_model">res.partner</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="bi_action_health_center" model="ir.actions.act_window">
            <field name="name">Health Center</field>
            <field name="res_model">res.partner</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="bi_action_insurance_company">
            <field name="name">Insurances Company</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_insurance_company','=',1)]</field>
            <field name="context">{"default_is_insurance_company":1,"search_default_is_insurance_company":1}
            </field>
        </record>

        <menuitem id="menu_pet_owners_code" action="bi_action_pet_owners"
            string="Pet Owners" parent="menu_patients" sequence="2" />

        <menuitem id="menu_health_centers1" name="Health Centers"
            parent="main_menu_configartion" />

        <menuitem id="health_center_main" action="bi_action_health_center"
            string="Health Center" parent="menu_health_centers1"
            sequence="2" />

        <menuitem id="menu_insurance_company" action="bi_action_insurance_company"
            sequence="0" parent="menu_insurance" />

</odoo>
