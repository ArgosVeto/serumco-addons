<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bi_medical_drug_form" model="ir.ui.view">
            <field name="name">medical.drug.form</field>
            <field name="model">medical.drug.form</field>
            <field name="arch" type="xml">
                <form string="Medicament Form">
                    <group colspan="4" col="4">
                        <field name="name" />
                        <field name="code" />
                    </group>
                </form>
            </field>
        </record>

        <record id="bi_medical_drug_form_tree" model="ir.ui.view">
            <field name="name">medical.drug.form.tree</field>
            <field name="model">medical.drug.form</field>
            <field name="arch" type="xml">
                <tree string="Medicament Form">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record id="action_medical_drug_view" model="ir.actions.act_window">
            <field name="name">Medicament Form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.drug.form</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_medication_drug_form" action="action_medical_drug_view"
            sequence="5" parent="menu_medicament" />

</odoo>
