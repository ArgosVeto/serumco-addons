<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Tree view -->
        <record id="bi_view_insurance_tree" model="ir.ui.view">
            <field name="name">view.insurance.tree</field>
            <field name="model">medical.insurance</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Insurance List">
                    <field name="number" />
                    <field name="partner_id" />
                    <field name="type" />
                    <field name="insurance_company_id" />
                    <field name="category" />
                    <field name="member_since" />
                    <field name="member_exp" />
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="bi_view_insurance_form" model="ir.ui.view">
            <field name="name">view.insurance.form</field>
            <field name="model">medical.insurance</field>
            <field name="arch" type="xml">
                <form string="Insurances">
                    <group colspan="4" col="4">
                        <field name="number" required="1" />
                        <field name="partner_id" domain="[('is_patient', '=', True)]"
                            context="{'default_is_patient': 1, 'search_default_is_patient': 1,'search_default_is_person': 1,'default_is_person': 1}" />
                        <field name="type" />
                        <field name="insurance_company_id"
                            required="1"
                            context="{'default_is_insurance_company': 1, 'search_default_is_insurance_company': 1}" />
                        <field name="plan_id" />
                        <field name="category" />
                        <field name="member_since" />
                        <field name="member_exp" />
                        <newline />
                        <field name="notes" colspan="4" />
                    </group>
                </form>

            </field>
        </record>

        <!-- Search View -->
        <record id="bi_view_insurance_search" model="ir.ui.view">
            <field name="name">view.insurance.search</field>
            <field name="model">medical.insurance</field>
            <field name="type">search</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Search Insurances">
                    <separator orientation="vertical" />
                    <field name="number" />
                    <field name="partner_id" />
                    <field name="insurance_company_id" />
                    <newline />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_medical_insurance">
            <field name="name">Insurances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.insurance</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="bi_view_insurance_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_insurance" name="Insurances"
            parent="main_menu_configartion" />

        <menuitem id="menu_sub_insurance" action="action_medical_insurance"
            sequence="1" parent="menu_insurance" />

</odoo>
