<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_medical_hospital_oprating_room_form" model="ir.ui.view">
            <field name="name">view.medical.hospital.oprating.room.form
            </field>
            <field name="model">medical.hospital.oprating.room</field>
            <field name="arch" type="xml">
                <form string="Hospital Operating Rooms">
                    <group colspan="4" col="4">
                        <field name="name" required="1" />
                        <field name="institution"
                            context="{'default_is_institution': 1, 'search_default_is_institution': 1}" />
                        <field name="hospital_building_id" />
                        <field name="hospital_unit_id" />
                        <newline />
                        <field name="extra_info" colspan="4" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_medical_hospital_oprating_room_tree" model="ir.ui.view">
            <field name="name">view.medical.hospital.oprating.room.tree
            </field>
            <field name="model">medical.hospital.oprating.room</field>
            <field name="arch" type="xml">
                <tree string="Health Center Building Info">
                    <field name="name" />
                    <field name="institution" />
                    <field name="hospital_building_id" />
                    <field name="hospital_unit_id" />
                </tree>
            </field>
        </record>

        <record id="action_medical_hospital_oprating_room"
            model="ir.actions.act_window">
            <field name="name">Hospital Operating Rooms</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.hospital.oprating.room</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_health_centers_hospital_oprating_room"
            action="action_medical_hospital_oprating_room"
            sequence="6" parent="menu_health_centers" />



</odoo>
