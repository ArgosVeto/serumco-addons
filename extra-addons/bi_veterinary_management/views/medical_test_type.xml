<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_tree_new_lab_test" model="ir.ui.view">
            <field name="name">tree.new.lab.test</field>
            <field name="model">medical.test_type</field>
            <field name="arch" type="xml">
                <tree string="Lab test type">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record id="view_tree_new_lab_test" model="ir.ui.view">
            <field name="name">form.new.lab.test</field>
            <field name="model">medical.test_type</field>
            <field name="arch" type="xml">
                <tree string="Lab test type">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record id="view_form_new_lab_test" model="ir.ui.view">
            <field name="name">form.new.lab.test</field>
            <field name="model">medical.test_type</field>
            <field name="arch" type="xml">
                <form string="Lab Test">
                    <sheet>
                        <notebook>
                            <page string="Main Info">
                                <group colspan="4" col="4">
                                    <field name="name" required="1" />
                                    <field name="code" />
                                    <field name="critearea_ids"
                                        colspan="4" nolabel="1">
                                    </field>
                                    <field name="product_id" />
                                </group>
                            </page>
                            <page string="Extra Info">
                                <field name="info" />
                            </page>
                        </notebook>
                    </sheet>
                </form>

            </field>
        </record>

        <record id="bi_action_medical_test_type" model="ir.actions.act_window">
            <field name="name">New Type of Lab test</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.test_type</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="New Type of Lab test" id="menu_lab_new_type_lab_test"
            parent="main_menu_conf_laboratory" action="bi_action_medical_test_type" />

</odoo>
