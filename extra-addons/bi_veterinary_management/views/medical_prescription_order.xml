<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Tree view -->
        <record id="prescription_order_tree_view" model="ir.ui.view">
            <field name="name">prescription.order.tree.view</field>
            <field name="model">medical.prescription.order</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Prescription">
                    <field name="patient_id" />
                    <field name="name" />
                    <field name="doctor_id" />
                    <field name="user_id" />
                    <field name="prescription_date" />
                </tree>
            </field>
        </record>

        <record id="view_prescription_order_form_view" model="ir.ui.view">
            <field name="name">view.prescription.order.form.view</field>
            <field name="model">medical.prescription.order</field>
            <field name="arch" type="xml">
                <form string="Prescription">
                    <header>

                    </header>
                    <sheet>
                        <group colspan="4" col="4" string="Prescription">
                            <field name="patient_id" required="1" />
                            <field name="name" />
                            <field name="owner_name_id" required="1" />
                            <field name="prescription_date"
                                required="1" />
                            <field name="user_id" required="1" />
                            <field name="doctor_id" required="1" />
                            <field name="pharmacy_partner_id"
                                context="{'default_is_pharmacy': 1, 'search_default_is_pharmacy': 1}" />
                            <field name="medical_appointment_id"
                                invisible="context.get('apt_id', False)" />
                            <field name="state" readonly="1" />
                            <field name="no_invoice" />
                            <field name="inv_id" readonly="1" />
                            <field name="invoice_done" invisible="1" />
                        </group>
                        <newline />
                        <field name="prescription_line_ids"
                            required="True" colspan="4" nolabel="1"
                            widget="one2many_list" />
                        <newline />
                        <group string="Notes">
                            <field name="notes" colspan="4"
                                nolabel="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="prescription_order_search_view" model="ir.ui.view">
            <field name="name">prescription.order.search.view</field>
            <field name="model">medical.prescription.order</field>
            <field name="type">search</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Search Patient Prescriptions">
                    <separator orientation="vertical" />
                    <field name="name" />
                    <field name="patient_id" />
                    <field name="prescription_date" />
                    <field name="pharmacy_partner_id" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_medical_prescription_order">
            <field name="name">Prescription Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.prescription.order</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="prescription_order_search_view" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


        <record id="action_pre_to_invoice" model="ir.actions.act_window">
            <field name="name">Prescriptions to be invoiced</field>
            <field name="res_model">medical.prescription.order</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <act_window id="bi_action_create_prescription_invoice"
            name="Create Prescription Invoice" res_model="create.prescription.invoice"
            binding_model="medical.prescription.order" view_mode="form"
            target="new" />

        <act_window id="bi_action_create_prescription_shipment1"
            name="Create Prescription Shipment" res_model="create.prescription.shipment"
            binding_model="medical.prescription.order" view_mode="form"
            target="new" />

        <menuitem id="dental_prescription"
             name="Prescriptions"
            parent="bi_veterinary_management.main_menu_veterinary" 
            sequence="4" />

        <menuitem id="dental_prescription_child" action="action_medical_prescription_order"
            name="Prescriptions" parent="dental_prescription" />

        <menuitem id="prescription_to_be_invoice" action="action_pre_to_invoice"
            string="Prescription To Be Invoice" parent="Invoice"
            sequence="4" />

</odoo>
