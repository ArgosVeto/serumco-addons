<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_medical_family_code_form" model="ir.ui.view">
            <field name="name">medical.family_code.form</field>
            <field name="model">medical.family_code</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Family List">
                    <sheet>
                        <group col="4">
                            <field name="name"
                                context="{'default_is_owner':True,'default_is_person':True,'is_owner':True}"
                                domain="[('is_owner','=',True)]" />
                            <field name="operational_sector_id" />
                        </group>
                        <separator string="Members" />
                        <field name="members_ids" mode="tree"
                            context="{'default_is_pet':True}" widget="many2many"
                            domain="[('is_pet','=',True)]" />
                        <separator string="Extra Info" />
                        <field name="info" />

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_medical_family_code_tree" model="ir.ui.view">
            <field name="name">medical.family_code.tree</field>
            <field name="model">medical.family_code</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Family List">
                    <field name="name" />
                    <field name="operational_sector_id" />
                </tree>
            </field>
        </record>



        <record id="action_medical_family_code" model="ir.actions.act_window">
            <field name="name">Families</field>
            <field name="res_model">medical.family_code</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_patients" string="Patients" name='Patients'
            parent="bi_veterinary_management.main_menu_veterinary"
            sequence="0" />
        <menuitem id="menu_medical_family_code" action="action_medical_family_code"
            string="Familes" parent="menu_patients" sequence="1" />

</odoo>