<?xml version="1.0" encoding="utf-8"?>
<odoo>

		<record id="bi_medical_operation_view" model="ir.ui.view">
            <field name="name">medical.operation.form.view</field>
            <field name="model">medical.operation</field>
            <field name="arch" type="xml">
                <form string="Procedures" version="9.0">
                    <sheet>
                        <group col="4">
                            <field name="procedure_id"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="bi_medical_operation_tree_view" model="ir.ui.view">
            <field name="name">medical.operation.tree.view</field>
            <field name="model">medical.operation</field>
            <field name="arch" type="xml">
               <tree string="Procedures">
                    <field name="procedure_id"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="bi_action_medical_operation" model="ir.actions.act_window">
            <field name="name">Procedures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.operation</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

</odoo>
