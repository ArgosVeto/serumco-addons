<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="medical_patient_ambulatory_care_form_view"
            model="ir.ui.view">
            <field name="name">medical.patient.ambulatory_care.form.view
            </field>
            <field name="model">medical.patient.ambulatory_care</field>
            <field name="arch" type="xml">
                <form string="Patient Ambulatory Care">
                    <header>
                        <button name="done_button" states="draft"
                            string="Done" icon="gtk-execute" type="object"
                            modifiers="{'invisible': [['state', 'not in', ['draft']]]}" />
                        <field name="state" readonly="1" widget="statusbar"
                            statusbar_visible="draft" modifiers="{'readonly': true}" />
                    </header>
                    <sheet string="Basic Info">
                        <group colspan="4" col="4">
                            <field name="name" />
                            <field name="health_physician_id" />
                            <field name="ordering_physician_id" />
                            <field name="patient" />
                            <field name="pathology_base_condition_id" />
                            <field name="patient_evaluation_id"
                                domain="[('patient_id', '=',patient)]"
                                context="{'name':patient}" attrs= "{'invisible':[('patient','=', False)]}" />
                            <field name="session_number" />
                            <field name="session_start" />
                        </group>
                        <notebook colspan="4">
                            <page string="Main">
                                <group colspan="4" string="Procedures">
                                    <field name="procedures_ids"
                                        colspan="4" nolabel="1">
                                        <tree editable="bottom" string="Procedures">
                                            <field name="code_id" required="1" />
                                            <field name="notes" required="1" />
                                        </tree>
                                    </field>
                                </group>
                                <group colspan="4" string="Summary">
                                    <field name="session_notes"
                                        colspan="4" nolabel="1" />
                                </group>
                                <group colspan="4" col="6"
                                    id="ambulatory_care_finish">
                                    <field name="warning" />
                                    <field name="session_end" />
                                    <field name="next_session" />
                                </group>
                            </page>
                            <page string="Other">
                                <group colspan="6" col="6"
                                    string="Vital Signs">
                                    <field name="temperature" />
                                    <field name="systolic" />
                                    <field name="diastolic" />
                                    <field name="bpm" />
                                    <field name="respiratory_rate" />
                                    <field name="osat" />
                                </group>
                                <group colspan="6" col="6" string="Other">
                                    <field name="glycemia" />
                                    <field name="evolution" />
                                </group>
                            </page>


                            <page string="Medication">
                                <group colspan="2" col="2">
                                    <field name="stock_location_id" />
                                </group>
                                <field name="medicaments_ids"
                                    nolabel="1">
                                    <tree string="Medicaments"
                                        editable="bottom">
                                        <field name="medicament_id" />
                                        <field name="quantity" />
                                        <field name="lot_id" />
                                        <field name="comment" />
                                    </tree>
                                </field>

                                <field name="medical_supplies_ids"
                                    nolabel="1">
                                    <tree string="Medical Supplies"
                                        editable="bottom">
                                        <field name="product_id" />
                                        <field name="quantity" />
                                        <field name="comment" />
                                        <field name="lot_id" />
                                    </tree>
                                </field>

                                <field name="vaccines_ids"
                                    nolabel="1">
                                    <tree string="Vaccines"
                                        editable="bottom">
                                        <field name="product_id" />
                                        <field name="quantity" />
                                        <field name="lot_id" />
                                        <field name="dose" />
                                        <field name="next_dose_date" />
                                        <field name="comment" />
                                    </tree>
                                </field>
                            </page>
                            <page invisible="1" string="Stock Moves">
                                <field name="moves_ids" string="Stock Moves" />
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="medical_patient_ambulatory_care_tree_view"
            model="ir.ui.view">
            <field name="name">medical.patient.ambulatory_care.tree.view
            </field>
            <field name="model">medical.patient.ambulatory_care</field>
            <field name="arch" type="xml">
                <tree string="Patient Ambulatory Care">
                    <field name="warning" />
                    <field name="name" />
                    <field name="patient" />
                    <field name="session_start" />
                    <field name="health_physician_id" />
                    <field name="evolution" />
                </tree>
            </field>
        </record>

        <record id="bi_medical_patient_ambulatory_care_action"
            model="ir.actions.act_window">
            <field name="name">Patient Ambulatory Care</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.patient.ambulatory_care</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_patient_ambulatory_care" parent="menu_nursing"
            action="bi_medical_patient_ambulatory_care_action" sequence="3" />
</odoo>
