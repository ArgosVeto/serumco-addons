<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="bi_medical_imaging_test_request_form_view" model="ir.ui.view">
            <field name="name">medical.imaging.test.request.form.view</field>
            <field name="model">medical.imaging.test.request</field>
            <field name="arch" type="xml">
                <form string="Test Requests">
                    <header>
                        <button name="confirm" string="Confirm"
                            type="object" states="draft" />
                        <button name="done" string="Create Result"
                            type="object" states="confirmed" />
                        <button name="cancel" string="Cancel"
                            type="object" states="draft" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,confirmed,done,cancel" />
                    </header>
                    <group colspan="4" col="4">
                        <field name="name" />
                        <field name="test_date" />
                        <field name="test_id" />
                        <field name="patient_id" />
                        <field name="physician_id" />
                        <field name="urgent" />
                        <newline />
                        <field name="comments" colspan="4" />
                    </group>
                </form>
            </field>
        </record>

        <record id="medical_imaging_test_request_tree" model="ir.ui.view">
            <field name="name">medical.imaging.test.request.tree.view</field>
            <field name="model">medical.imaging.test.request</field>
            <field name="arch" type="xml">
                <tree string="Test Requests">
                    <field name="name" />
                    <field name="test_date" />
                    <field name="test_id" />
                    <field name="patient_id" />
                    <field name="physician_id" />
                    <field name="urgent" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="action_medical_imaging_test_request" model="ir.actions.act_window">
            <field name="name">All Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.imaging.test.request</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_medical_imaging_test_request_1"
            action="action_medical_imaging_test_request" string="All Request"
            parent="menu_medical_imaging_test_request" sequence="0" />

        <record id="bi_action_medical_imaging_test_result_draft"
            model="ir.actions.act_window">
            <field name="name">Draft Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.imaging.test.request</field>
            <field name="domain">[('state','=','draft')]</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_medical_imaging_test_result_confirmed"
            model="ir.actions.act_window">
            <field name="name">Confirmed Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.imaging.test.request</field>
            <field name="domain">[('state','=','confirmed')]</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_medical_imaging_test_result_done"
            model="ir.actions.act_window">
            <field name="name">Done Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.imaging.test.request</field>
            <field name="domain">[('state','=','done')]</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="action_medical_imaging_test_result_cancle"
            model="ir.actions.act_window">
            <field name="name">Cancel Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.imaging.test.request</field>
            <field name="domain">[('state','=','cancle')]</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_medical_imaging_test_request_5"
            action="action_medical_imaging_test_result_cancle" string="Cancel Requests"
            parent="menu_medical_imaging_test_request" sequence="4" />

        <menuitem id="menu_medical_imaging_test_request_2"
            action="bi_action_medical_imaging_test_result_draft" string="Draft Requests"
            parent="menu_medical_imaging_test_request" sequence="1" />

        <menuitem id="menu_medical_imaging_test_request_3"
            action="action_medical_imaging_test_result_confirmed"
            string="Confirmed Requests" parent="menu_medical_imaging_test_request"
            sequence="2" />

        <menuitem id="menu_medical_imaging_test_request_4"
            action="action_medical_imaging_test_result_done" string="Done Requests"
            parent="menu_medical_imaging_test_request" sequence="3" />


</odoo>
