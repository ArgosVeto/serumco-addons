<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="bi_medical_pathology_groups_form_view" model="ir.ui.view">
            <field name="name">medical.pathology.group.form.view</field>
            <field name="model">medical.pathology.group</field>
            <field name="arch" type="xml">
                <form string="Pathology Groups">
                    <group colspan="4" col="4">
                        <field name="name" />
                        <field name="code" />
                        <field name="desc" />
                        <newline />
                        <field name="info" colspan="4" />
                    </group>
                </form>
            </field>
        </record>

        <record id="bi_medical_pathology_groups_tree_view" model="ir.ui.view">
            <field name="name">medical.pathology.group.tree.view</field>
            <field name="model">medical.pathology.group</field>
            <field name="arch" type="xml">
                <tree string="Pathology Groups">
                    <field name="name" />
                    <field name="code" />
                    <field name="desc" />
                </tree>
            </field>
        </record>

        <record id="bi_action_medical_pathology_groups_tree" model="ir.actions.act_window">
            <field name="name">Pathology Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.pathology.group</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_sub_pathology_group" action="bi_action_medical_pathology_groups_tree"
            sequence="3" parent="menu_diseases" />


</odoo>