<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="medical_physician_view_form" model="ir.ui.view">
            <field name="name">medical.physician.view.form</field>
            <field name="model">medical.physician</field>
            <field name="arch" type="xml">
                <form string="Physician">
                    <notebook>
                        <page string="Main Info">
                            <group colspan="4" col="4">
                                <field name="name" required="1"
                                    context="{'default_is_doctor': 1, 'search_default_is_doctor': 1}" />
                                <field name="institution_id"
                                    context="{'default_is_institution': 1, 'search_default_is_institution': 1}" />
                                <field name="speciality_id" />
                                <field name="code" />
                            </group>
                        </page>
                        <page string="Extra Info">
                            <field name="info" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="medical_physician_view_view_search" model="ir.ui.view">
            <field name="name">medical.physician.view.search</field>
            <field name="model">medical.physician</field>
            <field name="arch" type="xml">
                <search string="Search Physician">
                    <separator orientation="vertical" />
                    <field name="name" />
                    <field name="code"/>
                    <field name="institution_id"/>
                    <newline />

                </search>
            </field>
        </record>

        <record id="medical_physician_view_tree" model="ir.ui.view">
            <field name="name">medical.physician.view.tree</field>
            <field name="model">medical.physician</field>
            <field name="arch" type="xml">
                <tree string="Physician Information">
                    <field name="name" />
                    <field name="code" />
                    <field name="institution_id" />
                    <field name="speciality_id" />
                </tree>
            </field>
        </record>

        <record id="bi_action_medical_physician" model="ir.actions.act_window">
            <field name="name">Physicians</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.physician</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_physician" string="Physicians" name='Physicians'
            parent="main_menu_configartion" sequence="3" />

        <menuitem id="menu_medical_physician" parent="menu_physician"
            action="bi_action_medical_physician" sequence="6" />

</odoo>
