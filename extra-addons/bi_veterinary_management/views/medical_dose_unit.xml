<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bi_medical_dose_unit_view" model="ir.ui.view">
            <field name="name">medical.dose.unit.form.view</field>
            <field name="model">medical.dose.unit</field>
            <field name="arch" type="xml">
                <form string="Medicament Units">
                    <group colspan="4" col="4">
                        <field name="name" required="1" />
                        <field name="desc" />
                    </group>
                </form>
            </field>
        </record>

        <record id="bi_medical_dose_unit_tree_view" model="ir.ui.view">
            <field name="name">medical.dose.unit.tree.view</field>
            <field name="model">medical.dose.unit</field>
            <field name="arch" type="xml">
                <tree string="Medicament Units">
                    <field name="name" />
                    <field name="desc" />
                </tree>
            </field>
        </record>

        <record id="bi_action_medical_dose_unit" model="ir.actions.act_window">
            <field name="name">Medicament Dose Units</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.dose.unit</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_medication_dose_unit" action="bi_action_medical_dose_unit"
            sequence="3" parent="bi_veterinary_management.menu_medicament" />

</odoo>
