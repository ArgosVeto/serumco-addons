<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="bi_medical_health_service_view_form" model="ir.ui.view">
            <field name="name">medical.health_service.view.form</field>
            <field name="model">medical.health_service</field>
            <field name="arch" type="xml">
                <form string="Service" >
                    <header>
                        <button name="button_set_to_confirm"
                            string="Confirm" states="draft" type="object" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,confirmed" />
                    </header>
                    <group colspan="8" col="8">
                        <field name="name" />
                        <field name="description" />
                        <field name="patient_id" />
                        <field name="service_date" />
                        <field name="service_line_ids" nolabel="1"
                            colspan="8">
                            <tree>
                                <field name="to_invoice" />
                                <field name="description" />
                                <field name="product_id" />
                                <field name="qty" />
                                <field name="from_date" />
                                <field name="to_date" />
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="bi_medical_health_service_view_tree" model="ir.ui.view">
            <field name="name">medical.health_service.view.tree</field>
            <field name="model">medical.health_service</field>
            <field name="arch" type="xml">
                <tree string="Service">
                    <field name="name" />
                    <field name="description" />
                    <field name="patient_id" />
                    <field name="service_date" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <act_window id="action_medical_service_create_invoice"
            name="Create Invoice" res_model="medical.health.service.invoice"
            binding_model="medical.health_service" view_mode="form" target="new" />


        <record id="action_medical_health_service" model="ir.actions.act_window">
            <field name="name">Medical Service</field>
            <field name="res_model">medical.health_service</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_medical_health_service" string="Medical Service"
            name='Medical Service' parent="bi_veterinary_management.main_menu_veterinary"
            sequence="12" />

        <menuitem id="menu_health_service" action="action_medical_health_service"
            string="Medical Service" parent="menu_medical_health_service"
            sequence="1" />

</odoo>
