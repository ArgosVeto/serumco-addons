<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="bi_veterinary_management.medical_view_report_lab_result_demo_report">
			<t t-call="web.external_layout">
				<div class="page">
					<div class="oe_structure"/>
					<div class="row">
						<div>
							<h3 class="text-center mb32">
								<strong>LABORATORY REPORT</strong>
							</h3>
						</div>
					</div>
					<br/>
					<div class="row mt32 mb32" id="informations">
						<div class="col-xs-3">
							<strong>Patient Name:</strong>
							<p t-field="doc.patient_id.patient_id.name"/>
						</div>
						<div class="col-xs-3">
							<strong>Patient ID:</strong>
							<p t-field="doc.patient_id.name"/>
						</div>
						<div class="col-xs-3">
							<strong>Age:</strong>
							<p t-field="doc.patient_id.age"/>
						</div>
						<div class="col-xs-3">
							<strong>Sex:</strong>
							<p t-field="doc.patient_id.sex"/>
						</div>
						<div class="col-xs-3">
							<strong>Doctor:</strong>
							<p t-field="doc.requestor_physician_id.name"/>
						</div>
					</div>
					<br>
						<br/>
					</br>
					<div class="row">
						<div class="text-center mb32">
							<h1>
								<p t-field="doc.medical_test_type_id.name"/>
							</h1>
						</div>
					</div>
					<div>
						<table class="table table-condensed">
							<thead>
								<tr>
									<th>Analyte</th>
									<th>Result</th>
									<th>Normal Range</th>
									<th>Units</th>
								</tr>
							</thead>
							<tbody class="sale_tbody">
								<t t-foreach="doc.critearea_ids" t-as="test1">
									<tr>
										<td>
											<span t-field="test1.test_name"/>
										</td>
										<td>
											<span t-field="test1.result"/>
										</td>
										<td>
											<t t-if="test1.lower_limit">
												<t t-if="test1.upper_limit == 0">
													Above
													<span t-field="test1.lower_limit"/>
												</t>
											</t>
											<t t-if="test1.lower_limit == 0">
												<t t-if="test1.upper_limit">
													Below
													<span t-field="test1.upper_limit"/>
												</t>
											</t>
											<t t-if="test1.lower_limit">
												<t t-if="test1.upper_limit">
													<span t-field="test1.lower_limit"/>
													-
													<span t-field="test1.upper_limit"/>
												</t>
											</t>
											<t t-if="test1.lower_limit == 0">
												<t t-if="test1.upper_limit == 0">-</t>
											</t>
										</td>
										<td>
											<span t-field="test1.lab_test_unit_id"/>
										</td>
									</tr>
								</t>
							</tbody>
						</table>
					</div>
					<br>
						<br>
							<br/>
						</br>
					</br>
					<div class="row mt32 mb32" id="informations">
						<div>
							<strong>Signature:_____________________________</strong>
						</div>
					</div>
					<div class="oe_structure"/>
				</div>
			</t>

        </template>
        <template id="lab_result_demo">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-call="bi_veterinary_management.medical_view_report_lab_result_demo_report" t-lang="doc.patient_id.patient_id.lang"/>
				</t>
			</t>

        </template>
</odoo>
