<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id='ecomm_five_tab_first_big_img_multi_slider_products'>
        <t t-set="combination_info"
            t-value="product._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)" />
        <div class="product-item"
            t-att-data-publish="product.website_published and 'on' or 'off'">
            <t t-if="combination_info['has_discounted_price']">
               <t t-set="diff_amount"
                  t-value="round(combination_info['list_price'] - combination_info['price'],2)"/>
               <t t-set="dis_per"
                  t-value="round(diff_amount*100/combination_info['list_price'])"/>
                   <div class="argos-product-discount-label">
                       <span class="argos-pro-label-disc"> 
                        <t t-esc="'-'+'%s'%(dis_per)+'&#x25;'"/></span>
                   </div>
              </t>
            <div class="slider-icons">
                <div class="wislist_biz d-inline-block">
                    <t
                        t-if="product.env.ref('website_sale_wishlist.add_to_wishlist').active and product.product_variant_ids">
                        <t t-set="in_wish"
                        t-value="product.product_variant_ids &amp; request.env['product.wishlist'].current().mapped('product_id')" />
                        <button class="btn btn-link o_add_wishlist"
                        t-att-disabled='in_wish or None' title="Add to Wishlist"
                        t-att-data-product-product-id="product.product_variant_ids[0].id"
                        data-action="o_wishlist">
                        <img src="/website_argos/static/src/img/heart.png" class="img img-fluid"/>
                    </button>
                    </t>
                </div>
                <t t-if="product.tag_ids">
                    <div class="argos_tags">
                        <p>
                            <t t-foreach="product.tag_ids" t-as="tags">
                                <div class="tag-name">
                                    <a t-att-href="'/shop?tag_id=%s' % tags.id" class="">
                                    <t t-esc="tags.name"/>
                                </a>
                                </div>
                            </t>
                        </p>
                    </div>
                </t>
            </div>
            <div class="p-item-image-big" style="margin-bottom: 50px;">
                <div style="width: 96px;height: 22px; border-radius: 4px; border: solid 1px rgba(99, 186, 233, 0.4); background-color: #ffffff; color: #41ABE4;">
                    <span>Alimentation</span>
                </div>
                <div style="width: 64px; height: 22px; border-radius: 4px; border: solid 1px rgba(99, 186, 233, 0.4); background-color: #ffffff; color: #41ABE4;">
                    <span>Premium</span>
                </div>
                <a t-att-href="'/shop/product/%s' % slug(product)">
                    <img class="front" t-att-alt="product.name"
                        t-att-title="product.name"
                        t-att-src="website.image_url(product, 'image_1920','314x385')" style="width: 397px; height: 397px; object-fit: cover;"/>
                </a>
            </div>
            <div class="pwp-info">
                <t t-if="product.public_categ_ids">
                    <div class="argos_categ">
                        <p>
                            <t t-foreach="product.public_categ_ids" t-as="categs">
                                <a t-att-href="'/shop/category/%s' % slug(categs)">
                                    <span class="categ-name">
                                        <t t-esc="categs.name"/>
                                    </span>
                                </a>
                            </t>
                        </p>
                    </div>
                </t>
                <div class="title-price" style="width: 518px; height: 76px; font-family: AvenirLTStd; font-size: 28px; font-weight: 900; font-stretch: normal; font-style: normal; line-height: 1.36; letter-spacing: normal; color: #201f4c;">
                    <h3 class="pwpi-title">
                        <a t-attf-href="/shop/product/#{ slug(product) }">
                            <span t-field='product.name' />
                        </a>
                    </h3>
                    <div class="slider-product-rating">
                        <t t-call="website_argos.product_item_stars"/>
                    </div>
                    <h3 class="pwpi-title">
                        <a t-attf-href="/shop/product/#{ slug(product) }">
                            <t t-call="website_sale.product_price" />
                        </a>
                    </h3>
                </div>
                <div class="title-desc" style="margin-top:30px; width: 450px;height: 78px; overflow: hidden; text-overflow: ellipsis;white-space: nowrap; line-height: 1.39;">
                    <span t-field='product.description_web'/>
                </div>
                <div class="o_wsale_product_btn" style="margin-top:20px;">
                    <form action="/shop/cart/update" method="post">
                        <input type="hidden" name="csrf_token"
                            t-att-value="request.csrf_token()" />
                        <input name="product_id"
                            t-att-value="product.product_variant_id.id" type="hidden" />
                        <div class="cart_div_biz d-inline-block" style="width: 398px; height: 44px; border-radius: 22px; background-color:#41ABE4;">
                            <input type="hidden" name="csrf_token"
                                t-att-value="request.csrf_token()" style="color:#ffffff;"/>
                            <input name="product_id"
                                t-att-value="product.product_variant_id.id" type="hidden" />
                            <button class="btn btn-link a-submit d-inline-block" style="color:#ffffff;"><img src="/website_argos/static/src/img/cart.png" class="img img-fluid"/> Ajouter
                                <span class="text-primary ml-1 mr-1 text-bold"> - </span>
                                <t t-call="website_sale.product_price" style="color:#ffffff;"/>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </template>
