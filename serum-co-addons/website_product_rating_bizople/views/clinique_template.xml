<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="clinic_search_box" name="Clinic Searchbox">
        <div t-attf-class="input-group #{_classes}" role="search
            ">
             <form t-attf-class="o_clinic_searchbar_form  {_classes}" t-att-action="action if action else '/clinic-detail'" method="get">
                <input type="text" name="search" class="search-query form-control oe_search_box" placeholder="Search..." t-att-value="search"/>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary oe_search_button" aria-label="Search" title="Search"><i class="fa fa-search"/></button>
                </div>                
            </form>            
        </div>
    </template>

	<template id="clinic_template">
        <t t-call="website.layout">
            <div class="raw container">
            	<form action="/clinic-detail" method="post" class="">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="col-md-12 mt8">
                        <t t-call="website_product_rating_bizople.clinic_search_box"/>
                    </div>                    

            		<div class="col-md-12 mt16 row">
	            		<div class="col-md-2 search_by_service">
		                    <select id="service" name="service"  class="form-control o_website_form_input" placeholder="Service">
		                        <option value="">service</option>
		                         <t t-foreach="service_ids" t-as="s">
		                            <option t-att-value="s.id" 
		                                    t-att-id="s.id" 
		                                    t-att-class="s.name">
		                                <t t-esc="s.name" />
		                            </option>
		                        </t>
		                    </select>                        
	                	</div>
                        <div class="col-md-2 online_appointment">
                            <a role="button" class="btn btn-primary" href="#">
                                <span style="padding:5px;font-size:12px;">PRISE RDV EN LIGNE</span>
                            </a>
                        </div>

                        <div class="col-md-2 click_collect">
                            <a role="button" class="btn btn-primary" href="#">
                                <span style="padding:5px;">CLICK &amp; COLLECT</span>
                            </a>
                        </div>

                        <div class="col-md-2 open_today">
                            <span style="padding:5px;font-size:12px;border:1px solid black">OUVERT AUJOURD HUI</span>
                        </div>
                        <div class="col-md-2 criteria">
                            <span style="padding:5px;">De Criteres</span>
                        </div>
                        <div><span>toto</span></div>
                        <!--div class="col-md-2 see_map">
                            <a role="button" class="btn btn-primary" href="#">
                                <span style="padding:5px;">Voir La Carte</span>
                            </a>
                        </div-->
                    </div>
                    <t t-if="not partner_ids">
                        <h3>No record found.</h3>
                    </t>
                    <t t-if="partner_ids">
                		<div class="row o_clinic_main_row col-md-12 mt32">
                        	<t t-foreach="partner_ids" t-as="partner">
                        		<div class="col-md-4 card oe_clinic">
				                    <span t-field="partner.image_1920"
				                        t-options="{'widget': 'image', 'preview_image': 'image_1024' if image_1024 else 'image_256'}"
				                        class="d-flex h-100 justify-content-center align-items-center"/>

			                       <a role="button"  class="btn btn-primary mt16" t-attf-href="/add-clinic/#{partner.id}">
                                        ADD
                                    </a>
                                    <div  class="mt8">
                                    	<h3 class="o_clinic_name_title">
                                    		<a itemprop="clinic_name" href="#" t-att-content="partner.clinic_name" t-field="partner.clinic_name" />
                                    	</h3>
                                   </div>

                                    <div class="mt8">
                                    	<h5 class="o_display_name">
                                    		<a itemprop="display_name" href="#" t-att-content="partner.display_name" t-field="partner.display_name" />
                                    	</h5>
                                   </div>

                                    <div class="mt8">
                                        <span t-esc='partner' t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"  class="address-inline"/>
                                    </div>

                                    <div class="row">
		                                 <a role="button" href="#" class="btn btn-primary mb16 mt16 d-none d-xl-inline-block">
		                                    <span class="">Appeler</span>
		                                </a>
		                                 <a role="button" href="#" class="btn btn-primary mb16 mt16 d-none d-xl-inline-block">
		                                    <span class="">Prendre RDV</span>
		                                </a>
		                            </div>
                        		</div>
                        	</t>
                    	</div>
                    </t>
                </form>
            </div>
        </t>
	</template>
</odoo>