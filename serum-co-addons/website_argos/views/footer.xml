<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="footer_clinic_search_box" name="Footer Clinic Searchbox">
        <div role="search">
             <form t-attf-class="o_clinic_searchbar_form input-group" t-att-action="action if action else '/clinic-detail'" method="get">
                <input type="text" name="search" class="search-query form-control oe_search_box " placeholder="Adresse/Code Postal/Ville…" t-att-value="search"/>
                <div class="se-btn">
                    <button type="submit" class="btn btn-light ok-btn oe_search_button" aria-label="Search" title="Search">OK</button>
                </div>         
            </form>            
        </div>
    </template>

	<template id="website_argos_footer" inherit_id="website.layout" name="Argos Footer">
	       <xpath expr="//footer[hasclass('o_footer')]" position="replace">
			<footer id="argos_footer" class="argos-footer o_footer">
				<div class="footer-service">
					<div class="container">
						<div class="row align-items-center">
							<div class="col-md-3 mb-3 mb-md-0">
								<div class="service-box d-flex align-items-center">
									<div class="image">
										<img src="/website_argos/static/src/img/footer-service1.svg"/>
									</div>
									<div class="text">
										<p class="text-primary">Présent dans 5 agglomérations françaises</p>
									</div>
								</div>
							</div>
							<div class="col-md-3 mb-3 mb-md-0">
								<div class="service-box d-flex align-items-center">
									<div class="image">
										<img src="/website_argos/static/src/img/footer-service2.svg"/>
									</div>
									<div class="text">
										<p class="text-primary">Disponible 7j/7 pour traiter vos urgences vétérinaires</p>
									</div>
								</div>
							</div>
							<div class="col-md-3 mb-3 mb-md-0">
								<div class="service-box d-flex align-items-center">
									<div class="image">
										<img src="/website_argos/static/src/img/footer-service3.svg"/>
									</div>
									<div class="text">
										<p class="text-primary">Livraison en Click &amp; Collect avec paiement sécurisé</p>
									</div>
								</div>
							</div>
							<div class="col-md-3 mb-3 mb-md-0">
								<div class="service-box d-flex align-items-center">
									<div class="image">
										<img src="/website_argos/static/src/img/footer-service4.svg"/>
									</div>
									<div class="text">
										<p class="text-primary">Plus de 3000 produits pour vos animaux </p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<section class="footer-newsletter">
					<div class="container">
						<div class="news-content">
							<div class="text">
								<t t-set="mailing_list_ids" t-value="website.get_mailing_list()"/>
								<h3 class="text-primary">Recevez l’essentiel<br/>de l’actu vétérinaire</h3>
								<p>Laboriosam beatae in voluptatum libero. Et repudiandae ratione sint <br/>voluptatem autem voluptates. Quo et repellendus ratione vel <br/>voluptatem et quasi.</p>
								<div class="input-group js_subscribe col-md-6 pd-0" data-list-id="1" data-name="Newsletter">
						        <input type="email" name="email" class="js_subscribe_email form-control" placeholder="Mon adresse e-mail"/>
						        <span class="input-group-append">
						            <a role="button" href="#" class="btn btn-primary js_subscribe_btn o_default_snippet_text">S'abonner</a>
						            <a role="button" href="#" class="btn btn-primary js_subscribed_btn d-none o_default_snippet_text" disabled="disabled">Thanks</a>
						        </span>
						    </div>
							</div>
						</div>
					</div>
				</section>
				<div class="footer-content bg-primary">
					<div class="container">
						<div class="logo-social">
							<div class="row align-items-center">
								<div class="col-md-6">
									<div class="argos-logo">
										<img src="/website_argos/static/src/img/argos-white-log.png" class="img img-fluid"/>
									</div>
								</div>
								<div class="col-md-6">
									<div class="footer-media">
										<a class="link" t-att-href="website.social_facebook"
											t-if="website.social_facebook" target="_blank">
											<i class="fa fa-facebook" />
										</a>
										<a class="link" t-att-href="website.social_youtube"
											t-if="website.social_youtube" target="_blank">
											<i class="fa fa-youtube-play" />
										</a>
										<a class="link" t-att-href="website.social_linkedin"
											t-if="website.social_linkedin" target="_blank">
											<i class="fa fa-linkedin" />
										</a>
										<a class="link" t-att-href="website.social_instagram"
											t-if="website.social_instagram" target="_blank">
											<i class="fa fa-instagram"></i>
										</a>
									</div>
								</div>
							</div>
						</div>
						<div class="main-content">
							<div class="row">
								<div class="col-md-3">
									<!-- <p class="heading">Nos cliniques</p> -->
									<a href="#demo" class="heading text-white d-block" data-toggle="collapse" aria-expanded="false">Nos cliniques</a>
								  	<div id="demo" class="collapse">
									    <ul class="footer-links">
											<li class="nav-item">
												<a class="nav-link" href="/prendre-rendez-vous">
													Prendre rendez-vous
												</a>
											</li>
											<li class="nav-item">
												<a class="nav-link" href="/clinic-detail">
													Trouver une clinique
												</a>
											</li>
											
											<t t-set="operating_unit" t-value="website.get_footer_operating_unit()"/>
											<t t-if="operating_unit">
		                    					<t t-foreach="operating_unit" t-as="ou">
		                    						<li class="nav-item">
														<a class="nav-link" t-attf-href="/clinic-detail/clinic-pratice/#{slug(ou.sudo())}">
															<t t-esc="ou.name"/>
														</a>
													</li>
		                    					</t>
		                    				</t>
										</ul>
								  	</div>
								</div>
								<div class="col-md-3">
									<a href="#demo1" class="heading text-white d-block" data-toggle="collapse" aria-expanded="false">Produits</a>
									<div id="demo1" class="collapse">
										<t t-set="cash_value" t-value="website.get_cash_values()"/>
										<t t-if="cash_value">
											<ul class="footer-links">
												<!-- <t t-set="default_category" t-value="website.default_category()"/> -->

												<t t-foreach="cash_value" t-as="c">
													<li class="nav-item">
														<t t-set="default_category" t-value="website.default_category(c)"/>

														<a class="nav-link"
														t-att-href="website.default_category(c)" 
															>

															<!-- t-att-href="'/shop/category/%s?category=%s&amp;search=&amp;attrib=%s-%s' %(,c.id,c.attribute_id.id,c.id)" -->
															<!-- t-att-href="'/shop?cash=%s' % slug(c)" -->
															<t t-esc="c.name"/>
														</a>
													</li>
												</t>
											</ul>
										</t>
									</div>
								</div>
								<div class="col-md-3">
									<a href="#demo2" class="heading text-white d-block" data-toggle="collapse" aria-expanded="false">Nous contacter</a>
									<div id="demo2" class="collapse">
										<ul class="footer-links">
											<li class="nav-item">
												<a class="nav-link" href="/clinic-contact">
													Contacter une clinique
												</a>
											</li>
											<li class="nav-item">
												<a class="nav-link" href="/clinic-contact">
													J'ai trouvé un animal
												</a>
											</li>
											<li class="nav-item">
												<a class="nav-link" href="/clinic-contact">
													Demande d'informations
												</a>
											</li>
											<li class="nav-item">
												<a class="nav-link" href="/clinic-contact">
													Service client clinique
												</a>
											</li>
											<li class="nav-item">
												<a class="nav-link" href="/clinic-contact">
													Service clinique e-commerce
												</a>
											</li>
											<li class="nav-item">
												<a class="nav-link" href="/jobs">
													Nous rejoindre
												</a>
											</li>
										</ul>
									</div>
								</div>
								<div class="col-md-3">
									<a href="#demo3" class="heading text-white d-block" data-toggle="collapse" aria-expanded="false">Nous contacter</a>
									<div id="demo3" class="collapse">
										<p class="address-text">
											Découvrez notre réseau de cabinets et cliniques vétérinaires au plus proche de vous et de votre animal : Bordeaux, Grenoble, Montpellier, Nantes et Saint-Etienne.
										</p>
										<t t-call="website_argos.footer_clinic_search_box"/>
									</div>
								</div>
							</div>
						</div>
						<div class="copyright-content">
							<div class="row align-items-center">
								<div class="col-md-3 d-none d-md-block">
									<p class="text-white m-0">
										© Argos 2020
									</p>
								</div>
								<div class="col-md-9 d-none d-md-block">
									<p class="m-0 text-white text-right">
										<a href="/legal-notice">Mentions légales</a><span class="mx-3"> - </span><a href="/gtc">CGV</a><span class="mx-3"> - </span><a href="/privacy-policy">Politique de confidentialité</a><span class="mx-3"> - </span><a href="#">Plan du site</a>
									</p>
								</div>
								<div class="col-md-12 mobile-cpyrgt d-block d-md-none">
									<p class="px-5 text-white text-left">
										<span>© Argos 2020</span><span class="mx-1"> - </span><a href="/legal-notice">Mentions légales</a><span class="mx-1"> - </span><a href="/gtc">CGV</a><span class="mx-1"> - </span><a href="/privacy-policy">Politique de confidentialité</a><span class="mx-1"> - </span><a href="#">Plan du site</a>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</footer>
		</xpath>
	</template>

	<record id="subscribe_thankyou" model="website.page">
	    <field name="url">/subscribe-thank-you</field>
	    <field name="is_published">True</field>
	    <field name="website_indexed" eval="False"/>
	    <field name="name">Thank you (subscribe)</field>
	    <field name="type">qweb</field>
	    <field name="key">website_argos.subscribe_thankyou</field>
	    <field name="arch" type="xml">
	        <t name="Thank you (subscribe)" t-name="website_argos.subscribe_thankyou">
	            <t t-call="website.layout">
	                <div id="wrap">
	                    <div class="oe_structure">
	                        <div class="container">
	                            <div class="row">
	                                <div class="col-lg-12">
	                                    <p class="text-center">
	                                    	Thank you for subscribe our newsletter.
	                                    </p>
	                                </div>
	                            </div>                            
	                        </div>
	                    </div>
	                </div>
	            </t>
	        </t>
	    </field>
	</record>
</odoo>