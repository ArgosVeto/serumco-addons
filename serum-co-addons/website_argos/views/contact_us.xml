<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="clinic_contact_us" name="clinic contact">
		<t t-call="website.layout">
			<div id="wrap">

				<div class="oe_structure">

					<section class="s_text_block pt32 pb32 s_blog_banner"
						data-name="Text block">
						<div class="container">
							<div class="row">
								<div class="col-lg-12">
									<ol class="breadcrumb">
										<li class="breadcrumb-item">
											<a href="/">Accueil</a>
										</li>
										<li class="breadcrumb-item">
											<a href="/group-argos">Le groupe Argos</a>
										</li>
										<li class="breadcrumb-item"> Nous contacter </li>
									</ol>
								</div>
								<div class="col-lg-12 pt16 pb16 text-center">
									<h1>Contacter Argos</h1>
								</div>
							</div>
						</div>
					</section>

					<section class="s_text_block pt32 contact-argos">
						<div class="container">
							<div class="row s_nb_column_fixed">
								<div class="col-lg-8">
									<div class="s_title pt16 pb16">
										<h1 class="Envoyer-un-message">Envoyer un message</h1>
									</div>
									<form id="contactus_form" t-ignore="true"
										action="/clinic-contact/confirm" method="post"
										class="row s_website_form container-fluid mt32"
										enctype="multipart/form-data"
										data-success_page="/contactus-thank-you">
										<input type="hidden" name="csrf_token"
											t-att-value="request.csrf_token()" />
										<div
											class="col-md-6 form-group form-field o_website_form_custom o_website_form_required_custom">
											<div class="col-lg-8 pad-0">
												<label class="col-form-label" for="Name">Votre nom</label>
											</div>
											<div class="col-lg-8 pad-0">
												<input type="text"
													class="form-control o_website_form_input" name="name"
													required="" />
											</div>
										</div>

										<div
											class="col-md-6 form-group form-field o_website_form_required_custom">
											<div class="col-lg-8 pad-0">
												<label class="col-form-label" for="email_from">Votre adresse Email
												</label>
											</div>
											<div class="col-lg-8 pad-0">
												<input type="email"
													class="form-control o_website_form_input" name="email_from"
													required="" />
											</div>
										</div>

										<div
											class="form-group row form-field o_website_form_required_custom col-md-12">
											<div class="col-lg-12">
												<label class="col-form-label" for="contact_msg">Objet du message
												</label>
											</div>
											<div class="col-lg-12 selection-div">
												<select id="contact_msg" name="contact_msg"
													class="form-control">
													<t t-foreach="contact_questions_ids" t-as="c">
														<option t-att-value="c.id">
															<t t-esc="c.name" />
														</option>
													</t>
												</select>
											</div>
										</div>
										<div
											class="form-group row form-field o_website_form_required_custom col-md-12">
											<div class="col-lg-12">
												<label class="col-form-label" for="contact_clinic">Contacter une clinique</label>
											</div>
											<div class="col-lg-12 selection-div">
												<select id="clinic_contact_id"
													name="clinic_contact_id" class="form-control">
													<t t-foreach="clinic_ids" t-as="c">
														<option t-att-value="c.id">
															<t t-esc="c.name" />
														</option>
													</t>
												</select>
											</div>
										</div>

										<div
											class="form-group row form-field o_website_form_required_custom col-md-12">
											<div class="col-lg-12">
												<label class="col-form-label" for="message">Message</label>
											</div>
											<div class="col-lg-12">
												<textarea class="form-control o_website_form_input"
													name="message" required=""></textarea>
											</div>
										</div>
										<div
											class="form-group row form-field o_website_form_required_custom col-md-12">
											<div class="col-lg-12">
												<button type="submit" id="form_submit"
													class="btn btn-primary mb16 mt32">
													Envoyer
												</button>
												<div class="mt16 mb32">
												
												<div class="b-in-hr" data-oe-model="ir.ui.view" data-oe-id="1546" data-oe-field="arch" data-oe-xpath="/t[1]/t[1]/div[1]/div[1]/section[2]/div[1]/div[1]/div[2]/div[2]">
													<div class="s_hr text-left pt32 pb32" data-name="Separator">
														<hr class="border-600 s_hr_1px s_hr_solid w-100 mx-auto"/>
													</div>
												</div>
												
												<p class="Vero-culpa-quia-nihi">Vero culpa quia nihil rerum omnis veritatis ut velit. Qui
													eaque est autem. Autem non autem veritatis qui. Quidem est
													natus eveniet aut nesciunt libero maxime ex. Deleniti totam
													ullam asperiores quos numquam quibusdam optio tempore
													recusandae. Distinctio rerum temporibus consequatur quas
													aliquid.</p>

												</div>
												

											</div>
										</div>
									</form>
								</div>
								<div class="col-lg-4 cli-contact">
									<t t-if="partner_ids">
										<div class="s_title pt16 pb16">
											<h1 class="La-clinique-la-plus">La clinique la plus proche</h1>
										</div>
										<section class="pt8 pb8">
											<t t-foreach="partner_ids" t-as="partner">
													<div class="s_col_no_bgcolor pt16 clinic-grid">
														<div class="card bg-white">
															<img class="card-img-top"
																t-att-src="website.image_url(partner, 'clinic_banner')" />
															<a role="button" class="btn btn-primary mt16 fav-btn"
																t-attf-href="/add-clinic/#{partner.sudo().id}">
																<img src="/website_argos/static/src/img/heart.svg"></img>
															</a>
															<div class="card-body">
																<h3 class="card-title o_default_snippet_text">
																	<a itemprop="display_name"
																		t-attf-href="/clinic-detail/clinic-pratice/#{partner.id}"
																		t-att-content="partner.display_name"
																		t-field="partner.display_name" />
																</h3>

																<p class="Clinique-actuellemen">
																	<i class="fa fa-circle"></i>
																	<span>Clinique actuellement ouverte</span>
																</p>

																<div class="clinic-link d-flex">
																	<div class="image-l">
																		<img
																			src="/website_argos/static/src/img/location.svg" />
																	</div>

																	<div class="link">

																		<span class="Avenue-Pasteur">
																			<span class="street" t-field="partner.favorite_clinic_id.street"/><span>, </span><span class="zip" t-field="partner.favorite_clinic_id.zip"/><span>, </span><span class="city" t-field="partner.favorite_clinic_id.city"/>
																		</span>
																	</div>
																</div>

																<div class="">
																	<a role="button" target=""
																		t-attf-href="tel:{{partner.favorite_clinic_id.phone}}"
																		class="btn btn-outline-primary mb16 mt16 d-none d-xl-inline-block mr-2">
																		<img src="/website_argos/static/src/img/phone.svg"
																			class="img img-fluid mr-2" />
																		<span class="">Appeler</span>
																	</a>
																	<a role="button" target="_blank" href="#"
																		class="btn btn-primary mb16 mt16 d-none d-xl-inline-block">
																		<span class="">Prendre RDV</span>
																	</a>
																</div>
															</div>
														</div>
													</div>
											</t>
										</section>
										<div class="b-in-hr">
											<div class="s_hr text-left pt32" data-name="Separator">
												<hr class="border-600 s_hr_1px s_hr_solid w-75 mx-auto" />
											</div>
										</div>
									</t>

									<t t-if="partner_ids">
										<div class="s_title pt32 pb16">
											<h1 class="La-clinique-la-plus">Ma clinique favorite</h1>
										</div>
										<section class="pt8 pb8">
											<t t-foreach="partner_ids" t-as="partner">

												<div class="s_col_no_bgcolor pt16 pb16 clinic-grid">
													<div class="card bg-white">
														<img class="card-img-top"
															t-att-src="website.image_url(partner.favorite_clinic_id, 'clinic_banner')" />
														<a role="button" class="btn btn-primary mt16 fav-btn"
															t-attf-href="/add-clinic/#{partner.favorite_clinic_id.sudo().id}">
															<img src="/website_argos/static/src/img/heart.svg"></img>
														</a>
														<div class="card-body">

															<h3 class="card-title o_default_snippet_text">
																<a itemprop="display_name"
																	t-attf-href="/clinic-detail/clinic-pratice/#{partner.favorite_clinic_id.id}"
																	t-att-content="partner.favorite_clinic_id.name"
																	t-field="partner.favorite_clinic_id.name" />
															</h3>

															<p class="Clinique-actuellemen">
																<i class="fa fa-circle"></i>
																<span>Clinique actuellement ouverte</span>
															</p>

															<div class="clinic-link d-flex">
																<div class="image-l">
																	<img
																		src="/website_argos/static/src/img/location.svg" />
																</div>
																<div class="link">

																	<span class="Avenue-Pasteur">
																		<span class="street" t-field="partner.favorite_clinic_id.street"/><span>, </span><span class="zip" t-field="partner.favorite_clinic_id.zip"/><span>, </span><span class="city" t-field="partner.favorite_clinic_id.city"/>
																	</span>
																</div>
															</div>

															<div class="">
																<a role="button" target=""
																	t-attf-href="tel:{{partner.favorite_clinic_id.phone}}"
																	class="btn btn-outline-primary mb16 mt16 d-none d-xl-inline-block mr-2">
																	<img src="/website_argos/static/src/img/phone.svg"
																		class="img img-fluid mr-2" />
																	<span class="">Appeler</span>
																</a>
																<a role="button" target="_blank" href="#"
																	class="btn btn-primary mb16 mt16 d-none d-xl-inline-block">
																	<span class="">Prendre RDV</span>
																</a>
															</div>
														</div>
													</div>
												</div>
											</t>
										</section>
									</t>

									<section class="pt16 mb16 home-emergency">
										<section class="emergency-box bg-secondary">
											<div class="image">
												<img
													src="/website_argos/static/src/img/combined-shape.png"
													class="img img-fluid" />
											</div>
											<h6 class="text-white">Une urgence vétérinaire ?</h6>
											<p class="text-white">Ab autem quia est nesciunt et alias ut eveniet.
												Aspernatur odio nam dolores velit debitis.</p>
											<a class="btn btn-light btn-red">Appeler le 01.22.22.22.22</a>
										</section>
									</section>
								</div>
							</div>
						</div>
					</section>
				</div>
			</div>
		</t>
	</template>
</odoo>