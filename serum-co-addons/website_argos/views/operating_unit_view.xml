<?xml version="1.0" encoding="UTF-8"?>
<odoo>
 	<record id="operating_unit_view_form_inh" model="ir.ui.view">
        <field name="name">operating.unit.view.form</field>
        <field name="model">operating.unit</field>
        <field name="inherit_id" ref="argos_operating_unit.operating_unit_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='certification_ids']" position="after">
                <field name="visible_in_contact"/> 
                <field name="facebook" widget="url"/>
                <field name="google_map_link" widget="url"/>
                <field name="mrdv_id"/>
            </xpath>
            <xpath expr="//page[@name='digital_service']" position="after">
                <page string="Clinic Banner" name="clinic_image">
                    <group>
                        <group>
                            <field name="clinic_banner" widget="image" nolabel="1">
                            </field>
                        </group>
                    </group>
                    <group>
	                    <group name="clinic_image" string="Extra Image">
	                        <field name="clinic_image_ids" class="o_website_sale_clinic_image"  mode="kanban" options="{'create_text':'Add a Media'}" nolabel="1"/>
	                    </group>
	                </group>
                </page>
                <page string="Service" name="service_ids">
                    <group>
                        <field name="service_ids" widget="many2many_tags">
                        </field>
                    </group>
                </page>
                <page string="Clinic Description" name="clinic_description">
                    <group>
                        <field name="clinic_description" widget="html" nolabel="1">
                        </field>
                    </group>
                </page>

                <page string="Practical Services">
                    <group>
                        <group string="Practical Service">
                            <field name="practical_service_ids"  widget="many2many_tags"/>
                        </group>

                         <group string="Payment Method">
                            <field name="payment_method_ids"  widget="many2many_tags"/>
                        </group>                       
                    </group>
                    <group>
                        <group string="Show In Footer">
                            <field name="show_in_footer"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>