<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="my_appointment" name="All Appointment">
		<t name="My Appointment" t-name="my_appointment">
			<t t-call="website.layout">
				<div class="oe_structure oe_empty" id="wrap">
					<section
						class="s_text_block pt32 s_common_banner_without_bg banner-content">
						<div class="row m-0 mx-md-3 my_content">
		                    <div class="col-lg-12 mb-0 mb-md-5 p-0 p-md-3">
		                        <div class="top-links p-0">
		                            <div class="container">
		                                <ul class="nav navbar-nav flex-row">
		                                    <li class="nav-item mr32">
		                                        <a class="nav-link" href="/my-content">Vue d'ensemble</a>
		                                    </li>
		                                    <li class="nav-item mr32">
		                                        <a class="nav-link" href="/my/orders">Commandes</a>
		                                    </li>
		                                    <!-- <t t-if="next_appointment_id or pervious_appointment_id"> -->
		                                        <li class="nav-item mr32">
		                                            <a class="nav-link" href="/clinic-detail">Rendez-vous</a>
		                                        </li>
		                                    <!-- </t> -->
		                                    <li class="nav-item mr32">
		                                        <a class="nav-link" href="/my/account">Mes adresses</a>
		                                    </li>
		                                    <li class="nav-item mr32">
		                                        <a class="nav-link" href="/my-clinic">Ma clinique</a>
		                                    </li>
		                                    <li class="nav-item mr32">
		                                        <a class="nav-link" href="/shop/wishlist">Mes produits favoris</a>
		                                    </li>
		                                    <li class="nav-item mr32">
		                                        <a class="nav-link" href="/my/home">Mes infos personnelles</a>
		                                    </li>
		                                   <!--  <li class="nav-item m-0">
		                                        <a class="nav-link" href="/my/payment_method">Mes cartes bancaires</a>
		                                    </li> -->
		                                </ul>
		                            </div>
		                        </div>
		                    </div>
		                </div>
						<div class="container">
							<div class="row my-appointment">
								<div class="col-lg-12">
									<ol class="breadcrumb">
										<li class="breadcrumb-item">
											<a href="/">Accueil</a>
										</li>
										<li class="breadcrumb-item">
											<a href="/clinic-detail">Rendez-vous</a>
										</li>
									</ol>
								</div>

								<div class="col-lg-12 heading">
		                            <h1 class="mt16 mb32">
		                                Bienvenue <span><t t-esc="request.env.user.partner_id.name"/></span>
		                            </h1>
		                            <p>
		                                Retrouvez sur cette page lorem ipsum dolor sit amet 
		                            </p>
		                            <p class="mb48">
		                                Nous Contacter
		                            </p>
		                        </div>

								<t t-if="new_appointment_ids">
									<div class="col-lg-12 mt32">
										<h4>Mon prochain RDV</h4>
										<div class="row">
											<t t-foreach="new_appointment_ids" t-as="new_app">
												<div class="col-lg-6 mb32">
													<div class="row">
														<div class="col-lg-6">
															<img class="img img-fluid" t-att-src="website.image_url(new_app.operating_unit_id, 'clinic_banner')" />
														</div>
														<div class="col-lg-6 d-flex flex-column">
															<div class="date-time">
																<span t-field="new_app.start_datetime" t-options='{"format": "d MMMM yyyy"}'/>
			                                                    <span t-field="new_app.start_datetime" t-options='{"format": "HH:MM"}'/>
			                                                    <span>--</span>
			                                                	<span t-field="new_app.end_datetime" t-options='{"format": "HH:MM"}'/>
			                                                </div>
			                                                <h6><t t-esc="new_app.operating_unit_id.name"/></h6>
		                                                    <p class="mt8">
		                                                        <span t-field="new_app.employee_id.name"/>
		                                                    </p>
		                                                    <a role="button" href="#" class="btn btn-primary btn-lg mt-auto d-block d-sm-inline-block link-btn">Ajouter a mon calendrier</a>
														</div>
													</div>
												</div>
											</t>
										</div>
									</div>
								</t>

								<t t-if="old_appointment_ids">
									<div class="col-lg-12 mt32">
										<h4>Mon RDV précédent</h4>
										<div class="row">
											<t t-foreach="old_appointment_ids" t-as="old_app">
												<div class="col-lg-6 mb32">
													<div class="row">
														<div class="col-lg-6">
															<img class="img img-fluid" t-att-src="website.image_url(old_app.operating_unit_id, 'clinic_banner')" />
														</div>
														<div class="col-lg-6 d-flex flex-column">
															<div class="date-time">
																<span t-field="old_app.start_datetime" t-options='{"format": "d MMMM yyyy"}'/>
			                                                    <span t-field="old_app.start_datetime" t-options='{"format": "HH:MM"}'/>
			                                                    <span>--</span>
			                                                	<span t-field="old_app.end_datetime" t-options='{"format": "HH:MM"}'/>
			                                                </div>
			                                                <h6><t t-esc="old_app.operating_unit_id.name"/></h6>  
		                                                    <p class="mt8">
		                                                        <span t-field="old_app.employee_id.name"/>
		                                                    </p>
		                                                    <a role="button" href="#" class="btn btn-primary btn-lg mt-auto d-block d-sm-inline-block">Ajouter a mon calendrier</a>
														</div>
													</div>
												</div>
											</t>
										</div>
									</div>
								</t>

							</div>
						</div>
					</section>
				</div>
			</t>
		</t>
	</template>
	
</odoo>