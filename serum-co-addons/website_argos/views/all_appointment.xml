<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="all_my_appointment" name="All ay appointment">
		<t t-if="recordset">
			<div class="col-lg-12 mt32">
				<t t-if="next">
					<h4>Mes prochains RDV</h4>
				</t>
				<t t-if="last">
					<h4>Mes précédents RDV</h4>
				</t>
				<div class="row">
					<t t-foreach="recordset" t-as="rec">
						<div class="col-lg-6 mb32">
							<div class="row">
								<div class="col-lg-6">
									<img class="img img-fluid" t-att-src="website.image_url(rec.operating_unit_id, 'clinic_banner')" />
								</div>
								<div class="col-lg-6 d-flex flex-column">
									<div class="date-time">
										<t t-set="week_day" t-value="rec.start_datetime.strftime('%A')"/>
										<span t-esc="week_day and week_day.title()"/>
										<span t-field="rec.start_datetime" t-options='{"format": "d MMMM yyyy"}'/>
										<span>-</span>
										<span t-field="rec.start_datetime" t-options='{"format": "HH:mm"}'/>
									</div>
									<strong t-esc="rec.operating_unit_id.name"/>
									<p class="mt8" t-if="rec.employee_id">
										Dr. <span t-field="rec.employee_id.name"/>
									</p>
									<t t-if="rec and show_add_to_calendar">
										<a role="button" t-att-href="'/planning/%s/ics' % rec.id" class="btn btn-primary btn-lg mt-auto d-block d-sm-inline-block link-btn">Ajouter a mon calendrier</a>
									</t>
								</div>
							</div>
						</div>
					</t>
				</div>
			</div>
		</t>
	</template>
