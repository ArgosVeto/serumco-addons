<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="auth_signup_inherit_fields_banner" inherit_id="auth_signup.signup" name="Sign up">
        <xpath expr="//form[@class='oe_signup_form']" position="before">
            <section class="s_text_block pt32 pb16 s_blog_banner" data-name="Text block">
		        <div class="container">
		            <div class="row">
		            	<div class="col-lg-12">
		            		<ol class="breadcrumb">
							    <li class="breadcrumb-item"><a href="/">Accueil</a></li>
							    <li class="breadcrumb-item"> Inscription</li>
							  </ol>
		            	</div>
		                <div class="col-lg-12 pt16 pb32 text-center">
		                	<h1>Inscription</h1>
		                </div>
		            </div>
		        </div>
    		</section>
            
        </xpath>
        </template>

        <template id="auth_login_inherit_fields_banner" inherit_id="auth_signup.login" name="Log In">
        <xpath expr="//form[@class='oe_login_form']" position="before">
            <section class="s_text_block pt32 pb16 s_blog_banner" data-name="Text block">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                                <li class="breadcrumb-item"> Connexion</li>
                              </ol>
                        </div>
                        <div class="col-lg-12 pt16 pb32 text-center">
                            <h1>Connexion</h1>
                        </div>
                    </div>
                </div>
            </section>
            
        </xpath>
        </template>

         <template id="auth_reset_inherit_fields_banner" inherit_id="auth_signup.reset_password" name="Reset password">
        <xpath expr="//form[@class='oe_reset_password_form']" position="before">
            <section class="s_text_block pt32 pb16 s_blog_banner" data-name="Text block">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                                <li class="breadcrumb-item"> Mot De Passe Oublie </li>
                              </ol>
                        </div>
                        <div class="col-lg-12 pt16 pb32 text-center">
                            <h1>Mot De Passe Oublie</h1>
                        </div>
                    </div>
                </div>
            </section>
            
        </xpath>
        </template>

	
	
	<template id="auth_signup.fields" name="Auth Signup/ResetPassword form fields">
            
            <div class="mt12 mb12 row">
            		<div class="form-group field-last_name col-md-6 o_website_form_required_custom">
                <label for="last_name" class="col-form-label">Nom</label>
                <input type="text" name="last_name" t-att-value="last_name" id="last_name" class="form-control form-control-sm" placeholder=""/>
            </div>
			
            <div class="form-group field-name col-md-6 o_website_form_required_custom">
                <label for="name" class="col-form-label">Prenom</label>
                <input type="text" name="name" t-att-value="name" id="name" class="form-control form-control-sm" placeholder="e.g. John Doe"
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>
            </div>
            <div class="form-group field-login o_website_form_required_custom">
                <label for="login" class="col-form-label">Adresse email</label>
                <input type="text" name="login" t-att-value="login" id="login" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
			

            <div class="form-group field-password pt-2 o_website_form_required_custom">
                <label for="password" class="col-form-label">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control form-control-sm"
                    required="required" t-att-autofocus="'autofocus' if only_passwords else None"/>
            	<p class="caractres-minimu">
            		10 caractères minimum, 1 majuscule, 1 minuscule, 1 caractère spécial, 1 chiffre
            	</p>
            </div>

            <div class="form-group field-confirm_password o_website_form_required_custom">
                <label for="confirm_password" class="col-form-label">Confirmer le mot de passe</label>
                <input type="password" name="confirm_password" id="confirm_password" class="form-control form-control-sm" required="required"/>
            </div>

            <div class="col-md-12 d-flex align-ites-center checkbox mt16 mb16">
                <div class="check">
                    <input type="checkbox" name="confirm_first" required="true">
                        <span class="ml-2 confirm_first">J'ai lu et j'accepte les CGU et la politique de confidentialité</span>
                    </input>
                </div>
            </div>

             <div class="col-md-12 d-flex align-ites-center checkbox mt16 mb16">
                <div class="check">
                    <input type="checkbox" name="confirm_second">
                        <span class="ml-2 confirm_second">J’accepte de recevoir la newsletter lorem ipsum dolor sit amet</span>
                    </input>
                </div>
            </div>
        </template>
	
	
	
    <template id="auth_signup_signup_fields" inherit_id="auth_signup.signup" name="Sign up">
        <xpath expr="//div[@class='text-center oe_login_buttons pt-3']" position="replace">
            <div class="text-center oe_login_buttons pt-3">
                <button type="submit" class="btn btn-primary">Valider mom inscription</button>
                <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm mt32" role="button">Vous avez deja un compte ? Connectez-vous !</a>
                <div class="o_login_auth"/>
            </div>
        </xpath>
    </template>

   <!--  auth_signup.signup -->


    
</odoo>