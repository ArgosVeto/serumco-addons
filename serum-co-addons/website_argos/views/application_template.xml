<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="application_template" name="Application">
	    <t t-call="website.layout">
	        <div id="wrap">
	        	<section class="application-heading">
	        		<div class="container">
			            <div class="row">
			            	<div class="col-lg-12">
			            		<ol class="breadcrumb mb32">
								    <li class="breadcrumb-item"><a href="/">Accueil</a></li>
								    <li class="breadcrumb-item"><a href="/group-argos">Le groupe Argos</a></li>
								    <li class="breadcrumb-item"><a href="#">Nous rejoindre</a></li>
								    <li class="breadcrumb-item"><a href="#">Candidature Spontanée</a></li>
							  	</ol>
			            	</div>
			            	<div class="col-lg-12">
			            		<h1 class="text-center">
			            			Candidature spontanee
			            		</h1>
			            	</div>
			            </div>
			        </div>
		        </section>
		        <section class="text-content pt80">
		        	<div class="container">
		        		<div class="row justify-content-center">
		        			<div class="col-lg-8">
		        				<div class="text">
		        					<h3 class="mb16">Lorem ipsum</h3>
		        					<p class="mb32">Molestiae voluptas consequatur qui ut dolorum soluta nulla eligendi. Autem non quis commodi doloremque doloremque in commodi. Enim architecto rerum nihil. Earum commodi eveniet qui.</p>
		        					<p class="pb32">Impedit qui quia tempora aperiam. Dolores ea natus omnis sit commodi. Ut quaerat non minima ducimus est consequatur hic tempore eius. Commodi nulla dolorum veritatis consequatur velit. Optio sit id natus ut qui. Unde ut consectetur voluptatibus ea recusandae enim quo.</p>
		        				</div>
		        			</div>
		        		</div>
		        	</div>
		        </section>
	            <section class="form-heading">
	            	<div class="container">
		        		<div class="row justify-content-center">
		        			<div class="col-lg-8">
		                		<h3 class="text-primary">Postuler</h3>
		                		<h5 class="text-gamma">Infomation Générales</h5>
		                	</div>
		                </div>
		            </div>
            	</section>
                <section id="forms" class="col contact-argos">
                	<div class="container">
		        		<div class="row justify-content-center">
		        			<div class="col-lg-8">
			                	<form id="contactus_form" t-ignore="true" action="/application-confirm" method="post" enctype="multipart/form-data" data-success_page="/job-thank-you">
									<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />

			                		<div class="form-group row form-field o_website_form_required_custom">
			                			<div class="col-md-6">
							                <label class="col-form-label" for="last_name">Nom</label>
							                <input type="text" class="form-control o_website_form_input" name="last_name" required=""/>
							            </div>

							            <div class="col-md-6">
							                <label class="col-form-label" for="first_name">Prenom</label>
							                <input type="text" class="form-control o_website_form_input" name="first_name" required=""/>
							            </div>				            
			                		</div>

			                		<div class="form-group row form-field o_website_form_required_custom">
			                			<div class="col-md-6">
							                <label class="col-form-label" for="email_from">Adresse email</label>
							                <input type="text" class="form-control o_website_form_input" name="email_from" required=""/>
							            </div>

							            <div class="col-md-6">
							                <label class="col-form-label" for="partner_phone">N ° de téléphone</label>
							                <input type="text" class="form-control o_website_form_input" name="partner_phone" required=""/>
							            </div>				            
			                		</div>


			                		<div class="form-group row form-field o_website_form_required_custom">
			                			<div class="col-md-6">
							                <label class="col-form-label" for="actual_post">Poste actuel</label>
							                <input type="text" class="form-control o_website_form_input" name="actual_post" required=""/>
							            </div>

							            <div class="col-md-6">
							                <label class="col-form-label" for="number_of_exp">Nombre d'expérience</label>
							                <input type="text" class="form-control o_website_form_input" name="number_of_exp" required=""/>
							            </div>				            
			                		</div>

			                		<div class="form-group row form-field o_website_form_required_custom">
			                			<div class="col-md-12">
							                <label class="col-form-label" for="address">Adresse</label>
							                <input type="text" class="form-control o_website_form_input" name="address" required=""/>
							            </div>			            
			                		</div>

			                		<div class="form-group row form-field o_website_form_required_custom">
			                			<div class="col-md-4">
							                <label class="col-form-label" for="code_postal">Code postal</label>
							                <input type="text" class="form-control o_website_form_input" name="code_postal" required=""/>
							            </div>

							            <div class="col-md-4">
							                <label class="col-form-label" for="city">Ville</label>
							                <input type="text" class="form-control o_website_form_input" name="city" required=""/>
							            </div>	
							            <div class="col-md-4">
							                <label class="col-form-label" for="country_id">Pays</label>
							                <div class="selection-div sel-pays">
								               <select id="country_id" name="country_id" t-attf-class="form-control">
							                        <option value="">sélectionner...</option>
							                        <t t-foreach="country_ids" t-as="c">
							                            <option t-att-value="c.id">
							                                <t t-esc="c.name"/>
							                            </option>
							                        </t>
							                    </select>
							                </div>
							            </div>
			                		</div>

			                		<div class="form-group row form-field o_website_form_required_custom">
				                        <div class="col-md-12">
				                        	<p class="pt48 mt32 mb32 votre-profil"><strong>Votre profil</strong></p>
											<label class="col-form-label" for="Resume">Importez votre CV</label>

											<input id="resume_file1" required="true" name="resume_file1" class="form-control o_website_form_input custom-input" accept="image/*,application/pdf" type="file" style="height: auto;"/>

											<input id="div_file1" type="hidden" name="div_file1"/>
				                            <p class="mt16 mb-0">Nous acceptons les fichiers PDF, DOC, DOCX, JPG et PNG</p>
				                        </div>
			                		</div>

			                		<div class="form-group row form-field o_website_form_required_custom mt16">
				                        <div class="col-md-6">
				                        	<label class="col-form-label" for="job_type">Type de metier</label>
				                        	<div class="selection-div sel-pays">
					                        	<select id="job_id" name="job_id" t-attf-class="form-control">
							                        <option value="">sélectionner...</option>
							                        <t t-foreach="job_ids" t-as="j">
							                            <option t-att-value="j.id">
							                                <t t-esc="j.name"/>
							                            </option>
							                        </t>
							                    </select>
							                </div>
				                        </div>
				                        <div class="col-md-6">
				                        	<label class="col-form-label" for="agglomeration">Agglomeration</label>
				                        	<div class="selection-div sel-pays">
					                        	<select id="agglomeration_id" name="agglomeration_id" t-attf-class="form-control">
							                        <option value="">sélectionner...</option>
							                        <t t-foreach="agglomeration_ids" t-as="a">
							                            <option t-att-value="a">
							                                <t t-esc="a" />
							                            </option>
							                        </t>
							                    </select>
							                </div>
				                        </div>
			                		</div>

			                		<div class="form-group row form-field o_website_form_required_custom">
				                        <div class="col-md-12 mt16">
				                			<label class="pt48 mt32 mb16 col-form-label lettre-de-motivation" for="description">Lettre de motivation</label>
					                        <div class="mt16">
				                				<span class="">Inserez votre lette de motivation ici</span>
				                			</div>
				                			<textarea required="true" class="form-control candidate-description  o_website_form_input" name="description"></textarea>
				                		</div>
			                		</div>

			                		<div class="form-group row form-field o_website_form_required_custom">
			                			<div class="col-md-12 mt16">

			                				<div class="Conditions pt48 mt32 mb32">
			                					<strong>Conditions générales d'utilisation</strong>
			                				</div>
				                			<div class="check pb16">
				                				<input type="checkbox" name="confirm_1">
				                					<span>J'ai lu et j'accepte les CGU de welcome to the Jungle</span>
				                				</input>
											</div>
				                			<div class="check pb48">
				                				<input type="checkbox" name="confirm_2">
				                					<span>J'accepte de recevoir la newsletter lorem ipsum dolor sit amet</span>
				                				</input>
				                			</div>
				                		</div>
			                		</div>

			                		<div class="form-group row">
			                            <div class="col-md-12">
			                            	<button type="submit" id="form_submit"
												class="btn btn-primary mb16 mt32 btn-block">
												Envoyer ma candidature
											</button>
			                            </div>
			                        </div>                        
			                	</form>
			                </div>
			            </div>
			        </div>
                </section>
	        </div>
		</t>
	</template>
</odoo>