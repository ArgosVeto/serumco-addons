<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_partner_view_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Favorite Clinic" name="clinic_shortlisted_ids">
                    <group>
                        <group>
                            <field name="clinic_shortlisted_ids" nolabel="1">
                                <tree>
                                    <field name="favorite_clinic_id"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    
	<record id="applicant_agglomeration_form_view" model="ir.ui.view">
		<field name="name">applicant.agglomeration.form.view</field>
		<field name="model">applicant.agglomeration</field>
		<field name="arch" type="xml">
			<form string="Agglomeration">
				<sheet>
					<group>
                        <group>
							<field name="name"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="applicant_agglomeration_tree_view" model="ir.ui.view">
        <field name="name">applicant.agglomeration.tree.view</field>
        <field name="model">applicant.agglomeration</field>
        <field name="arch" type="xml">
            <tree string="Agglomeration">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_applicant_agglomeration" model="ir.actions.act_window">
        <field name="name">Agglomeration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">applicant.agglomeration</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           </p>
        </field>
    </record>

    <menuitem id="menu_sub_applicant_agglomeration" name="Agglomeration"
        sequence="25"
        parent="website_argos.menu_clinic"
        action="action_applicant_agglomeration"/>
</odoo>