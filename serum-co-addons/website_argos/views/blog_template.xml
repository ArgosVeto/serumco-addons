<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="post_tag_upper">
	    <div t-if="len(blog_post.tag_ids)" class="o_wblog_post_short_tag_section o_not_editable align-items-center position-absolute o_list_cover d-flex text-white w-100 o_not_editable px-2 pb-2 pt-3">
	        <t t-foreach="blog_post.tag_ids" t-as="one_tag">
	            <a t-attf-href="#{blog_url(tag=tags_list(active_tag_ids, one_tag.id))}"
	               t-attf-class="badge mb-2 mr-1 text-truncate #{one_tag.id in active_tag_ids and 'badge-primary' or 'border'}"
	               t-esc="one_tag.name"/>
	        </t>
	    </div>
	</template>
	
	
	<template id="opt_blog_cover_banner" name="Top Banner Info" inherit_id="website_blog.blog_post_short">
    	<xpath expr="//div[@id='o_wblog_blog_top']" position="inside">
        <section class="s_text_block pt32 pb16 s_blog_banner" data-name="Text block">
	        <div class="container">
	            <div class="row">
	            	<div class="col-lg-12">
	            		<ol class="breadcrumb">
						    <li class="breadcrumb-item"><a href="/">Accueil</a></li>
						    <li class="breadcrumb-item"><a href="/group-argos">Le groupe Argos</a></li>
						    <li class="breadcrumb-item"> L'actualité d'Argos</li>
						  </ol>
	            	</div>
	                <div class="col-lg-12 pt16 pb8">
	                	<h1>L’actualité d'Argos</h1>
	                    <p class="lead o_default_snippet_text">Eaque ratione sapiente et quo quaerat voluptas non amet. Quam ex hic hic. Ut sequi et. Nihil ut nesciunt. Omnis molestias ratione nihil voluptatibus. Voluptatem ut dolor. Omnis nihil enim dolores. Laboriosam neque commodi eum id alias officiis dolorem qui. Quibusdam eos nulla corporis vel debitis iste…</p>
	                </div>
	            </div>
	        </div>
    </section>
    </xpath>
</template>

<template id="opt_blog_cover_tags" name="Cover Tags" inherit_id="website_blog.post_cover_image">
    	<xpath expr="//t[@t-call='website.record_cover']" position="inside">
        <t t-call="website_argos.post_tag_upper">
        </t>
    </xpath>
</template>

    <template id="blog_type_search_tmp" name="Blog Post Search">
        <t t-if="posts">

        <t t-set="blog" t-value="blogs"/>
        <div t-attf-class="dropdown">
            <t t-if="blog">
                
                <t t-set="ss" t-value="blog[0]"/>
                <a role="button" href="#" class="dropdown-toggle btn ge btn-link nav-link" data-toggle="dropdown">
                    <t t-esc="ss and ss.name or ' - '" />
                </a>
                <div class="dropdown-menu" role="menu">
                    <t t-if="blog">
                        <t t-foreach="blog" t-as="s">
                            <a role="menuitem" t-attf-href="/blog?blog_blog=#{s.sudo().id}" class="dropdown-item">
                                <span class="switcher_pricelist" 
                                    t-att-name="s.name"
                                    t-att-data-pl_id="s.id" 
                                    t-esc="s.name" />
                            </a>
                        </t>
                    </t>
                </div>
            </t>
        </div>
        </t>    
    </template>
    <template id="blog_tag_search_tmp" name="Blog Tag Search">
        <t t-if="posts">
            <t t-set="tag" t-value="blog_tag_ids"/>
            <div t-attf-class="dropdown">
                <t t-if="tag">                
                    <t t-set="ss" t-value="tag[0]"/>
                    <a role="button" href="#" class="dropdown-toggle btn ge btn-link nav-link" data-toggle="dropdown">
                        <t t-esc="ss and ss.name or ' - '" />
                    </a>
                    <div class="dropdown-menu" role="menu">
                        <t t-if="tag">
                            <t t-foreach="tag" t-as="s">
                                <a role="menuitem" t-attf-href="/blog?blog_tag=#{s.sudo().id}" class="dropdown-item">
                                    <span class="switcher_pricelist" 
                                        t-att-name="s.name"
                                        t-att-data-pl_id="s.id" 
                                        t-esc="s.name" />
                                </a>
                            </t>
                        </t>
                    </div>
                </t>
            </div>
        </t>     
    </template>

    


	
	<!-- ======   Template: Blogs Navbar   =========================================
============================================================================ -->
	
	<template id="opt_blog_nav_argos" name="Nav Argos" inherit_id="website_blog.blogs_nav">
	    <xpath expr="//ul[hasclass('navbar-nav')]" position="replace">
            <t t-if="posts">
    	    	<ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/blog" t-attf-class="nav-link font-weight-bold #{(not blog) and 'active'}">All</a>
                    </li>
                    <div class="search_by_blog">
                        <t t-call="website_argos.blog_type_search_tmp"/>
                    </div>

                     <div class="search_by_blog_tag">
                        <t t-call="website_argos.blog_tag_search_tmp"/>
                    </div>
                </ul>
            </t>
	    </xpath>
    </template>
    
	
	<template id="website_blog.post_info">
    <div class="d-flex small flex-wrap mb-1 w-100">
        <div t-attf-class="d-flex flex-wrap align-items-center justify-content-between mx-n2 #{opt_blog_list_view and 'flex-grow-0 w-auto mw-100' or 'flex-grow-1' }">
            <div t-if="opt_posts_loop_show_stats" class="px-2">
                <b class="text-nowrap"><i class="fa fa-comment text-muted mr-1"/><t t-esc="len(blog_post.message_ids)"/></b>
                <b class="text-nowrap pl-2"><i class="fa fa-binoculars text-muted mr-1"/><t t-esc="blog_post.visits"/></b>
            </div>
        </div>
    </div>
</template>

<template id="website_blog.post_teaser">
    <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}" class="text-reset text-decoration-none">
        <div t-if="opt_blog_list_view" t-field="blog_post.teaser" class="mt-2 o_wblog_read_text"/>
        <div t-else="" t-field="blog_post.teaser" t-attf-class="mt-2 #{opt_blog_readable and 'o_wblog_normalize_font'}"/>
    </a>
</template>

<template id="website_blog.post_heading">
    <time t-field="blog_post.post_date" class="text-nowrap b-date px-2" t-options='{"format": "d MMMM yyyy"}'/>
    <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}"
       t-field="blog_post.name"
       t-attf-class="d-block text-reset text-decoration-none o_blog_post_title my-0 #{'h3' if opt_blog_list_view else ('h5' if opt_blog_readable else 'h6')}">
       Untitled Post
   </a>

</template>

<!-- Blog Post Full -->

<template id="blog_post_complete_heder" name="Nav Argos" inherit_id="website_blog.blog_post_complete">
	    <xpath expr="//section[@id='o_wblog_post_top']" position="replace">
	    	<section id="o_wblog_post_top">
	            <div class="bread-blog container">
	            	 <t t-if="opt_blog_post_breadcrumb and not opt_blog_post_regular_cover" t-call="website_blog.post_breadcrumbs">
				        <t t-set="additionnal_classes" t-value="'mb-3 bg-transparent'"></t>
				    </t>
	            </div>
	            
	            <div id="title" class="blog_header" t-ignore="True">
           			<div t-attf-class="o_wblog_post_title container #{opt_blog_post_select_to_tweet and 'js_tweet'} #{opt_blog_post_select_to_comment and 'js_comment'}">
                      <div t-field="blog_post.name" id="o_wblog_post_name" data-oe-expression="blog_post.name" t-att-data-blog-id="blog_post.id" placeholder="Blog Post Title"/>
                  		<div t-if="len(blog_post.tag_ids)" class="b-in-tag">
				            <t t-foreach="blog_post.tag_ids" t-as="one_tag">
				                <a class="badge border mr-1" t-attf-href="#{blog_url(tag=slug(one_tag), date_begin=False, date_end=False)}" t-esc="one_tag.name"/>
				            </t>
				        </div>
				        <div class="b-in-date">
							<span>Le <time t-field="blog_post.post_date" class="text-nowrap b-date px-2" t-options='{"format": "d MMMM yyyy"}'/></span>
				        </div>
				        
				         <div class="b-in-hr">
							<div class="s_hr text-left pt32" data-name="Separator">
						        <hr class="border-600 s_hr_1px s_hr_solid w-75 mx-auto"/>
						    </div>
				        </div>
				        
				        <div class="b-in-social">
							<div class="text-center pt32 pb32">
						        <span class="text-so">Partager l'article</span>
						    </div>
				            <div class="o_wblog_social_links d-flex flex-wrap text-center justify-content-center">
				                <t t-set="classes">bg-100 mx-1 mb-2 rounded-circle d-flex align-items-center justify-content-center text-decoration-none</t>
				                <a href="#" aria-label="Facebook" title="Share on Facebook" t-attf-class="o_facebook #{classes}"><i class="fa fa-facebook text-facebook"/></a>
				                <a href="#" aria-label="Twitter" title="Share on Twitter" t-attf-class="o_twitter #{classes}"><i class="fa fa-twitter text-twitter" aria-label="Twitter" title="Twitter"/></a>
				                <a href="#" aria-label="LinkedIn" title="Share on LinkedIn" t-attf-class="o_linkedin #{classes}"><i class="fa fa-linkedin text-linkedin" aria-label="LinkedIn" title="LinkedIn"/></a>
				            </div>
				        </div>
				        
                  	</div>
	                <t t-call="website.record_cover">
	                    <t t-set="_record" t-value="blog_post"/>
	                    <t t-set="use_filters" t-value="True"/>
	                    <t t-set="use_size" t-value="True"/>
	                    <t t-set="use_text_size" t-value="True"/>
	                    <t t-set="additionnal_classes" t-value="'o_wblog_post_page_cover container bg-white'"/>
	
	                    <div class="container text-center position-relative h-100 d-flex flex-column flex-grow-1 justify-content-around">
	                        <a id="o_wblog_post_content_jump" href="#o_wblog_post_main" class="css_editable_mode_hidden justify-content-center align-items-center rounded-circle mx-auto text-decoration-none">
	                            <i class="fa fa-angle-down fa-3x text-white" aria-label="To blog content" title="To blog content"/>
	                        </a>
	                    </div>
	                </t>
	            </div>
        </section>
	    </xpath>
	    </template>

	<template id="website_blog.blog_post_content" name="Blog post content">
    <t t-if="opt_blog_post_breadcrumb and not opt_blog_post_regular_cover" t-call="website_blog.post_breadcrumbs">
        <t t-set="additionnal_classes" t-value="'mb-3 bg-transparent'"></t>
    </t>
    <div t-field="blog_post.content"
        data-editor-message="WRITE HERE OR DRAG BUILDING BLOCKS"
        t-attf-class="o_wblog_post_content_field #{'js_tweet' if opt_blog_post_select_to_tweet else ''} #{'js_comment' if opt_blog_post_select_to_comment else ''} #{'o_wblog_read_text' if opt_blog_post_readable else ''}"/>
	
	
	   <section class="o_wblog_post_top blog-page-snippet">
			<div class="container">
				<div class="row justify-content-center">

					<section class="container mx-auto" id="o_wblog_post_main" >
			        	<div class="blog-page-content">
		  					<div class="Mask mt48 mb48">
		  					 	<div t-if="blog_post.employee_id.operating_unit_ids">
		  					 		<t t-set="emp" t-value="blog_post.employee_id.operating_unit_ids[0]"/>
			  						<div class="DOCTEUR-VTRINAIRE-Copy mb8">DOCTEUR VÉTÉRINAIRE</div>
			  						<div class="Pierre-Michel-Copy" t-field="blog_post.employee_id.name"></div>
			  						<div class="Clinique mt32">Clinique</div>
			  						<div class="Clinique-vtrinaire mt8" t-field="emp.name"></div>
			  						<a t-if="emp.name" class="btn btn-link mt16 En-savoir-plus pl-0" t-attf-href="/clinic-detail/clinic-pratice/#{slug(emp)}">
										<span class="mr8">Voir la fiche clinique</span>
										<img src="/website_argos/static/src/img/right.png" class="img img-fluid"/>
									</a>
									<div class=" mask_image">
					        			<img class="img img-fluid" t-att-src="website.image_url(blog_post.employee_id, 'image_1920')" />
						        	</div>
		  					 	</div>
		  					</div>

			        	</div>
			        </section>
			        
			    </div>
			</div>
		</section>
	
	<div class="b-in-hr">
		<div class="s_hr text-left pt32" data-name="Separator">
	        <hr class="border-600 s_hr_1px s_hr_solid w-75 mx-auto"/>
	    </div>
	      </div>
	
	<div class="b-in-social">
			<div class="text-center pt32 pb32">
		        <span class="text-so">Partager l'article</span>
		    </div>
            <div class="o_wblog_social_links d-flex flex-wrap text-center justify-content-center">
                <t t-set="classes">bg-100 mx-1 mb-2 rounded-circle d-flex align-items-center justify-content-center text-decoration-none</t>
                <a href="#" aria-label="Facebook" title="Share on Facebook" t-attf-class="o_facebook #{classes}"><i class="fa fa-facebook text-facebook"/></a>
                <a href="#" aria-label="Twitter" title="Share on Twitter" t-attf-class="o_twitter #{classes}"><i class="fa fa-twitter text-twitter" aria-label="Twitter" title="Twitter"/></a>
                <a href="#" aria-label="LinkedIn" title="Share on LinkedIn" t-attf-class="o_linkedin #{classes}"><i class="fa fa-linkedin text-linkedin" aria-label="LinkedIn" title="LinkedIn"/></a>
            </div>
        </div>
	
</template>
	
<template id="website_blog.opt_blog_post_read_next" name="Read Next Article" inherit_id="website_blog.blog_post_complete" active="True" customize_show="True">
    <xpath expr="//section[@id='o_wblog_post_footer']" position="inside">
        <div t-if="next_post" class="css_editable_mode_hidden mt-2">
            <t t-if="opt_blog_post_regular_cover">
                <t t-if="opt_blog_post_sidebar" t-set="readableClass" t-value="'o_wblog_read_with_sidebar'"/>
                <t t-else="" t-set="readableClass" t-value="'o_wblog_read'"/>

                <div class="container">
                    <div t-attf-class="mb-4 mx-auto #{ readableClass if opt_blog_post_readable else ''}">
                        <hr/>
                        <div class="d-flex text-right py-4">
                            <div class="flex-grow-1 pr-3">
                                <span class="bg-gamma h6 d-inline-block py-1 px-2 rounded-sm">Read Next</span>
                                <a t-att-href="'/blog/' + slug(next_post.blog_id) + '/post/' + slug(next_post)" t-att-title="'Read next' + next_post.name">
                                    <div t-field="next_post.name" id="o_wblog_post_name" t-att-data-blog-id="next_post.id" placeholder="Blog Post Title" class="h2"/>
                                    <div t-field="next_post.subtitle" id="o_wblog_post_subtitle" placeholder="Subtitle" class="lead"/>
                                </a>
                            </div>
                            <a t-att-href="'/blog/' + slug(next_post.blog_id) + '/post/' + slug(next_post)" t-att-title="'Read next' + next_post.name" class="w-25">
                                <t t-call="website.record_cover">
                                    <t t-set="_record" t-value="next_post"/>
                                    <t t-set="additionnal_classes" t-value="'rounded shadow-sm overflow-hidden h-100'"/>
                                </t>
                            </a>
                        </div>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="container read-next-post">
                    <div t-attf-class="mb-4 mx-auto #{ readableClass if opt_blog_post_readable else ''}">
                        <hr/>
                        <div class="next">
                        	<div class="text-center pull-left" style="display: contents;">
                        		<a href="/blog">
                        			<span class="o_wblog_return_name">Retour au Blog</span>
                               </a>
                               </div>
                               <div class="text-right pull-right">
                                <a t-att-href="'/blog/' + slug(next_post.blog_id) + '/post/' + slug(next_post)" t-att-title="'Read next' + next_post.name">
	                                    <span t-field="next_post.name" id="o_wblog_post_name" t-att-data-blog-id="next_post.id" placeholder="Blog Post Title" class="h2"/>
	                                </a>
                                </div>                               
                        	</div>                        
                         <hr/>
                    </div>
                </div>
            </t>
        </div>
    </xpath>
</template>


	
</odoo>